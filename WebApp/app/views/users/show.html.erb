<div class="min-h-screen">
  <!-- Ambient Background -->
  <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-teal-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Main Layout: Sidebar + Content -->
    <div class="flex flex-col lg:flex-row gap-8">
      
      <!-- Left Sidebar - Profile Card (Sticky) -->
      <aside class="lg:w-80 flex-shrink-0">
        <div class="lg:sticky lg:top-24 space-y-6">
          <!-- Profile Card -->
          <div class="relative group">
            <!-- Glow effect -->
            <div class="absolute -inset-1 bg-gradient-to-r from-emerald-500 via-teal-500 to-cyan-500 rounded-3xl blur-lg opacity-25 group-hover:opacity-40 transition-opacity duration-500"></div>
            
            <div class="relative bg-white dark:bg-gray-900 rounded-3xl overflow-hidden border border-gray-200/50 dark:border-gray-700/50 shadow-xl">
              <!-- Cover gradient -->
              <div class="h-24 bg-gradient-to-br from-emerald-400 via-teal-500 to-cyan-500 relative overflow-hidden">
                <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-30"></div>
              </div>
              
              <!-- Avatar -->
              <div class="relative -mt-14 px-6">
                <div class="relative inline-block">
                  <div class="absolute -inset-1 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-full blur opacity-50"></div>
                  <% if @user.avatar.attached? %>
                    <%= image_tag url_for(@user.avatar.variant(resize_to_fill: [140,140])), 
                        class: "relative w-28 h-28 rounded-full object-cover ring-4 ring-white dark:ring-gray-900 shadow-xl" %>
                  <% else %>
                    <div class="relative w-28 h-28 rounded-full bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center ring-4 ring-white dark:ring-gray-900 shadow-xl">
                      <span class="text-4xl font-black text-white"><%= @user.username&.first&.upcase || 'U' %></span>
                    </div>
                  <% end %>
                  
                  <!-- Online indicator -->
                  <div class="absolute bottom-1 right-1 w-5 h-5 bg-emerald-500 rounded-full ring-3 ring-white dark:ring-gray-900"></div>
                </div>
              </div>
              
              <!-- User Info -->
              <div class="px-6 pt-4 pb-6">
                <h1 class="text-2xl font-black text-gray-900 dark:text-white mb-1 tracking-tight">
                  <%= @user.username %>
                </h1>
                
                <% if @user.first_name.present? || @user.last_name.present? %>
                  <p class="text-gray-500 dark:text-gray-400 text-sm mb-4">
                    <%= [@user.first_name, @user.last_name].compact.join(' ') %>
                  </p>
                <% end %>
                
                <!-- Member since badge -->
                <div class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gray-100 dark:bg-gray-800 rounded-full text-xs font-medium text-gray-600 dark:text-gray-300 mb-5">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <%= t('users.member_since') %> <%= @user.created_at.strftime('%b %Y') %>
                </div>
                
                <!-- Stats Grid -->
                <div class="grid grid-cols-3 gap-3 mb-6">
                  <div class="text-center p-3 bg-gradient-to-br from-emerald-50 to-teal-50 dark:from-emerald-900/20 dark:to-teal-900/20 rounded-2xl">
                    <span class="block text-2xl font-black text-emerald-600 dark:text-emerald-400"><%= @recipes.count %></span>
                    <span class="text-xs font-medium text-gray-500 dark:text-gray-400"><%= t('users.recipes_short') %></span>
                  </div>
                  <% if user_signed_in? && current_user == @user %>
                    <%= link_to followers_user_path(@user), data: { turbo_frame: "_top" }, class: "text-center p-3 bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl hover:scale-105 transition-transform cursor-pointer" do %>
                      <span id="followers-count-<%= @user.id %>" class="block text-2xl font-black text-blue-600 dark:text-blue-400"><%= @user.followers.count %></span>
                      <span class="text-xs font-medium text-gray-500 dark:text-gray-400"><%= t('follows.followers_short') %></span>
                    <% end %>
                  <% else %>
                    <div class="text-center p-3 bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl">
                      <span id="followers-count-<%= @user.id %>" class="block text-2xl font-black text-blue-600 dark:text-blue-400"><%= @user.followers.count %></span>
                      <span class="text-xs font-medium text-gray-500 dark:text-gray-400"><%= t('follows.followers_short') %></span>
                    </div>
                  <% end %>
                  <div class="text-center p-3 bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-2xl">
                    <span class="block text-2xl font-black text-purple-600 dark:text-purple-400"><%= @user.following.count %></span>
                    <span class="text-xs font-medium text-gray-500 dark:text-gray-400"><%= t('follows.following_short') %></span>
                  </div>
                </div>
                
                <!-- Action Buttons -->
                <% if user_signed_in? && current_user == @user %>
                  <%= link_to edit_user_registration_path, 
                      class: "flex items-center justify-center gap-2 w-full px-5 py-3 bg-gradient-to-r from-emerald-500 to-teal-500 text-white font-bold rounded-2xl shadow-lg shadow-emerald-500/25 hover:shadow-xl hover:shadow-emerald-500/30 hover:-translate-y-0.5 transition-all duration-300" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    <%= t('navigation.edit_profile') %>
                  <% end %>
                <% elsif user_signed_in? && current_user != @user %>
                  <div class="space-y-3">
                    <div id="follow-button-<%= @user.id %>" class="w-full">
                      <%= render 'follows/button', user: @user %>
                    </div>
                    <%= button_to conversations_path(recipient_id: @user.id), method: :post, 
                        class: "flex items-center justify-center gap-2 w-full px-5 py-3 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 font-bold rounded-2xl hover:bg-gray-200 dark:hover:bg-gray-700 transition-all duration-300" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                      </svg>
                      <%= t('conversations.send_message') %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Quick Stats Card -->
          <div class="bg-white dark:bg-gray-900 rounded-2xl p-5 border border-gray-200/50 dark:border-gray-700/50 shadow-lg">
            <h3 class="text-sm font-bold text-gray-400 dark:text-gray-500 uppercase tracking-wider mb-4"><%= t('users.activity') %></h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-xl bg-rose-100 dark:bg-rose-900/30 flex items-center justify-center">
                    <svg class="w-5 h-5 text-rose-500" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-gray-600 dark:text-gray-300"><%= t('users.likes_given') %></span>
                </div>
                <span class="text-lg font-bold text-gray-900 dark:text-white"><%= @user.likes.count %></span>
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                    <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-gray-600 dark:text-gray-300"><%= t('users.comments_made') %></span>
                </div>
                <span class="text-lg font-bold text-gray-900 dark:text-white"><%= @user.comments.count %></span>
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-xl bg-violet-100 dark:bg-violet-900/30 flex items-center justify-center">
                    <svg class="w-5 h-5 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-gray-600 dark:text-gray-300"><%= t('users.favorites_saved') %></span>
                </div>
                <span class="text-lg font-bold text-gray-900 dark:text-white"><%= @user.favorites.count %></span>
              </div>
            </div>
          </div>
        </div>
      </aside>
      
      <!-- Main Content -->
      <main class="flex-1 min-w-0">
        <!-- Notifications (only for current user) -->
        <% if user_signed_in? && current_user == @user && @user.notifications.unread.any? %>
          <div class="mb-8 bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 rounded-2xl p-5 border border-amber-200/50 dark:border-amber-700/30">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-amber-500 flex items-center justify-center shadow-lg shadow-amber-500/25">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900 dark:text-white"><%= t('notifications.title') %></h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400"><%= @user.unread_notifications.count %> <%= t('notifications.unread') %></p>
                </div>
              </div>
              <%= link_to notifications_path, class: "text-sm font-semibold text-amber-600 hover:text-amber-700 dark:text-amber-400" do %>
                <%= t('notifications.view_all') %> â†’
              <% end %>
            </div>
            <div class="space-y-2">
              <% @user.notifications.unread.recent.limit(3).each do |notification| %>
                <div class="flex items-center gap-3 p-3 bg-white dark:bg-gray-800 rounded-xl">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 dark:text-white truncate"><%= notification.message %></p>
                    <p class="text-xs text-gray-500 dark:text-gray-400"><%= time_ago_in_words(notification.created_at) %> <%= t('time.ago') %></p>
                  </div>
                  <%= button_to mark_read_notification_path(notification), method: :patch, class: "p-2 text-gray-400 hover:text-emerald-500 transition-colors" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <!-- Recipes Section -->
        <div class="bg-white dark:bg-gray-900 rounded-3xl border border-gray-200/50 dark:border-gray-700/50 shadow-xl overflow-hidden">
          <!-- Header -->
          <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-800">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center shadow-lg shadow-emerald-500/25">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                </div>
                <div>
                  <h2 class="text-xl font-black text-gray-900 dark:text-white"><%= t('users.recipe_collection') %></h2>
                  <p class="text-sm text-gray-500 dark:text-gray-400"><%= @recipes.count %> <%= t('users.recipes_published') %></p>
                </div>
              </div>
              <% if user_signed_in? && current_user == @user %>
                <%= link_to new_recipe_path, class: "flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-emerald-500 to-teal-500 text-white text-sm font-bold rounded-xl shadow-lg shadow-emerald-500/25 hover:shadow-xl hover:-translate-y-0.5 transition-all" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                  </svg>
                  <%= t('recipes.new') %>
                <% end %>
              <% end %>
            </div>
          </div>
          
          <!-- Recipes Grid -->
          <div class="p-6">
            <% if @recipes.any? %>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                <% @recipes.each_with_index do |recipe, index| %>
                  <%= link_to recipe_path(recipe), data: { turbo_frame: "_top" }, 
                      class: "group relative bg-gray-50 dark:bg-gray-800 rounded-2xl overflow-hidden hover:shadow-2xl hover:-translate-y-1 transition-all duration-300",
                      style: "animation: fadeInUp 0.5s ease-out #{index * 0.05}s both" do %>
                    <!-- Image -->
                    <div class="aspect-[4/3] relative overflow-hidden">
                      <% if recipe.cover_photo.present? %>
                        <%= image_tag url_for(recipe.cover_photo.variant(resize_to_fill: [400,300])), 
                            class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                      <% elsif recipe.photos.attached? && recipe.photos.first.present? %>
                        <%= image_tag url_for(recipe.photos.first.variant(resize_to_fill: [400,300])), 
                            class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                      <% else %>
                        <div class="w-full h-full bg-gradient-to-br from-emerald-100 to-teal-100 dark:from-emerald-900/30 dark:to-teal-900/30 flex items-center justify-center">
                          <svg class="w-16 h-16 text-emerald-300 dark:text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                        </div>
                      <% end %>
                      
                      <!-- Gradient overlay -->
                      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                      
                      <!-- Category badge -->
                      <% if recipe.category %>
                        <div class="absolute top-3 left-3">
                          <span class="px-2.5 py-1 bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm rounded-lg text-xs font-bold text-gray-700 dark:text-gray-200">
                            <%= recipe.category&.name %>
                          </span>
                        </div>
                      <% end %>
                      
                      <!-- Stats overlay -->
                      <div class="absolute bottom-3 left-3 right-3 flex items-center gap-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <div class="flex items-center gap-1.5 text-white text-sm">
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                          </svg>
                          <span class="font-semibold"><%= recipe.likes_count %></span>
                        </div>
                        <div class="flex items-center gap-1.5 text-white text-sm">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                          </svg>
                          <span class="font-semibold"><%= recipe.comments_count %></span>
                        </div>
                      </div>
                    </div>
                    
                    <!-- Content -->
                    <div class="p-4">
                      <h3 class="font-bold text-gray-900 dark:text-white mb-2 line-clamp-1 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors">
                        <%= recipe.title %>
                      </h3>
                      <div class="flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
                        <% if recipe.time_to_make.present? && recipe.time_to_make > 0 %>
                          <div class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span><%= recipe.time_to_make %> min</span>
                          </div>
                        <% end %>
                        <% if recipe.difficulty.present? && recipe.difficulty > 0 %>
                          <div class="flex items-center gap-1">
                            <% recipe.difficulty.times do %>
                              <svg class="w-3 h-3 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                              </svg>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <!-- Empty State -->
              <div class="text-center py-16">
                <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-gradient-to-br from-emerald-100 to-teal-100 dark:from-emerald-900/30 dark:to-teal-900/30 flex items-center justify-center">
                  <svg class="w-12 h-12 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2"><%= t('users.no_recipes_yet') %></h3>
                <p class="text-gray-500 dark:text-gray-400 mb-6">
                  <% if user_signed_in? && current_user == @user %>
                    <%= t('users.start_sharing') %>
                  <% else %>
                    <%= t('users.no_recipes_published') %>
                  <% end %>
                </p>
                <% if user_signed_in? && current_user == @user %>
                  <%= link_to new_recipe_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-500 text-white font-bold rounded-xl shadow-lg shadow-emerald-500/25 hover:shadow-xl hover:-translate-y-0.5 transition-all" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    <%= t('users.publish_first_recipe') %>
                  <% end %>
                <% end %>
              </div>
