<div class="max-w-5xl mx-auto mb-20 animate-scale-in">
  <!-- Profile Header with unique design -->
  <div class="bg-card rounded-3xl shadow-2xl overflow-hidden border-2 border-default mb-6">
    <div class="bg-gradient-primary px-8 py-6">
      <div class="flex flex-col md:flex-row items-start md:items-center gap-6">
        <!-- Avatar with decorative ring -->
        <div class="relative flex-shrink-0">
          <div class="absolute -inset-2 bg-white rounded-full opacity-20"></div>
          <% if @user.avatar.attached? %>
            <%= image_tag url_for(@user.avatar.variant(resize_to_fill: [120,120])), class: "relative h-28 w-28 md:h-32 md:w-32 rounded-full object-cover ring-4 ring-white/50" %>
          <% else %>
            <div class="relative h-28 w-28 md:h-32 md:w-32 rounded-full bg-white flex items-center justify-center text-pink-600 font-black text-3xl ring-4 ring-white/50">
              <%= @user.username&.first&.upcase || 'U' %>
            </div>
          <% end %>
        </div>

        <!-- Profile Info -->
        <div class="flex-1 min-w-0 text-white">
          <div class="flex flex-col md:flex-row md:items-center gap-4 mb-4">
            <h1 class="text-3xl md:text-4xl font-black"><%= @user.username %></h1>
            <% if user_signed_in? && current_user == @user %>
              <%= link_to edit_user_registration_path, class: "inline-flex items-center gap-2 px-5 py-2.5 text-sm font-bold bg-white/20 backdrop-blur-sm border border-white/30 rounded-xl hover:bg-white/30 transition-smooth" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span><%= t('navigation.edit_profile') %></span>
              <% end %>
            <% elsif user_signed_in? && current_user != @user %>
              <div class="flex items-center gap-3">
                <div id="follow-button-<%= @user.id %>">
                  <%= render 'follows/button', user: @user %>
                </div>
                <%= button_to conversations_path(recipient_id: @user.id), method: :post, 
                    class: "inline-flex items-center gap-2 px-5 py-2.5 text-sm font-bold bg-white/20 backdrop-blur-sm border border-white/30 rounded-xl hover:bg-white/30 transition-smooth" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                  <span><%= t('conversations.send_message') %></span>
                <% end %>
              </div>
            <% end %>
          </div>

          <!-- Stats with icons -->
          <div class="flex gap-6 mb-4">
            <div class="flex items-center gap-2">
              <div class="p-2 rounded-lg bg-white/20 backdrop-blur-sm">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
              <div>
                <span class="block font-black text-xl"><%= @recipes.count %></span>
                <span class="text-xs text-white/80"><%= t('users.recipes_count') %></span>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <div class="p-2 rounded-lg bg-white/20 backdrop-blur-sm">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
              </div>
              <div>
                <span class="block font-black text-xl"><%= @user.likes.count %></span>
                <span class="text-xs text-white/80"><%= t('recipes.show.likes_count') %></span>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <div class="p-2 rounded-lg bg-white/20 backdrop-blur-sm">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </div>
              <div>
                <span class="block font-black text-xl"><%= @user.comments.count %></span>
                <span class="text-xs text-white/80"><%= t('recipes.show.comments_count') %></span>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <div class="p-2 rounded-lg bg-white/20 backdrop-blur-sm">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <div>
                <% if user_signed_in? && current_user == @user %>
                  <%= link_to followers_user_path(@user), data: { turbo_frame: "_top" }, class: "hover:underline" do %>
                    <span id="followers-count-<%= @user.id %>" class="block font-black text-xl"><%= @user.followers.count %></span>
                    <span class="text-xs text-white/80"><%= t('follows.followers') %></span>
                  <% end %>
                <% else %>
                  <span id="followers-count-<%= @user.id %>" class="block font-black text-xl"><%= @user.followers.count %></span>
                  <span class="text-xs text-white/80"><%= t('follows.followers') %></span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Notifications Section (only for current user) -->
  <% if user_signed_in? && current_user == @user && @user.notifications.unread.any? %>
    <div class="bg-card rounded-3xl shadow-2xl overflow-hidden border-2 border-default mb-6">
      <div class="px-6 py-5 border-b border-default bg-card">
        <h2 class="text-2xl font-black text-primary-content flex items-center gap-2">
          <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
          <%= t('notifications.title') %>
          <span class="ml-2 px-2 py-1 text-xs font-bold bg-error text-white rounded-full">
            <%= @user.unread_notifications.count %>
          </span>
        </h2>
      </div>
      <div class="p-6 space-y-4">
        <% @user.notifications.unread.recent.limit(10).each do |notification| %>
          <div class="p-4 rounded-xl border-2 border-default bg-card hover:shadow-lg transition-all">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <h3 class="font-bold text-primary-content mb-1"><%= notification.title %></h3>
                <p class="text-sm text-primary-content"><%= notification.message %></p>
                <% if notification.recipe_id.present? && notification.recipe %>
                  <div class="mt-2 p-2 bg-card border border-default rounded-lg">
                    <p class="text-xs font-semibold text-secondary-content"><%= t('notifications.recipe_preview') %>:</p>
                    <p class="text-sm text-primary-content"><%= notification.recipe.title %></p>
                  </div>
                <% end %>
                <p class="text-xs text-secondary-content mt-2"><%= time_ago_in_words(notification.created_at) %> <%= t('time.ago') %></p>
              </div>
              <%= button_to mark_read_notification_path(notification), method: :patch, 
                  class: "p-2 text-secondary-content hover:text-primary transition-colors", 
                  title: t('notifications.mark_read') do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Recipes Grid with unique cookbook style -->
  <div class="bg-card rounded-3xl shadow-2xl overflow-hidden border-2 border-default">
    <div class="px-6 py-5 border-b border-default bg-card">
      <h2 class="text-2xl font-black text-primary-content flex items-center gap-2">
        <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        <%= t('users.recipe_collection') %>
      </h2>
    </div>
    <div class="p-6">
      <% if @recipes.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-5">
          <% @recipes.each_with_index do |recipe, index| %>
            <%= link_to recipe_path(recipe), data: { turbo_frame: "_top" }, class: "group relative aspect-square overflow-hidden rounded-2xl bg-gradient-to-br from-pink-50 to-orange-50 border-2 border-orange-100 hover:border-pink-300 transition-smooth hover-lift shadow-md hover:shadow-xl" do %>
              <% if recipe.cover_photo.present? %>
                <div class="relative w-full h-full">
                  <%= image_tag url_for(recipe.cover_photo.variant(resize_to_fill: [400,400])), 
                      class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                </div>
              <% elsif recipe.photos.attached? && recipe.photos.first.present? %>
                <div class="relative w-full h-full">
                  <%= image_tag url_for(recipe.photos.first.variant(resize_to_fill: [400,400])), 
                      class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                </div>
              <% else %>
                <div class="w-full h-full flex flex-col items-center justify-center p-4">
                  <div class="p-4 rounded-full bg-gradient-to-br from-pink-200 to-orange-200 mb-3">
                    <svg class="h-10 w-10 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                  </div>
                  <p class="text-sm font-bold text-gray-700 text-center line-clamp-2"><%= recipe.title %></p>
                </div>
              <% end %>
              <!-- Recipe info overlay -->
              <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/80 to-transparent">
                <h3 class="text-white font-bold text-sm mb-1 line-clamp-1"><%= recipe.title %></h3>
                <div class="flex items-center gap-3 text-white/90 text-xs">
                  <div class="flex items-center gap-1">
                    <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                    </svg>
                    <span class="font-semibold"><%= recipe.likes_count %></span>
                  </div>
                  <% if recipe.category %>
                    <span class="px-2 py-0.5 rounded-full bg-pink-500/80 text-xs font-semibold"><%= recipe.category&.display_name %></span>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
    <% else %>
      <div class="text-center py-16">
        <svg class="h-16 w-16 mx-auto text-secondary-content mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        <p class="text-lg font-semibold text-primary-content mb-2"><%= t('users.no_recipes_yet') %></p>
        <p class="text-sm text-secondary-content">
          <% if user_signed_in? && current_user == @user %>
            <%= link_to t('users.publish_first_recipe'), new_recipe_path, class: "text-link hover:text-primary font-semibold" %>
          <% else %>
            <%= t('users.no_recipes_published') %>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>

