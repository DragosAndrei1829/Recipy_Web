<%# Left Sidebar - Profile Card %>
<div class="sidebar-card overflow-hidden">
  <!-- Cover gradient -->
  <div class="h-16 xl:h-20 bg-gradient-to-br from-emerald-400 via-teal-500 to-cyan-500 relative">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"40\" height=\"40\" viewBox=\"0 0 40 40\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M20 20v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-50"></div>
  </div>
  
  <!-- Avatar & User Info -->
  <div class="px-3 xl:px-4 -mt-6 xl:-mt-8 relative z-10">
    <!-- Avatar with online indicator -->
    <div class="relative w-14 h-14 xl:w-20 xl:h-20 mb-2 xl:mb-3">
      <% if user.avatar.attached? %>
        <%= image_tag url_for(user.avatar.variant(resize_to_fill: [80,80])), 
            class: "w-14 h-14 xl:w-20 xl:h-20 rounded-full object-cover ring-3 xl:ring-4 ring-white dark:ring-gray-900 shadow-lg" %>
      <% else %>
        <div class="w-14 h-14 xl:w-20 xl:h-20 rounded-full bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center ring-3 xl:ring-4 ring-white dark:ring-gray-900 shadow-lg">
          <span class="text-xl xl:text-2xl font-black text-white"><%= user.username&.first&.upcase || 'U' %></span>
        </div>
      <% end %>
      <!-- Online indicator - positioned relative to avatar -->
      <span class="absolute bottom-0 right-0 w-3 h-3 xl:w-4 xl:h-4 bg-emerald-500 rounded-full ring-2 ring-white dark:ring-gray-900"></span>
    </div>
    
    <!-- Username -->
    <h1 class="text-base xl:text-lg font-black text-gray-900 dark:text-white mb-0.5 truncate">
      <%= user.username %>
    </h1>
    <% if user.first_name.present? || user.last_name.present? %>
      <p class="text-xs text-gray-500 dark:text-gray-400 mb-1 truncate">
        <%= [user.first_name, user.last_name].compact.join(' ') %>
      </p>
    <% end %>
    
    <!-- Member since -->
    <div class="flex items-center gap-1 text-[10px] text-gray-400 dark:text-gray-500 mb-3">
      <svg class="w-3 h-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <span class="truncate"><%= t('users.member_since') %> <%= user.created_at.strftime('%b %Y') %></span>
    </div>
    
    <!-- Quick Stats - Compact with icons -->
    <div class="flex justify-between items-center mb-2 xl:mb-3 py-1.5 xl:py-2 px-1 border-y border-gray-100 dark:border-gray-800">
      <div class="flex items-center gap-1" title="Rețete">
        <svg class="w-3.5 h-3.5 xl:w-4 xl:h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        <span class="text-sm xl:text-base font-black text-emerald-600 dark:text-emerald-400"><%= user.recipes.count %></span>
      </div>
      <div class="flex items-center gap-1" title="Urmăritori">
        <svg class="w-3.5 h-3.5 xl:w-4 xl:h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span class="text-sm xl:text-base font-black text-blue-600 dark:text-blue-400"><%= user.followers.count %></span>
      </div>
      <div class="flex items-center gap-1" title="Urmărești">
        <svg class="w-3.5 h-3.5 xl:w-4 xl:h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
        </svg>
        <span class="text-sm xl:text-base font-black text-purple-600 dark:text-purple-400"><%= user.following.count %></span>
      </div>
    </div>
    
    <!-- Action Buttons -->
    <% if user_signed_in? && current_user == user %>
      <%= link_to edit_user_registration_path, 
          class: "flex items-center justify-center gap-1.5 xl:gap-2 w-full px-3 xl:px-4 py-2 xl:py-2.5 bg-gradient-to-r from-emerald-500 to-teal-500 text-white text-xs xl:text-sm font-bold rounded-lg xl:rounded-xl shadow-lg shadow-emerald-500/20 hover:shadow-xl hover:-translate-y-0.5 transition-all" do %>
        <svg class="w-3.5 h-3.5 xl:w-4 xl:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        <span class="truncate"><%= t('navigation.edit_profile') %></span>
      <% end %>
    <% elsif user_signed_in? && current_user != user %>
      <div class="space-y-2">
        <div id="follow-button-<%= user.id %>" class="w-full">
          <%= render 'follows/button', user: user %>
        </div>
        <%= button_to conversations_path(recipient_id: user.id), method: :post, 
            class: "flex items-center justify-center gap-2 w-full px-4 py-2.5 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 text-sm font-semibold rounded-xl hover:bg-gray-200 dark:hover:bg-gray-700 transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <%= t('conversations.message') %>
        <% end %>
        <!-- Report Button -->
        <div class="pt-1">
          <%= render 'reports/report_button', reportable: user %>
        </div>
      </div>
    <% else %>
      <%= link_to new_user_session_path, 
          class: "flex items-center justify-center gap-2 w-full px-4 py-2.5 bg-gradient-to-r from-emerald-500 to-teal-500 text-white text-sm font-bold rounded-xl" do %>
        <%= t('navigation.login') %>
      <% end %>
    <% end %>
  </div>
</div>

<%# Additional info card %>
<div class="sidebar-card mt-4">
  <div class="p-4">
    <h3 class="text-xs font-bold text-gray-400 dark:text-gray-500 uppercase tracking-wider mb-3">
      <%= t('users.public_activity') %>
    </h3>
    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-lg bg-rose-100 dark:bg-rose-900/30 flex items-center justify-center">
            <svg class="w-4 h-4 text-rose-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
          </div>
          <span class="text-sm text-gray-600 dark:text-gray-300"><%= t('users.total_likes_received') %></span>
        </div>
        <span class="text-sm font-bold text-gray-900 dark:text-white"><%= user.recipes.sum(:likes_count) %></span>
      </div>
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-lg bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
            <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <span class="text-sm text-gray-600 dark:text-gray-300"><%= t('users.total_comments_received') %></span>
        </div>
        <span class="text-sm font-bold text-gray-900 dark:text-white"><%= user.recipes.sum(:comments_count) %></span>
      </div>
    </div>
  </div>
</div>

