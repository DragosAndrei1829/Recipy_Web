<%# Left Sidebar - Profile Card %>
<div class="sidebar-card overflow-hidden">
  <!-- Cover gradient -->
  <div class="h-20 bg-gradient-to-br from-emerald-400 via-teal-500 to-cyan-500 relative">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"40\" height=\"40\" viewBox=\"0 0 40 40\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M20 20v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-50"></div>
  </div>
  
  <!-- Avatar -->
  <div class="px-4 -mt-10 relative z-10">
    <div class="relative inline-block">
      <% if user.avatar.attached? %>
        <%= image_tag url_for(user.avatar.variant(resize_to_fill: [96,96])), 
            class: "w-24 h-24 rounded-full object-cover ring-4 ring-white dark:ring-gray-900 shadow-lg" %>
      <% else %>
        <div class="w-24 h-24 rounded-full bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center ring-4 ring-white dark:ring-gray-900 shadow-lg">
          <span class="text-3xl font-black text-white"><%= user.username&.first&.upcase || 'U' %></span>
        </div>
      <% end %>
      <!-- Online indicator -->
      <div class="absolute bottom-1 right-1 w-4 h-4 bg-emerald-500 rounded-full ring-2 ring-white dark:ring-gray-900"></div>
    </div>
  </div>
  
  <!-- User Info -->
  <div class="px-4 pt-3 pb-5">
    <h1 class="text-xl font-black text-gray-900 dark:text-white mb-0.5 truncate">
      <%= user.username %>
    </h1>
    <% if user.first_name.present? || user.last_name.present? %>
      <p class="text-sm text-gray-500 dark:text-gray-400 mb-2 truncate">
        <%= [user.first_name, user.last_name].compact.join(' ') %>
      </p>
    <% end %>
    
    <!-- Member since -->
    <div class="flex items-center gap-1.5 text-xs text-gray-400 dark:text-gray-500 mb-4">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <%= t('users.member_since') %> <%= user.created_at.strftime('%b %Y') %>
    </div>
    
    <!-- Quick Stats -->
    <div class="grid grid-cols-3 gap-2 mb-4 py-3 border-y border-gray-100 dark:border-gray-800">
      <div class="text-center">
        <span class="block text-lg font-black text-emerald-600 dark:text-emerald-400"><%= user.recipes.count %></span>
        <span class="text-[10px] font-medium text-gray-500 dark:text-gray-400 uppercase"><%= t('users.recipes_short') %></span>
      </div>
      <div class="text-center">
        <span class="block text-lg font-black text-blue-600 dark:text-blue-400"><%= user.followers.count %></span>
        <span class="text-[10px] font-medium text-gray-500 dark:text-gray-400 uppercase"><%= t('follows.followers_short') %></span>
      </div>
      <div class="text-center">
        <span class="block text-lg font-black text-purple-600 dark:text-purple-400"><%= user.following.count %></span>
        <span class="text-[10px] font-medium text-gray-500 dark:text-gray-400 uppercase"><%= t('follows.following_short') %></span>
      </div>
    </div>
    
    <!-- Action Buttons -->
    <% if user_signed_in? && current_user == user %>
      <%= link_to edit_user_registration_path, 
          class: "flex items-center justify-center gap-2 w-full px-4 py-2.5 bg-gradient-to-r from-emerald-500 to-teal-500 text-white text-sm font-bold rounded-xl shadow-lg shadow-emerald-500/20 hover:shadow-xl hover:-translate-y-0.5 transition-all" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        <%= t('navigation.edit_profile') %>
      <% end %>
    <% elsif user_signed_in? && current_user != user %>
      <div class="space-y-2">
        <div id="follow-button-<%= user.id %>" class="w-full">
          <%= render 'follows/button', user: user %>
        </div>
        <%= button_to conversations_path(recipient_id: user.id), method: :post, 
            class: "flex items-center justify-center gap-2 w-full px-4 py-2.5 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 text-sm font-semibold rounded-xl hover:bg-gray-200 dark:hover:bg-gray-700 transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <%= t('conversations.message') %>
        <% end %>
      </div>
    <% else %>
      <%= link_to new_user_session_path, 
          class: "flex items-center justify-center gap-2 w-full px-4 py-2.5 bg-gradient-to-r from-emerald-500 to-teal-500 text-white text-sm font-bold rounded-xl" do %>
        <%= t('navigation.login') %>
      <% end %>
    <% end %>
  </div>
</div>

<%# Additional info card %>
<div class="sidebar-card mt-4">
  <div class="p-4">
    <h3 class="text-xs font-bold text-gray-400 dark:text-gray-500 uppercase tracking-wider mb-3">
      <%= t('users.public_activity') %>
    </h3>
    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-lg bg-rose-100 dark:bg-rose-900/30 flex items-center justify-center">
            <svg class="w-4 h-4 text-rose-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
          </div>
          <span class="text-sm text-gray-600 dark:text-gray-300"><%= t('users.total_likes_received') %></span>
        </div>
        <span class="text-sm font-bold text-gray-900 dark:text-white"><%= user.recipes.sum(:likes_count) %></span>
      </div>
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-lg bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
            <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <span class="text-sm text-gray-600 dark:text-gray-300"><%= t('users.total_comments_received') %></span>
        </div>
        <span class="text-sm font-bold text-gray-900 dark:text-white"><%= user.recipes.sum(:comments_count) %></span>
      </div>
    </div>
  </div>
</div>

