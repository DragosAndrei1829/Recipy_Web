<div class="max-w-7xl mx-auto py-8 px-4">
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
      <%= link_to "Moderation", admin_moderation_path, class: "hover:text-gray-700" %> 
      <span>/</span>
      <span>Rețete în carantină</span>
    </div>
    <h1 class="text-3xl font-black text-gray-900 dark:text-white flex items-center gap-3">
      <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
      </svg>
      Rețete în carantină
    </h1>
    <p class="text-gray-500 dark:text-gray-400 mt-2">Rețete care au fost puse în carantină din cauza rapoartelor</p>
  </div>

  <% if @recipes.any? %>
    <div class="grid gap-4">
      <% @recipes.each do |recipe| %>
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-red-200 dark:border-red-800 overflow-hidden">
          <div class="p-6">
            <div class="flex items-start gap-6">
              <!-- Image -->
              <% if recipe.photos.attached? && recipe.photos.first %>
                <%= image_tag url_for(recipe.photos.first.variant(resize_to_fill: [120, 120])), class: "w-24 h-24 rounded-xl object-cover flex-shrink-0" %>
              <% else %>
                <div class="w-24 h-24 rounded-xl bg-gray-200 dark:bg-gray-700 flex items-center justify-center flex-shrink-0">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
              <% end %>

              <!-- Info -->
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-red-100 text-red-700">
                    În carantină
                  </span>
                  <span class="text-xs text-gray-500">
                    <%= recipe.reports_count %> rapoarte
                  </span>
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white"><%= recipe.title %></h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  de @<%= recipe.user&.username || 'Anonim' %> • Carantinat <%= time_ago_in_words(recipe.quarantined_at) %> în urmă
                </p>
                <% if recipe.quarantine_reason.present? %>
                  <p class="text-sm text-red-600 dark:text-red-400 mt-2">
                    <strong>Motiv:</strong> <%= recipe.quarantine_reason %>
                  </p>
                <% end %>
                
                <!-- Reports summary -->
                <% if recipe.reports.any? %>
                  <div class="mt-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                    <p class="text-xs font-semibold text-gray-500 dark:text-gray-400 mb-2">Rapoarte:</p>
                    <div class="flex flex-wrap gap-2">
                      <% recipe.reports.group(:reason).count.each do |reason, count| %>
                        <span class="px-2 py-1 text-xs bg-orange-100 text-orange-700 rounded-full">
                          <%= Report::REASONS[reason.to_sym] || reason %> (<%= count %>)
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>

              <!-- Actions -->
              <div class="flex flex-col gap-2">
                <%= link_to recipe_path(recipe), target: "_blank", class: "px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors text-center" do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  Vezi
                <% end %>
                
                <%= button_to admin_release_recipe_path(recipe), method: :post, class: "px-4 py-2 text-sm font-semibold text-green-700 bg-green-100 hover:bg-green-200 rounded-lg transition-colors" do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Eliberează
                <% end %>
                
                <%= button_to admin_delete_reported_recipe_path(recipe), method: :delete, data: { confirm: "Sigur vrei să ștergi această rețetă? Acțiunea este ireversibilă." }, class: "px-4 py-2 text-sm font-semibold text-red-700 bg-red-100 hover:bg-red-200 rounded-lg transition-colors" do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  Șterge
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-12 text-center">
      <svg class="w-16 h-16 mx-auto text-green-300 dark:text-green-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-gray-500 dark:text-gray-400 text-lg">Nu există rețete în carantină</p>
      <p class="text-gray-400 dark:text-gray-500 text-sm mt-1">Toate rețetele sunt în regulă!</p>
    </div>
  <% end %>
</div>




