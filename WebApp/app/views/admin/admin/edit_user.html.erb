<div class="min-h-screen bg-page py-8 px-4">
  <div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-black bg-clip-text-primary text-transparent mb-2">
          <%= t('admin.users.edit_user') %>
        </h1>
        <p class="text-secondary-content"><%= t('admin.users.edit_subtitle') %></p>
      </div>
      <%= link_to admin_users_path, class: "px-4 py-2 bg-card border border-default text-primary-content font-semibold rounded-lg hover:bg-opacity-80 transition-all" do %>
        ‚Üê <%= t('admin.common.back') %>
      <% end %>
    </div>

    <!-- Edit Form -->
    <div class="bg-card rounded-xl shadow-lg p-6">
      <%= form_with model: @user, url: admin_update_user_path(@user), method: :patch, local: true, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :username, t('admin.users.username'), class: "block text-sm font-semibold text-primary-content mb-2" %>
          <%= f.text_field :username, class: "w-full px-4 py-2 border-2 border-default rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary bg-card text-primary-content" %>
        </div>

        <div>
          <%= f.label :email, t('admin.users.email'), class: "block text-sm font-semibold text-primary-content mb-2" %>
          <%= f.email_field :email, class: "w-full px-4 py-2 border-2 border-default rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary bg-card text-primary-content" %>
        </div>

        <div>
          <%= f.label :password, t('admin.users.new_password'), class: "block text-sm font-semibold text-primary-content mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border-2 border-default rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary bg-card text-primary-content", placeholder: t('admin.users.password_placeholder') %>
          <p class="text-xs text-secondary-content mt-1"><%= t('admin.users.password_optional') %></p>
        </div>

        <div>
          <%= f.label :password_confirmation, t('admin.users.confirm_password'), class: "block text-sm font-semibold text-primary-content mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border-2 border-default rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary bg-card text-primary-content" %>
        </div>

        <div>
          <%= f.label :admin, t('admin.users.admin_status'), class: "block text-sm font-semibold text-primary-content mb-2" %>
          <%= f.check_box :admin, class: "w-5 h-5 text-primary border-default rounded focus:ring-primary" %>
          <span class="ml-2 text-sm text-secondary-content"><%= t('admin.users.admin_status_hint') %></span>
        </div>

        <div class="flex items-center gap-4 pt-4">
          <%= f.submit t('admin.users.update'), class: "px-6 py-3 bg-gradient-primary text-white font-bold rounded-lg hover:shadow-lg transition-all hover:scale-105" %>
          <%= link_to admin_users_path, class: "px-6 py-3 bg-card border border-default text-primary-content font-bold rounded-lg hover:bg-opacity-80 transition-all" do %>
            <%= t('admin.common.cancel') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

