<div class="max-w-7xl mx-auto py-8 px-4">
  <div class="mb-8">
    <h1 class="text-3xl font-black text-gray-900 dark:text-white flex items-center gap-3">
      <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      Moderation Dashboard
    </h1>
    <p class="text-gray-500 dark:text-gray-400 mt-2">Gestionează rapoartele și conținutul problematic</p>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <a href="<%= admin_moderation_reports_path %>" class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-shadow">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-xl bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center">
          <svg class="w-7 h-7 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div>
          <p class="text-3xl font-black text-gray-900 dark:text-white"><%= @pending_reports_count %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400">Rapoarte în așteptare</p>
        </div>
      </div>
    </a>

    <a href="<%= admin_quarantined_recipes_path %>" class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-shadow">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-xl bg-red-100 dark:bg-red-900/30 flex items-center justify-center">
          <svg class="w-7 h-7 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
          </svg>
        </div>
        <div>
          <p class="text-3xl font-black text-gray-900 dark:text-white"><%= @quarantined_recipes_count %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400">Rețete în carantină</p>
        </div>
      </div>
    </a>

    <a href="<%= admin_flagged_users_path %>" class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-shadow">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-xl bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
          <svg class="w-7 h-7 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <div>
          <p class="text-3xl font-black text-gray-900 dark:text-white"><%= @flagged_users_count %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400">Utilizatori semnalați</p>
        </div>
      </div>
    </a>
  </div>

  <!-- Recent Reports -->
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
        <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Rapoarte recente
      </h2>
    </div>
    
    <% if @recent_reports.any? %>
      <div class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @recent_reports.each do |report| %>
          <div class="p-4 hover:bg-gray-50 dark:hover:bg-gray-700/50">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <span class="px-2 py-0.5 text-xs font-semibold rounded-full <%= report.reportable_type == 'Recipe' ? 'bg-blue-100 text-blue-700' : 'bg-purple-100 text-purple-700' %>">
                    <%= report.reportable_type == 'Recipe' ? 'Rețetă' : 'Utilizator' %>
                  </span>
                  <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-orange-100 text-orange-700">
                    <%= report.reason_label %>
                  </span>
                </div>
                <p class="text-sm text-gray-900 dark:text-white font-medium">
                  <% if report.reportable_type == 'Recipe' && report.reportable %>
                    "<%= report.reportable.title %>"
                  <% elsif report.reportable_type == 'User' && report.reportable %>
                    @<%= report.reportable.username %>
                  <% else %>
                    [Conținut șters]
                  <% end %>
                </p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                  Raportat de @<%= report.reporter&.username || 'Sistem' %> • <%= time_ago_in_words(report.created_at) %> în urmă
                </p>
                <% if report.description.present? %>
                  <p class="text-sm text-gray-600 dark:text-gray-300 mt-2 italic">"<%= truncate(report.description, length: 100) %>"</p>
                <% end %>
              </div>
              <div class="flex items-center gap-2">
                <%= form_with url: admin_review_report_path(report), method: :patch, local: true, class: "inline" do %>
                  <%= hidden_field_tag :status, 'resolved_valid' %>
                  <button type="submit" class="p-2 text-green-600 hover:bg-green-100 rounded-lg transition-colors" title="Validează raportul">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </button>
                <% end %>
                <%= form_with url: admin_review_report_path(report), method: :patch, local: true, class: "inline" do %>
                  <%= hidden_field_tag :status, 'dismissed' %>
                  <button type="submit" class="p-2 text-red-600 hover:bg-red-100 rounded-lg transition-colors" title="Respinge raportul">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="p-4 bg-gray-50 dark:bg-gray-700/50 text-center">
        <%= link_to "Vezi toate rapoartele →", admin_moderation_reports_path, class: "text-sm font-semibold text-blue-600 hover:text-blue-700" %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-gray-500 dark:text-gray-400">Nu există rapoarte în așteptare</p>
      </div>
    <% end %>
  </div>
</div>




