<div class="max-w-4xl mx-auto px-4 py-8 animate-fade-in">
  <!-- Header Section -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-black bg-clip-text-primary text-transparent mb-2">
      <%= t('profile.settings_title') %>
    </h1>
    <p class="text-secondary-content text-lg"><%= t('profile.settings_description') %></p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Sidebar - Profile Picture -->
    <div class="lg:col-span-1">
      <div class="bg-card rounded-3xl shadow-xl p-6 border-2 border-default sticky top-20">
        <div class="flex flex-col items-center">
          <div class="relative mb-4">
            <% if resource.avatar.attached? %>
              <%= image_tag url_for(resource.avatar.variant(resize_to_fill: [150,150])), 
                  class: 'rounded-full w-32 h-32 object-cover border-4 border-emerald-200 shadow-lg' %>
            <% else %>
              <div class="w-32 h-32 rounded-full bg-gradient-to-br from-emerald-100 to-teal-100 flex items-center justify-center border-4 border-emerald-200 shadow-lg">
                <svg class="w-16 h-16 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            <% end %>
            <div class="absolute bottom-0 right-0 bg-emerald-500 rounded-full p-2 border-4 border-white shadow-lg">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
          </div>
          <h3 class="text-xl font-bold text-primary-content mb-1"><%= resource.username || resource.email %></h3>
          <p class="text-sm text-secondary-content mb-4"><%= resource.email %></p>
          <div class="w-full">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                  html: { method: :put, multipart: true, data: { turbo: false }, class: "hidden" }, 
                  id: "avatar-form") do |f| %>
              <%= f.file_field :avatar, accept: 'image/*', 
                  class: 'hidden', 
                  id: 'avatar-input',
                  onchange: 'this.form.submit()' %>
            <% end %>
            <label for="avatar-input" class="block w-full text-center px-4 py-2.5 rounded-xl bg-gradient-primary text-white font-semibold hover:opacity-90 transition-all cursor-pointer shadow-lg hover:shadow-xl">
              <span class="flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <%= t('profile.change_photo') %>
              </span>
            </label>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Form -->
    <div class="lg:col-span-2">
      <div class="bg-card rounded-3xl shadow-xl p-8 border-2 border-default">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
              html: { method: :put, multipart: true, data: { turbo: false }, class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

              <!-- Personal Information Section -->
              <div class="mb-8">
                <h2 class="text-2xl font-bold text-primary-content mb-2 flex items-center gap-2">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                  <%= t('profile.personal_info') %>
                </h2>
                <div class="border-t border-default pt-6 space-y-5">
                  <div>
                    <%= f.label :username, t('profile.username'), class: 'block text-sm font-bold text-primary-content mb-2' %>
                <%= f.text_field :username, 
                    class: 'w-full px-4 py-3 rounded-xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 transition-smooth bg-card text-primary-content' %>
              </div>

                  <div>
                    <%= f.label :email, t('profile.email'), class: 'block text-sm font-bold text-primary-content mb-2' %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", disabled: true,
                        class: 'w-full px-4 py-3 rounded-xl border-2 border-default bg-card text-secondary-content cursor-not-allowed opacity-70' %>
                    <p class="text-xs text-secondary-content mt-1"><%= t('profile.email_cannot_change') %></p>
                  </div>

                  <div>
                    <%= f.label :phone, t('profile.phone'), class: 'block text-sm font-bold text-primary-content mb-2' %>
                <%= f.text_field :phone, 
                    class: 'w-full px-4 py-3 rounded-xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 transition-smooth bg-card text-primary-content',
                    placeholder: 'ex: +40 123 456 789' %>
              </div>
            </div>
          </div>

              <!-- Security Section -->
              <div class="mb-8">
                <h2 class="text-2xl font-bold text-primary-content mb-2 flex items-center gap-2">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                  <%= t('profile.security') %>
                </h2>
                <div class="border-t border-default pt-6 space-y-5">
                  <div>
                    <%= f.label :password, t('profile.new_password'), class: 'block text-sm font-bold text-primary-content mb-2' %>
                    <%= f.password_field :password, autocomplete: "new-password",
                        class: 'w-full px-4 py-3 rounded-xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 transition-smooth bg-card text-primary-content',
                        placeholder: t('profile.password_placeholder') %>
                    <% if @minimum_password_length %>
                      <p class="text-xs text-secondary-content mt-1">
                        <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                        <%= t('profile.password_min') %>
                      </p>
                    <% end %>
                  </div>

                  <div>
                    <%= f.label :password_confirmation, t('profile.confirm_password'), class: 'block text-sm font-bold text-primary-content mb-2' %>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                        class: 'w-full px-4 py-3 rounded-xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 transition-smooth bg-card text-primary-content' %>
                  </div>

                  <div>
                    <%= f.label :current_password, t('profile.current_password'), class: 'block text-sm font-bold text-primary-content mb-2' %>
                    <%= f.password_field :current_password, autocomplete: "current-password",
                        class: 'w-full px-4 py-3 rounded-xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 transition-smooth bg-card text-primary-content',
                        required: true %>
                    <p class="text-xs text-secondary-content mt-1 flex items-center gap-1">
                      <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                      </svg>
                      <%= t('profile.current_password_required') %>
                    </p>
                  </div>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-6 border-t border-default">
                <div class="flex gap-3">
                  <%= f.submit t('common.save'),
                      class: 'px-6 py-3 rounded-xl bg-gradient-primary text-white font-bold shadow-lg hover:shadow-xl transition-all hover:opacity-90' %>
                  <%= link_to t('common.cancel'), root_path,
                      class: 'px-6 py-3 rounded-xl bg-card border border-default text-primary-content font-semibold hover:bg-opacity-80 transition-all' %>
                </div>
                <%= link_to t('profile.change_password'), new_user_password_path,
                    class: 'text-sm text-link hover:text-primary font-semibold hover:underline transition-colors' %>
              </div>
            <% end %>

            <!-- Danger Zone -->
            <div class="mt-10 pt-8 border-t-2 border-error">
              <h3 class="text-xl font-bold text-error mb-4 flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <%= t('profile.danger_zone') %>
              </h3>
              <p class="text-sm text-secondary-content mb-4"><%= t('profile.danger_zone_description') %></p>
              <%= button_to t('profile.delete_account'), registration_path(resource_name),
                  data: { confirm: t('profile.delete_confirm') },
                  method: :delete,
                  class: 'px-6 py-3 rounded-xl bg-red-600 text-white font-semibold hover:bg-red-700 transition-all shadow-lg hover:shadow-xl' %>
            </div>
      </div>
    </div>
  </div>
</div>
