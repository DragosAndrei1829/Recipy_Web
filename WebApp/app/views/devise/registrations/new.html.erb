      <div class="space-y-3 mb-5">
        <button type="button" class="btn-outline w-full justify-center" data-oauth-trigger="Google">
          <svg class="h-4 w-4" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
          <span><%= t('devise.oauth.sign_up_with_google') %></span>
        </button>
        <button type="button" class="btn-outline w-full justify-center" data-oauth-trigger="Apple">
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.05 20.28c-.98.95-2.05.88-3.08.4-1.09-.5-2.08-.48-3.24 0-1.44.62-2.2.44-3.06-.4C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84a3.7 3.7 0 011.51 6.37c-.57 1.5-1.31 2.99-2.54 4.09zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/></svg>
          <span><%= t('devise.oauth.sign_up_with_apple') %></span>
        </button>
      </div>

      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "auth-form space-y-5" do |form| %>
        <div class="grid gap-4 md:grid-cols-2">
          <div>
            <%= form.label :email, t('devise.registrations.email'), class: "text-sm font-semibold text-primary-content mb-2 block" %>
            <%= form.email_field :email, autofocus: true, required: true %>
          </div>
          <div>
            <%= form.label :username, t('devise.registrations.username'), class: "text-sm font-semibold text-primary-content mb-2 block" %>
            <%= form.text_field :username, required: true %>
          </div>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          <div>
            <%= form.label :password, t('devise.registrations.password'), class: "text-sm font-semibold text-primary-content mb-2 block" %>
            <%= form.password_field :password, autocomplete: "new-password", required: true %>
          </div>
          <div>
            <%= form.label :password_confirmation, t('devise.registrations.password_confirmation'), class: "text-sm font-semibold text-primary-content mb-2 block" %>
            <%= form.password_field :password_confirmation, required: true %>
          </div>
        </div>

        <div class="bg-card border border-default rounded-2xl p-4 text-xs text-secondary-content space-y-1">
          <p class="font-semibold text-primary-content text-sm mb-2"><%= t('devise.registrations.password_criteria.title', default: 'Parola minim 8 caractere, include:') %></p>
          <ul class="list-disc pl-4 space-y-1">
            <li><%= t('devise.registrations.password_criteria.length') %></li>
            <li><%= t('devise.registrations.password_criteria.uppercase') %></li>
            <li><%= t('devise.registrations.password_criteria.lowercase') %></li>
            <li><%= t('devise.registrations.password_criteria.number') %></li>
            <li><%= t('devise.registrations.password_criteria.special') %></li>
          </ul>
        </div>

        <%= form.submit t('devise.registrations.sign_up'), class: "btn-primary w-full justify-center" %>
      <% end %>

      <p class="text-xs text-secondary-content mt-4">
