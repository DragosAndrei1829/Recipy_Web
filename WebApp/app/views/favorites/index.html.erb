<!-- Header -->
<div class="mb-8 text-center animate-slide-in">
  <h1 class="text-4xl font-black bg-clip-text-primary text-transparent mb-2">
    <%= t('favorites.title') %>
  </h1>
  <p class="text-secondary-content text-lg"><%= t('favorites.description') %></p>
</div>

<!-- Favorites Grid -->
<div class="space-y-6">
  <% if @favorites.any? %>
    <% @favorites.each_with_index do |recipe, index| %>
      <turbo-frame id="<%= dom_id(recipe) %>" class="stagger-item" style="animation-delay: <%= index * 0.1 %>s">
        <%= render "recipes/card", recipe: recipe %>
      </turbo-frame>
    <% end %>
  <% else %>
    <div class="text-center py-16 animate-fade-in">
      <div class="inline-block p-6 rounded-full bg-primary bg-opacity-10 mb-4">
        <svg class="h-16 w-16 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-primary-content mb-2"><%= t('favorites.empty') %></h3>
      <p class="text-secondary-content mb-6"><%= t('favorites.empty_description') %></p>
      <%= link_to recipes_path, class: "inline-flex items-center gap-2 rounded-xl bg-gradient-primary px-6 py-3 text-white font-bold shadow-lg hover:shadow-xl transition-smooth hover-lift" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span><%= t('favorites.explore_recipes') %></span>
      <% end %>
    </div>
  <% end %>
</div>

