<div id="<%= dom_id(notification) %>" class="bg-card rounded-2xl shadow-lg border-2 border-default p-6 hover:shadow-xl transition-all <%= 'opacity-75' if notification.read %>">
  <div class="flex items-start gap-4">
    <!-- Icon -->
    <div class="flex-shrink-0 w-12 h-12 rounded-full bg-primary bg-opacity-20 flex items-center justify-center text-2xl">
      <%= notification.icon %>
    </div>
    
    <!-- Content -->
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between gap-4">
        <div class="flex-1">
          <h3 class="text-lg font-bold text-primary-content mb-1">
            <%= notification.title %>
          </h3>
          <p class="text-primary-content mb-2">
            <%= notification.message %>
          </p>
          <% if notification.recipe.present? %>
            <div class="mt-3 p-3 bg-card border border-default rounded-lg">
              <%= link_to recipe_path(notification.recipe), data: { turbo_frame: "_top" }, class: "flex items-center gap-3 hover:opacity-80 transition-opacity" do %>
                <% if notification.recipe.photos.attached? && notification.recipe.photos.first.present? %>
                  <%= image_tag url_for(notification.recipe.photos.first.variant(resize_to_fill: [60, 60])), class: "w-15 h-15 rounded-lg object-cover" %>
                <% end %>
                <div>
                  <p class="text-sm font-semibold text-primary-content"><%= notification.recipe.title %></p>
                  <p class="text-xs text-secondary-content"><%= truncate(notification.recipe.description.presence || 'N/A', length: 60) %></p>
                </div>
              <% end %>
            </div>
          <% end %>
          <p class="text-xs text-secondary-content mt-3">
            <%= time_ago_in_words(notification.created_at) %> <%= t('time.ago') %>
          </p>
        </div>
        
        <!-- Actions -->
        <div class="flex items-center gap-2">
          <% unless notification.read %>
            <span class="w-3 h-3 rounded-full bg-primary"></span>
          <% end %>
          <%= button_to mark_read_notification_path(notification), method: :patch,
              class: "p-2 text-secondary-content hover:text-primary transition-colors",
              title: t('notifications.mark_read') do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

