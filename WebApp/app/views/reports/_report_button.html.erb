<%# Usage: render 'reports/report_button', reportable: @recipe %>
<% reportable_type = reportable.class.name.downcase %>
<% already_reported = user_signed_in? && reportable.reports.exists?(reporter: current_user) %>

<div id="report-button-<%= reportable_type %>-<%= reportable.id %>">
  <% if already_reported %>
    <span class="inline-flex items-center gap-1 px-3 py-1.5 text-xs font-semibold text-orange-600 bg-orange-100 rounded-full">
      <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      Raportat
    </span>
  <% elsif user_signed_in? %>
    <button type="button" 
            onclick="openReportModal('<%= reportable_type %>', '<%= reportable.id %>')"
            class="inline-flex items-center gap-1 px-3 py-1.5 text-xs font-semibold text-gray-500 hover:text-red-600 hover:bg-red-50 rounded-full transition-colors"
            title="Raportează conținut inadecvat">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"/>
      </svg>
      Raportează
    </button>
  <% end %>
</div>




