<div class="max-w-4xl mx-auto mb-20 animate-fade-in">
  <!-- Header -->
  <div class="bg-card rounded-3xl shadow-2xl border-2 border-default mb-6 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-black bg-clip-text-primary text-transparent mb-2">
          <%= t('shared_recipes.title') %>
        </h1>
        <p class="text-secondary-content">
          <%= t('shared_recipes.subtitle') %>
        </p>
      </div>
      <%= link_to recipes_path, class: "px-4 py-2 rounded-xl bg-card border border-default text-primary-content font-semibold hover:bg-opacity-80 transition-all" do %>
        <%= t('common.back') %>
      <% end %>
    </div>
  </div>

  <!-- Shared Recipes List -->
  <div class="space-y-4">
    <% if @shared_recipes.any? %>
      <% @shared_recipes.each do |shared_recipe| %>
        <div class="bg-card rounded-2xl shadow-lg border-2 border-default p-6 hover:shadow-xl transition-all">
          <div class="flex items-start gap-4">
            <!-- Sender Info -->
            <div class="flex-shrink-0">
              <% if shared_recipe.sender.avatar&.attached? %>
                <%= image_tag url_for(shared_recipe.sender.avatar.variant(resize_to_fill: [50, 50])), class: "w-12 h-12 rounded-full object-cover ring-2 ring-primary" %>
              <% else %>
                <div class="w-12 h-12 rounded-full bg-primary bg-opacity-20 flex items-center justify-center text-primary font-bold">
                  <%= shared_recipe.sender.username&.first&.upcase || 'U' %>
                </div>
              <% end %>
            </div>
            
            <!-- Content -->
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-2">
                <div>
                  <p class="text-sm text-secondary-content">
                    <%= t('shared_recipes.shared_by', user: shared_recipe.sender.username) %>
                  </p>
                  <p class="text-xs text-secondary-content">
                    <%= time_ago_in_words(shared_recipe.created_at) %> <%= t('time.ago') %>
                  </p>
                </div>
                <% unless shared_recipe.read %>
                  <span class="w-3 h-3 rounded-full bg-primary"></span>
                <% end %>
              </div>
              
              <% if shared_recipe.message.present? %>
                <p class="text-primary-content mb-4 p-3 bg-card border border-default rounded-lg">
                  <%= shared_recipe.message %>
                </p>
              <% end %>
              
              <!-- Recipe Preview -->
              <%= link_to recipe_path(shared_recipe.recipe), data: { turbo_frame: "_top" }, 
                  class: "block p-4 bg-card border border-default rounded-lg hover:bg-opacity-80 transition-all" do %>
                <div class="flex items-center gap-4">
                  <% if shared_recipe.recipe.photos.attached? && shared_recipe.recipe.photos.first.present? %>
                    <%= image_tag url_for(shared_recipe.recipe.photos.first.variant(resize_to_fill: [100, 100])), class: "w-24 h-24 rounded-lg object-cover flex-shrink-0" %>
                  <% else %>
                    <div class="w-24 h-24 rounded-lg bg-primary bg-opacity-10 flex items-center justify-center flex-shrink-0">
                      <svg class="h-12 w-12 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                      </svg>
                    </div>
                  <% end %>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-bold text-primary-content mb-1">
                      <%= shared_recipe.recipe.title %>
                    </h3>
                    <p class="text-sm text-secondary-content line-clamp-2">
                      <%= truncate(shared_recipe.recipe.description.presence || 'N/A', length: 100) %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-card rounded-2xl shadow-lg border-2 border-default p-12 text-center">
        <div class="inline-block p-4 rounded-full bg-primary bg-opacity-10 mb-4">
          <svg class="h-16 w-16 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-primary-content mb-2"><%= t('shared_recipes.empty') %></h3>
        <p class="text-secondary-content"><%= t('shared_recipes.empty_description') %></p>
      </div>
    <% end %>
  </div>
</div>
