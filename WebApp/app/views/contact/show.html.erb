<div class="max-w-4xl mx-auto mb-20 animate-fade-in">
  <!-- Header -->
  <div class="text-center mb-12">
    <div class="inline-block p-4 rounded-full bg-gradient-to-br from-emerald-100 to-teal-100 mb-6">
      <svg class="h-16 w-16 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
    </div>
    <h1 class="text-4xl font-black bg-clip-text-primary text-transparent mb-4">
      <%= t('contact.title') %>
    </h1>
    <p class="text-lg text-secondary-content max-w-2xl mx-auto">
      <%= t('contact.subtitle') %>
    </p>
  </div>

  <!-- Contact Information Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
    <!-- Email Card -->
    <div class="bg-card rounded-2xl shadow-lg border-2 border-default p-6 hover:shadow-xl transition-all duration-300 hover:scale-[1.02]">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-sm font-bold text-secondary-content uppercase mb-1"><%= t('contact.email_label') %></h3>
          <p class="text-lg font-semibold text-primary-content"><%= @site_setting.contact_email %></p>
          <a href="mailto:<%= @site_setting.contact_email %>" class="text-sm text-link hover:text-primary font-semibold mt-2 inline-flex items-center gap-1">
            <%= t('contact.send_email') %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Phone Card -->
    <div class="bg-card rounded-2xl shadow-lg border-2 border-default p-6 hover:shadow-xl transition-all duration-300 hover:scale-[1.02]">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-teal-500 to-cyan-500 flex items-center justify-center">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-sm font-bold text-secondary-content uppercase mb-1"><%= t('contact.phone_label') %></h3>
          <p class="text-lg font-semibold text-primary-content"><%= @site_setting.contact_phone %></p>
          <a href="tel:<%= @site_setting.contact_phone %>" class="text-sm text-link hover:text-primary font-semibold mt-2 inline-flex items-center gap-1">
            <%= t('contact.call') %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Address Card -->
    <div class="bg-card rounded-2xl shadow-lg border-2 border-default p-6 hover:shadow-xl transition-all duration-300 hover:scale-[1.02] md:col-span-2">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-sm font-bold text-secondary-content uppercase mb-1"><%= t('contact.address_label') %></h3>
          <p class="text-lg font-semibold text-primary-content"><%= @site_setting.contact_address %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- About Section -->
  <div class="bg-card rounded-2xl shadow-lg border-2 border-default p-8 mb-8">
    <h2 class="text-2xl font-black text-primary-content mb-4 flex items-center gap-2">
      <span class="bg-clip-text-primary text-transparent">
        <%= t('contact.about.title') %>
      </span>
    </h2>
    <div class="prose prose-emerald max-w-none">
      <p class="text-primary-content leading-relaxed mb-4">
        <%= t('contact.about.description') %>
      </p>
      <p class="text-primary-content leading-relaxed">
        <%= t('contact.about.mission') %>
      </p>
    </div>
  </div>

  <!-- Back Link -->
  <div class="text-center">
    <%= link_to recipes_path, class: "inline-flex items-center gap-2 text-link hover:text-primary font-semibold transition-colors duration-300" do %>
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t('contact.back_to_recipes') %>
    <% end %>
  </div>
</div>

