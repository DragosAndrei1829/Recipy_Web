<div class="max-w-6xl mx-auto mb-20 animate-scale-in">
  <!-- Hero Section with Image -->
  <% if @recipe.photos.attached? %>
    <div class="recipe-hero relative overflow-hidden rounded-3xl shadow-2xl mb-8">
      <% cover_photo = @recipe.photos.first %>
      <%= image_tag url_for(cover_photo.variant(resize_to_limit: [1200, 600])), 
          class: "recipe-hero-image w-full h-[500px] object-cover", 
          alt: @recipe.title %>
      <div class="recipe-hero-overlay absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent p-8">
        <div class="max-w-4xl">
          <h1 class="text-4xl md:text-5xl font-black text-white mb-4 leading-tight">
            <%= @recipe.title %>
          </h1>
          <div class="flex items-center gap-4 text-white/90">
            <% if @recipe.user&.avatar&.attached? %>
              <%= image_tag url_for(@recipe.user.avatar.variant(resize_to_fill: [40, 40])), 
                  class: "h-10 w-10 rounded-full object-cover ring-2 ring-white/50" %>
            <% else %>
              <div class="h-10 w-10 rounded-full bg-white/20 flex items-center justify-center text-white font-bold">
                <%= @recipe.user&.username&.first&.upcase || 'U' %>
              </div>
            <% end %>
            <div>
              <p class="font-semibold"><%= @recipe.user&.username || "Anonim" %></p>
              <p class="text-sm text-white/70"><%= time_ago_in_words(@recipe.created_at) %> <%= t('time.ago') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="recipe-hero relative overflow-hidden rounded-3xl shadow-2xl mb-8 bg-gradient-to-br from-primary/20 to-secondary/20 p-12">
      <h1 class="text-4xl md:text-5xl font-black text-primary-content mb-4">
        <%= @recipe.title %>
      </h1>
      <div class="flex items-center gap-4">
        <% if @recipe.user&.avatar&.attached? %>
          <%= image_tag url_for(@recipe.user.avatar.variant(resize_to_fill: [40, 40])), 
              class: "h-10 w-10 rounded-full object-cover ring-2 ring-primary" %>
        <% else %>
          <div class="h-10 w-10 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold">
            <%= @recipe.user&.username&.first&.upcase || 'U' %>
          </div>
        <% end %>
        <div>
          <p class="font-semibold text-primary-content"><%= @recipe.user&.username || "Anonim" %></p>
          <p class="text-sm text-secondary-content"><%= time_ago_in_words(@recipe.created_at) %> <%= t('time.ago') %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Stats Grid -->
  <div class="recipe-stats-grid mb-8">
    <% if @recipe.difficulty && @recipe.difficulty > 0 %>
      <div class="recipe-stat-card">
        <div class="recipe-stat-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
        </div>
        <div class="recipe-stat-value"><%= @recipe.difficulty %></div>
        <div class="recipe-stat-label"><%= t('recipes.show.difficulty_label') %></div>
      </div>
    <% end %>

    <% if @recipe.time_to_make && @recipe.time_to_make > 0 %>
      <div class="recipe-stat-card">
        <div class="recipe-stat-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="recipe-stat-value"><%= @recipe.time_to_make %></div>
        <div class="recipe-stat-label">min</div>
      </div>
    <% end %>

    <% if @recipe.healthiness && @recipe.healthiness > 0 %>
      <div class="recipe-stat-card">
        <div class="recipe-stat-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="recipe-stat-value"><%= @recipe.healthiness %></div>
        <div class="recipe-stat-label"><%= t('recipes.show.healthiness_label') %></div>
      </div>
    <% end %>

    <div class="recipe-stat-card">
      <div class="recipe-stat-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
      </div>
      <div class="recipe-stat-value"><%= @recipe.likes_count %></div>
      <div class="recipe-stat-label">Likes</div>
    </div>

    <div class="recipe-stat-card">
      <div class="recipe-stat-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      </div>
      <div class="recipe-stat-value"><%= @recipe.comments_count %></div>
      <div class="recipe-stat-label">Comments</div>
    </div>
  </div>

  <!-- Categories Badges -->
  <div class="flex flex-wrap items-center gap-3 mb-8">
    <% if @recipe.category %>
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border-2 border-primary/30 text-primary font-bold text-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
        <%= @recipe.category.display_name %>
      </span>
    <% end %>
    <% if @recipe.cuisine %>
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-secondary/10 border-2 border-secondary/30 text-secondary font-bold text-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <%= @recipe.cuisine.display_name %>
      </span>
    <% end %>
    <% if @recipe.food_type %>
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent/10 border-2 border-accent/30 text-accent font-bold text-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
        </svg>
        <%= @recipe.food_type.display_name %>
      </span>
    <% end %>
  </div>

  <!-- Description -->
  <% if @recipe.description.present? %>
    <div class="recipe-section">
      <h2 class="recipe-section-title">Despre rețetă</h2>
      <p class="text-lg text-primary-content leading-relaxed"><%= @recipe.description %></p>
    </div>
  <% end %>

  <!-- Video Section -->
  <% if @recipe.video.attached? %>
    <div class="recipe-section">
      <h2 class="recipe-section-title">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
        </svg>
        <%= t('recipes.show.video', default: 'Video Preparare') %>
      </h2>
      <div class="relative rounded-2xl overflow-hidden bg-black shadow-xl">
        <video 
          controls 
          preload="metadata"
          class="w-full max-h-[500px]"
          poster="<%= @recipe.photos.attached? ? url_for(@recipe.photos.first.variant(resize_to_fill: [800, 450])) : '' %>"
        >
          <source src="<%= url_for(@recipe.video) %>" type="<%= @recipe.video.content_type %>">
          <%= t('recipes.show.video_not_supported', default: 'Browser-ul tău nu suportă redarea video.') %>
        </video>
      </div>
    </div>
  <% end %>

  <!-- Additional Photos Gallery -->
  <% if @recipe.photos.attached? && @recipe.photos.count > 1 %>
    <div class="recipe-section">
      <h2 class="recipe-section-title">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <%= t('recipes.show.gallery', default: 'Galerie') %>
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <% @recipe.photos.drop(1).each do |photo| %>
          <div class="relative group overflow-hidden rounded-xl cursor-pointer" onclick="openImageModal('<%= url_for(photo.variant(resize_to_limit: [800, 800])) %>')">
            <%= image_tag url_for(photo.variant(resize_to_fill: [300, 300])), 
                class: "w-full h-48 object-cover transition-transform duration-300 group-hover:scale-110" %>
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors"></div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Ingredients Section -->
  <div class="recipe-section">
    <h2 class="recipe-section-title">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
      <%= t('recipes.show.ingredients') %>
    </h2>
    <div class="space-y-2">
      <% @recipe.ingredients.split("\n").reject(&:blank?).each_with_index do |ingredient, index| %>
        <div class="ingredient-item">
          <span class="text-primary-content"><%= ingredient.strip %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Preparation Section -->
  <div class="recipe-section">
    <h2 class="recipe-section-title">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
      </svg>
      <%= t('recipes.show.preparation') %>
    </h2>
    <div class="space-y-3">
      <% @recipe.preparation.split("\n").reject(&:blank?).each_with_index do |step, index| %>
        <div class="step-item">
          <div class="flex items-start gap-3">
            <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gradient-primary text-white font-bold flex items-center justify-center text-sm">
              <%= index + 1 %>
            </span>
            <span class="text-primary-content leading-relaxed flex-1"><%= step.strip %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Actions Bar (Sticky) -->
  <div class="recipe-actions-bar">
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div class="flex items-center gap-4">
        <div id="<%= dom_id(@recipe, :actions) %>">
          <%= render "recipes/show_actions", recipe: @recipe %>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <% if user_signed_in? && @recipe.user != current_user %>
          <button onclick="document.getElementById('share-modal').classList.remove('hidden')" 
              class="recipe-action-btn bg-gradient-primary text-white hover:shadow-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
            </svg>
            <span><%= t('shared_recipes.share') %></span>
          </button>
        <% end %>
        <%= link_to recipes_path, 
            class: "recipe-action-btn bg-card border-2 border-default text-primary-content hover:border-primary",
            data: { turbo_cache: false } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <span><%= t('recipes.show.back') %></span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Comments Section -->
  <div id="<%= dom_id(@recipe, :comments) %>" class="recipe-section">
    <%= render "recipes/show_comments", recipe: @recipe %>
  </div>
</div>

<!-- Share Recipe Modal -->
<% if user_signed_in? && @recipe.user != current_user %>
  <div id="share-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4">
      <div class="fixed inset-0 bg-black/60 backdrop-blur-sm" onclick="document.getElementById('share-modal').classList.add('hidden')"></div>
      <div class="relative bg-card rounded-3xl shadow-2xl border-2 border-default p-6 max-w-md w-full z-10 animate-scale-in">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-2xl font-black text-primary-content"><%= t('shared_recipes.share') %></h3>
          <button onclick="document.getElementById('share-modal').classList.add('hidden')" 
              class="text-secondary-content hover:text-primary transition-colors p-1 rounded-lg hover:bg-card">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        
        <%= form_with url: shared_recipes_path, method: :post, local: true, class: "space-y-4" do |f| %>
          <%= hidden_field_tag :recipe_id, @recipe.id %>
          
          <div>
            <label class="block text-sm font-bold text-primary-content mb-2">
              <%= t('shared_recipes.share_with') %>
            </label>
            <%= f.select :recipient_id,
                options_from_collection_for_select(User.where.not(id: current_user.id).order(:username), :id, :username),
                { prompt: t('shared_recipes.select_user') },
                { class: "w-full px-4 py-2 rounded-xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 bg-card text-primary-content",
                  required: true } %>
          </div>
          
          <div>
            <label class="block text-sm font-bold text-primary-content mb-2">
              <%= t('shared_recipes.add_message') %>
            </label>
            <%= f.text_area :message, rows: 3,
                class: "w-full px-4 py-2 rounded-xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 bg-card text-primary-content resize-none",
                placeholder: t('shared_recipes.add_message') %>
          </div>
          
          <div class="flex gap-3">
            <%= f.submit t('shared_recipes.share'), 
                class: "flex-1 px-4 py-2 rounded-xl bg-gradient-primary text-white font-bold hover:opacity-90 transition-all hover:scale-105" %>
            <button type="button" onclick="document.getElementById('share-modal').classList.add('hidden')" 
                class="px-4 py-2 rounded-xl bg-card border border-default text-primary-content font-semibold hover:bg-opacity-80 transition-all">
              <%= t('common.cancel') %>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Image Modal -->
<div id="image-modal" class="hidden fixed inset-0 z-50 bg-black/90 backdrop-blur-sm flex items-center justify-center p-4" onclick="closeImageModal()">
  <div class="max-w-5xl max-h-[90vh] relative">
    <img id="modal-image" src="" alt="" class="max-w-full max-h-[90vh] object-contain rounded-lg">
    <button onclick="closeImageModal()" class="absolute top-4 right-4 w-10 h-10 bg-white/20 hover:bg-white/30 rounded-full flex items-center justify-center text-white transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>
</div>

<script>
  function openImageModal(imageUrl) {
    const modal = document.getElementById('image-modal');
    const img = document.getElementById('modal-image');
    img.src = imageUrl;
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeImageModal() {
    const modal = document.getElementById('image-modal');
    modal.classList.add('hidden');
    document.body.style.overflow = '';
  }

  // Animate stats on scroll
  const observerOptions = {
    threshold: 0.5,
    rootMargin: '0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animation = 'bubblePop 0.5s ease-out';
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('.recipe-stat-card').forEach(card => {
    observer.observe(card);
  });
</script>
