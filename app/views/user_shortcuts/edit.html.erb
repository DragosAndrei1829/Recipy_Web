<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="bg-card rounded-2xl shadow-xl border-2 border-default p-6">
    <h1 class="text-3xl font-bold text-primary-content mb-6"><%= t('user_shortcuts.edit') %></h1>

    <%= form_with model: [current_user, @user_shortcut], url: user_shortcut_path(@user_shortcut, locale: I18n.locale), method: :patch, local: true, class: "space-y-6" do |f| %>
      <% if @user_shortcut.errors.any? %>
        <div class="bg-error/10 border-2 border-error rounded-lg p-4">
          <ul class="list-disc list-inside text-error">
            <% @user_shortcut.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, t('user_shortcuts.name'), class: "block text-sm font-semibold text-primary-content mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border-2 border-default rounded-lg focus:outline-none focus:ring-2 focus:ring-primary bg-card text-primary-content", placeholder: t('user_shortcuts.name_placeholder') %>
      </div>

      <div>
        <%= f.label :url, t('user_shortcuts.url'), class: "block text-sm font-semibold text-primary-content mb-2" %>
        <%= f.text_field :url, class: "w-full px-4 py-2 border-2 border-default rounded-lg focus:outline-none focus:ring-2 focus:ring-primary bg-card text-primary-content", placeholder: t('user_shortcuts.url_placeholder') %>
        <p class="text-xs text-secondary-content mt-1"><%= t('user_shortcuts.url_hint') %></p>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :color, t('user_shortcuts.color'), class: "block text-sm font-semibold text-primary-content mb-2" %>
          <%= f.color_field :color, class: "w-full h-12 border-2 border-default rounded-lg cursor-pointer" %>
        </div>

        <div>
          <%= f.label :icon, t('user_shortcuts.icon'), class: "block text-sm font-semibold text-primary-content mb-2" %>
          <%= f.text_field :icon, class: "w-full px-4 py-2 border-2 border-default rounded-lg focus:outline-none focus:ring-2 focus:ring-primary bg-card text-primary-content text-2xl text-center", placeholder: "ðŸ”—", maxlength: 2 %>
          <p class="text-xs text-secondary-content mt-1"><%= t('user_shortcuts.icon_hint') %></p>
        </div>
      </div>

      <div class="flex items-center gap-4 pt-4">
        <%= f.submit t('user_shortcuts.update'), class: "px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition font-semibold" %>
        <%= link_to t('common.cancel'), user_shortcuts_path(locale: I18n.locale), class: "px-6 py-3 border-2 border-default rounded-lg hover:bg-card/80 transition" %>
      </div>
    <% end %>
  </div>
</div>
