<% content_for :title, t('admin.dashboard.title', default: 'Admin Dashboard') %>

<!-- Professional Admin Dashboard -->
<div class="admin-dashboard-modern">
  <!-- Header -->
  <div class="admin-header-modern">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="admin-title-modern">
          <%= t('admin.dashboard.title', default: 'Admin Dashboard') %>
        </h1>
        <p class="admin-subtitle-modern">
          <%= t('admin.dashboard.subtitle', default: 'System Management & Monitoring') %>
        </p>
      </div>
      <%= link_to root_path(locale: I18n.locale), class: "admin-btn-secondary" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span><%= t('admin.back_to_site', default: 'Back to Site') %></span>
      <% end %>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="admin-stats-grid">
    <!-- Total Users -->
    <div class="admin-stat-card admin-stat-card--blue">
      <div class="admin-stat-card__icon">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
      </div>
      <div class="admin-stat-card__content">
        <p class="admin-stat-card__label"><%= t('admin.total_users', default: 'Total Users') %></p>
        <p class="admin-stat-card__value"><%= number_with_delimiter(@total_users) %></p>
        <p class="admin-stat-card__change">+<%= @new_users_today %> <%= t('admin.today', default: 'today') %></p>
      </div>
    </div>

    <!-- Total Recipes -->
    <div class="admin-stat-card admin-stat-card--green">
      <div class="admin-stat-card__icon">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
        </svg>
      </div>
      <div class="admin-stat-card__content">
        <p class="admin-stat-card__label"><%= t('admin.total_recipes', default: 'Total Recipes') %></p>
        <p class="admin-stat-card__value"><%= number_with_delimiter(@total_recipes) %></p>
        <p class="admin-stat-card__change">+<%= @new_recipes_today %> <%= t('admin.today', default: 'today') %></p>
      </div>
    </div>

    <!-- Pending Reports -->
    <% if defined?(@pending_reports) %>
      <div class="admin-stat-card admin-stat-card--red">
        <div class="admin-stat-card__icon">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div class="admin-stat-card__content">
          <p class="admin-stat-card__label"><%= t('admin.pending_reports', default: 'Pending Reports') %></p>
          <p class="admin-stat-card__value"><%= @pending_reports %></p>
          <%= link_to t('admin.review', default: 'Review'), admin_reports_path, class: "admin-stat-card__link" %>
        </div>
      </div>
    <% end %>

    <!-- Active Themes -->
    <% if defined?(@themes) %>
      <div class="admin-stat-card admin-stat-card--purple">
        <div class="admin-stat-card__icon">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
          </svg>
        </div>
        <div class="admin-stat-card__content">
          <p class="admin-stat-card__label"><%= t('admin.themes', default: 'Themes') %></p>
          <p class="admin-stat-card__value"><%= @themes.count %></p>
          <%= link_to t('admin.manage', default: 'Manage'), admin_themes_path, class: "admin-stat-card__link" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="admin-section-modern">
    <h2 class="admin-section-title"><%= t('admin.quick_actions', default: 'Quick Actions') %></h2>
    <div class="admin-actions-grid">
      <%= link_to admin_users_path, class: "admin-action-card" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
        <span><%= t('admin.manage_users', default: 'Manage Users') %></span>
      <% end %>

      <%= link_to admin_recipes_path, class: "admin-action-card" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
        </svg>
        <span><%= t('admin.manage_recipes', default: 'Manage Recipes') %></span>
      <% end %>

      <%= link_to admin_categories_path, class: "admin-action-card" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
        <span><%= t('admin.manage_categories', default: 'Categories') %></span>
      <% end %>

      <%= link_to admin_themes_path, class: "admin-action-card" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
        </svg>
        <span><%= t('admin.themes', default: 'Themes') %></span>
      <% end %>

      <%= link_to admin_settings_path, class: "admin-action-card" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span><%= t('admin.settings', default: 'Settings') %></span>
      <% end %>

      <% if defined?(@pending_reports) && @pending_reports > 0 %>
        <%= link_to admin_reports_path, class: "admin-action-card admin-action-card--alert" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          <span><%= t('admin.reports', default: 'Reports') %></span>
          <span class="admin-alert-badge"><%= @pending_reports %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
