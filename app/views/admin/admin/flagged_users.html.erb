<div class="max-w-7xl mx-auto py-8 px-4">
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
      <%= link_to "Moderation", admin_moderation_path, class: "hover:text-gray-700" %> 
      <span>/</span>
      <span>Utilizatori semnalați</span>
    </div>
    <h1 class="text-3xl font-black text-gray-900 dark:text-white flex items-center gap-3">
      <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      Utilizatori semnalați
    </h1>
    <p class="text-gray-500 dark:text-gray-400 mt-2">Utilizatori cu rapoarte multiple sau blocați</p>
  </div>

  <% if @users.any? %>
    <div class="grid gap-4">
      <% @users.each do |user| %>
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border <%= user.blocked? ? 'border-red-300 dark:border-red-700' : 'border-orange-200 dark:border-orange-800' %> overflow-hidden">
          <div class="p-6">
            <div class="flex items-start gap-6">
              <!-- Avatar -->
              <% if user.avatar.attached? %>
                <%= image_tag url_for(user.avatar.variant(resize_to_fill: [80, 80])), class: "w-16 h-16 rounded-full object-cover flex-shrink-0" %>
              <% else %>
                <div class="w-16 h-16 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center flex-shrink-0">
                  <span class="text-xl font-bold text-gray-500"><%= user.username&.first&.upcase || 'U' %></span>
                </div>
              <% end %>

              <!-- Info -->
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <% if user.blocked? %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-red-100 text-red-700">
                      BLOCAT
                    </span>
                  <% else %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-orange-100 text-orange-700">
                      <%= user.reports_count %> rapoarte
                    </span>
                  <% end %>
                  <% if user.suspension_count > 0 %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-purple-100 text-purple-700">
                      <%= user.suspension_count %> suspendări anterioare
                    </span>
                  <% end %>
                </div>
                
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">@<%= user.username %></h3>
                <p class="text-sm text-gray-500 dark:text-gray-400"><%= user.email %></p>
                <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
                  Înregistrat <%= time_ago_in_words(user.created_at) %> în urmă • <%= user.recipes.count %> rețete
                </p>
                
                <% if user.blocked? && user.blocked_reason.present? %>
                  <div class="mt-3 p-3 bg-red-50 dark:bg-red-900/20 rounded-lg">
                    <p class="text-sm text-red-700 dark:text-red-300">
                      <strong>Motiv blocare:</strong> <%= user.blocked_reason %>
                    </p>
                    <p class="text-xs text-red-500 dark:text-red-400 mt-1">
                      Blocat <%= time_ago_in_words(user.blocked_at) %> în urmă
                    </p>
                  </div>
                <% end %>
              </div>

              <!-- Actions -->
              <div class="flex flex-col gap-2">
                <%= link_to user_path(user), target: "_blank", class: "px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors text-center" do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  Profil
                <% end %>
                
                <% if user.blocked? %>
                  <%= button_to admin_unblock_user_path(user), method: :post, class: "px-4 py-2 text-sm font-semibold text-green-700 bg-green-100 hover:bg-green-200 rounded-lg transition-colors" do %>
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"/>
                    </svg>
                    Deblochează
                  <% end %>
                <% else %>
                  <button type="button" onclick="showBlockModal('<%= user.id %>', '<%= user.username %>')" class="px-4 py-2 text-sm font-semibold text-red-700 bg-red-100 hover:bg-red-200 rounded-lg transition-colors">
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                    </svg>
                    Blochează
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-12 text-center">
      <svg class="w-16 h-16 mx-auto text-green-300 dark:text-green-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-gray-500 dark:text-gray-400 text-lg">Nu există utilizatori semnalați</p>
      <p class="text-gray-400 dark:text-gray-500 text-sm mt-1">Comunitatea este în regulă!</p>
    </div>
  <% end %>
</div>

<!-- Block User Modal -->
<div id="block-modal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-md w-full mx-4 p-6">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Blochează utilizator</h3>
    <p class="text-gray-500 dark:text-gray-400 mb-4">Ești sigur că vrei să blochezi utilizatorul <strong id="block-username"></strong>?</p>
    
    <%= form_tag "", method: :post, id: "block-form" do %>
      <div class="mb-4">
        <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Motiv (va fi afișat utilizatorului)</label>
        <textarea name="reason" rows="3" class="w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white" placeholder="Ex: Contul tău a fost suspendat pentru încălcarea regulilor comunității..."></textarea>
      </div>
      
      <div class="flex gap-3">
        <button type="button" onclick="hideBlockModal()" class="flex-1 px-4 py-3 text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-xl transition-colors">
          Anulează
        </button>
        <button type="submit" class="flex-1 px-4 py-3 text-sm font-semibold text-white bg-red-600 hover:bg-red-700 rounded-xl transition-colors">
          Blochează
        </button>
      </div>
    <% end %>
  </div>
</div>

<script>
function showBlockModal(userId, username) {
  document.getElementById('block-username').textContent = '@' + username;
  document.getElementById('block-form').action = '/admin/users/' + userId + '/block';
  document.getElementById('block-modal').classList.remove('hidden');
  document.getElementById('block-modal').classList.add('flex');
}

function hideBlockModal() {
  document.getElementById('block-modal').classList.add('hidden');
  document.getElementById('block-modal').classList.remove('flex');
}

// Close modal on backdrop click
document.getElementById('block-modal').addEventListener('click', function(e) {
  if (e.target === this) hideBlockModal();
});
</script>

