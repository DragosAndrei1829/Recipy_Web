<div class="admin-dashboard space-y-8">
  <header>
    <h1 class="text-3xl font-black text-primary-content">Legal Pages</h1>
    <p class="text-secondary-content mt-1">Edit Privacy Policy, Terms & Conditions, and Cookie Policy</p>
  </header>

  <!-- Page Cards -->
  <div class="grid md:grid-cols-3 gap-6">
    <% @pages.each do |page| %>
      <div class="admin-card hover:shadow-xl transition-all group">
        <div class="flex items-start justify-between mb-4">
          <div class="w-12 h-12 rounded-2xl bg-<%= LegalPage.page_color(page[:type]) %>-500/20 flex items-center justify-center">
            <% case page[:type] %>
            <% when 'privacy' %>
              <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            <% when 'terms' %>
              <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            <% when 'cookies' %>
              <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            <% end %>
          </div>
          <% if page[:has_content] %>
            <span class="px-2 py-1 rounded-full text-xs font-bold bg-success/20 text-success">Custom</span>
          <% else %>
            <span class="px-2 py-1 rounded-full text-xs font-bold bg-gray-200 text-gray-600">Default</span>
          <% end %>
        </div>
        
        <h3 class="text-xl font-bold text-primary-content mb-2"><%= page[:title] %></h3>
        <p class="text-sm text-secondary-content mb-4">
          <% if page[:has_content] %>
            Using custom content from database
          <% else %>
            Using default content from translation files
          <% end %>
        </p>
        
        <%= link_to admin_edit_legal_page_path(page_type: page[:type]), class: "btn-primary w-full justify-center group-hover:shadow-lg transition-all" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Content
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Info -->
  <div class="admin-card bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-800">
    <div class="flex gap-4">
      <svg class="w-6 h-6 text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h4 class="font-bold text-blue-900 dark:text-blue-100">How it works</h4>
        <ul class="text-sm text-blue-800 dark:text-blue-200 mt-2 space-y-1">
          <li>• Click "Edit Content" to modify any legal page</li>
          <li>• Write content in both Romanian and English</li>
          <li>• Use Markdown-style formatting (# for headings, ## for subheadings)</li>
          <li>• Changes are saved to the database and shown immediately on the site</li>
        </ul>
      </div>
    </div>
  </div>
</div>
