<div class="max-w-7xl mx-auto py-8 px-4">
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-4">
      <%= link_to admin_moderation_path, class: "hover:text-blue-600" do %>
        ‚Üê √énapoi la Moderation Dashboard
      <% end %>
    </div>
    <h1 class="text-3xl font-black text-gray-900 dark:text-white flex items-center gap-3">
      <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      Toate Rapoartele
    </h1>
    <p class="text-gray-500 dark:text-gray-400 mt-2">VizualizeazƒÉ »ôi gestioneazƒÉ toate rapoartele primite</p>
  </div>

  <!-- Filters -->
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 p-4 mb-6">
    <div class="flex flex-wrap gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
        <div class="flex gap-2">
          <%= link_to "√én a»ôteptare", admin_moderation_reports_path(status: 'pending', type: @type_filter), 
              class: "px-3 py-1.5 text-sm rounded-lg transition-colors #{@status_filter == 'pending' ? 'bg-orange-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200'}" %>
          <%= link_to "Rezolvate", admin_moderation_reports_path(status: 'resolved', type: @type_filter), 
              class: "px-3 py-1.5 text-sm rounded-lg transition-colors #{@status_filter == 'resolved' ? 'bg-green-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200'}" %>
          <%= link_to "Toate", admin_moderation_reports_path(status: 'all', type: @type_filter), 
              class: "px-3 py-1.5 text-sm rounded-lg transition-colors #{@status_filter == 'all' ? 'bg-blue-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200'}" %>
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Tip</label>
        <div class="flex gap-2">
          <%= link_to "Toate", admin_moderation_reports_path(status: @status_filter, type: 'all'), 
              class: "px-3 py-1.5 text-sm rounded-lg transition-colors #{@type_filter == 'all' ? 'bg-blue-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200'}" %>
          <%= link_to "Re»õete", admin_moderation_reports_path(status: @status_filter, type: 'recipes'), 
              class: "px-3 py-1.5 text-sm rounded-lg transition-colors #{@type_filter == 'recipes' ? 'bg-blue-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200'}" %>
          <%= link_to "Utilizatori", admin_moderation_reports_path(status: @status_filter, type: 'users'), 
              class: "px-3 py-1.5 text-sm rounded-lg transition-colors #{@type_filter == 'users' ? 'bg-purple-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200'}" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Reports List -->
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    <% if @reports.any? %>
      <div class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @reports.each do |report| %>
          <div class="p-4 hover:bg-gray-50 dark:hover:bg-gray-700/50">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="px-2 py-0.5 text-xs font-semibold rounded-full <%= report.reportable_type == 'Recipe' ? 'bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300' : 'bg-purple-100 text-purple-700 dark:bg-purple-900/50 dark:text-purple-300' %>">
                    <%= report.reportable_type == 'Recipe' ? 'Re»õetƒÉ' : 'Utilizator' %>
                  </span>
                  <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-orange-100 text-orange-700 dark:bg-orange-900/50 dark:text-orange-300">
                    <%= report.reason_label %>
                  </span>
                  <% case report.status %>
                  <% when 'pending' %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-700 dark:bg-yellow-900/50 dark:text-yellow-300">
                      √én a»ôteptare
                    </span>
                  <% when 'under_review' %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300">
                      √én revizuire
                    </span>
                  <% when 'resolved_valid' %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-green-100 text-green-700 dark:bg-green-900/50 dark:text-green-300">
                      ‚úì Validat
                    </span>
                  <% when 'resolved_invalid' %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300">
                      Invalid
                    </span>
                  <% when 'dismissed' %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-red-100 text-red-700 dark:bg-red-900/50 dark:text-red-300">
                      Respins
                    </span>
                  <% end %>
                </div>
                
                <p class="text-lg text-gray-900 dark:text-white font-semibold">
                  <% if report.reportable_type == 'Recipe' && report.reportable %>
                    "<%= report.reportable.title %>"
                    <%= link_to "(Vezi re»õeta)", recipe_path(report.reportable), target: "_blank", class: "text-sm text-blue-600 hover:underline" %>
                  <% elsif report.reportable_type == 'User' && report.reportable %>
                    @<%= report.reportable.username %>
                    <%= link_to "(Vezi profil)", user_path(report.reportable), target: "_blank", class: "text-sm text-blue-600 hover:underline" %>
                  <% else %>
                    <span class="text-gray-400">[Con»õinut »ôters]</span>
                  <% end %>
                </p>
                
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                  Raportat de <strong>@<%= report.reporter&.username || 'Sistem' %></strong> ‚Ä¢ 
                  <%= time_ago_in_words(report.created_at) %> √Æn urmƒÉ
                  <% if report.reviewed_by %>
                    ‚Ä¢ Revizuit de <strong>@<%= report.reviewed_by.username %></strong>
                  <% end %>
                </p>
                
                <% if report.description.present? %>
                  <div class="mt-2 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                    <p class="text-sm text-gray-600 dark:text-gray-300 italic">"<%= report.description %>"</p>
                  </div>
                <% end %>
                
                <% if report.admin_notes.present? %>
                  <div class="mt-2 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg border-l-4 border-blue-500">
                    <p class="text-xs text-blue-600 dark:text-blue-400 font-semibold mb-1">Note admin:</p>
                    <p class="text-sm text-blue-800 dark:text-blue-200"><%= report.admin_notes %></p>
                  </div>
                <% end %>
              </div>
              
              <% if report.pending? || report.under_review? %>
                <div class="flex flex-col gap-2">
                  <%= form_with url: admin_review_report_path(report), method: :patch, local: true do %>
                    <%= hidden_field_tag :status, 'resolved_valid' %>
                    <button type="submit" class="flex items-center gap-1 px-3 py-1.5 bg-green-100 text-green-700 hover:bg-green-200 rounded-lg transition-colors text-sm font-medium" title="ValideazƒÉ raportul">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                      ValideazƒÉ
                    </button>
                  <% end %>
                  
                  <%= form_with url: admin_review_report_path(report), method: :patch, local: true do %>
                    <%= hidden_field_tag :status, 'dismissed' %>
                    <button type="submit" class="flex items-center gap-1 px-3 py-1.5 bg-red-100 text-red-700 hover:bg-red-200 rounded-lg transition-colors text-sm font-medium" title="Respinge raportul">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                      Respinge
                    </button>
                  <% end %>
                  
                  <% if report.reportable_type == 'Recipe' && report.reportable && !report.reportable.quarantined? %>
                    <%= button_to "üîí CarantinƒÉ", admin_quarantine_recipe_path(report.reportable), 
                        method: :post,
                        class: "flex items-center justify-center gap-1 px-3 py-1.5 bg-orange-100 text-orange-700 hover:bg-orange-200 rounded-lg transition-colors text-sm font-medium",
                        data: { confirm: "Sigur vrei sƒÉ pui aceastƒÉ re»õetƒÉ √Æn carantinƒÉ?" } %>
                  <% end %>
                  
                  <% if report.reportable_type == 'User' && report.reportable && !report.reportable.blocked? %>
                    <%= button_to "üö´ BlocheazƒÉ", admin_block_user_path(report.reportable), 
                        method: :post,
                        class: "flex items-center justify-center gap-1 px-3 py-1.5 bg-red-100 text-red-700 hover:bg-red-200 rounded-lg transition-colors text-sm font-medium",
                        data: { confirm: "Sigur vrei sƒÉ blochezi acest utilizator?" } %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <% if @reports.respond_to?(:total_pages) && @reports.total_pages > 1 %>
        <div class="p-4 bg-gray-50 dark:bg-gray-700/50 flex justify-center">
          <%= paginate @reports %>
        </div>
      <% end %>
    <% else %>
      <div class="p-12 text-center">
        <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-gray-500 dark:text-gray-400 text-lg">Nu existƒÉ rapoarte pentru filtrele selectate</p>
        <p class="text-gray-400 dark:text-gray-500 text-sm mt-2">√éncearcƒÉ sƒÉ schimbi filtrele sau verificƒÉ mai t√¢rziu</p>
      </div>
    <% end %>
  </div>
</div>

