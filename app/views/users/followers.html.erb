<div class="min-h-screen py-8">
  <!-- Ambient Background -->
  <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/3 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/3 right-1/4 w-80 h-80 bg-indigo-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to user_path(@user), class: "inline-flex items-center gap-2 text-gray-500 dark:text-gray-400 hover:text-emerald-600 dark:hover:text-emerald-400 font-medium transition-colors mb-4" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <%= t('common.back_to_profile') %>
      <% end %>
      
      <div class="flex items-center gap-4">
        <% if @user.avatar.attached? %>
          <%= image_tag url_for(@user.avatar.variant(resize_to_fill: [60,60])), 
              class: "w-14 h-14 rounded-full object-cover ring-2 ring-emerald-500/20" %>
        <% else %>
          <div class="w-14 h-14 rounded-full bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center ring-2 ring-emerald-500/20">
            <span class="text-xl font-black text-white"><%= @user.username&.first&.upcase || 'U' %></span>
          </div>
        <% end %>
        <div>
          <h1 class="text-3xl font-black text-gray-900 dark:text-white">
            <%= t('follows.followers') %>
          </h1>
          <p class="text-gray-500 dark:text-gray-400">
            <span class="font-semibold text-gray-700 dark:text-gray-200"><%= @followers.count %></span> 
            <%= t('follows.people_following') %> 
            <span class="font-semibold text-gray-700 dark:text-gray-200">@<%= @user.username %></span>
          </p>
        </div>
      </div>
    </div>
    
    <!-- Followers List -->
    <div class="bg-white dark:bg-gray-900 rounded-3xl border border-gray-200/50 dark:border-gray-700/50 shadow-xl overflow-hidden">
      <% if @followers.any? %>
        <div class="divide-y divide-gray-100 dark:divide-gray-800">
          <% @followers.each_with_index do |follower, index| %>
            <div class="p-4 hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors" style="animation: fadeInUp 0.4s ease-out <%= index * 0.05 %>s both">
              <div class="flex items-center gap-4">
                <!-- Avatar -->
                <%= link_to user_path(follower), class: "flex-shrink-0 group" do %>
                  <% if follower.avatar.attached? %>
                    <%= image_tag url_for(follower.avatar.variant(resize_to_fill: [56,56])), 
                        class: "w-14 h-14 rounded-full object-cover ring-2 ring-transparent group-hover:ring-emerald-500/50 transition-all" %>
                  <% else %>
                    <div class="w-14 h-14 rounded-full bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 flex items-center justify-center ring-2 ring-transparent group-hover:ring-emerald-500/50 transition-all">
                      <span class="text-lg font-bold text-gray-500 dark:text-gray-300"><%= follower.username&.first&.upcase || 'U' %></span>
                    </div>
                  <% end %>
                <% end %>
                
                <!-- Info -->
                <div class="flex-1 min-w-0">
                  <%= link_to user_path(follower), class: "block group" do %>
                    <h3 class="font-bold text-gray-900 dark:text-white group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors">
                      <%= follower.username %>
                    </h3>
                  <% end %>
                  <div class="flex items-center gap-4 mt-1 text-sm text-gray-500 dark:text-gray-400">
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                      </svg>
                      <%= follower.recipes.count %> <%= t('users.recipes_short') %>
                    </span>
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                      </svg>
                      <%= follower.followers.count %> <%= t('follows.followers_short') %>
                    </span>
                  </div>
                </div>
                
                <!-- Action Button -->
                <% if user_signed_in? && current_user != follower %>
                  <div id="follow-button-<%= follower.id %>">
                    <%= render 'follows/button', user: follower %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-20 px-6">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-gradient-to-br from-blue-100 to-indigo-100 dark:from-blue-900/30 dark:to-indigo-900/30 flex items-center justify-center">
            <svg class="w-10 h-10 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2"><%= t('follows.no_followers') %></h3>
          <p class="text-gray-500 dark:text-gray-400 max-w-sm mx-auto">
            <%= t('follows.no_followers_desc') %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
