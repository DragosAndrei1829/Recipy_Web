<section class="max-w-5xl mx-auto px-4 py-12 space-y-8">
  <% if @content.present? %>
    <!-- Database content -->
    <header class="space-y-3">
      <p class="text-sm uppercase tracking-widest text-<%= @page_color %>-500 font-semibold">
        <%= t('legal.updated_at', date: l(Date.current, format: :long)) %>
      </p>
    </header>
    <article class="prose prose-lg dark:prose-invert max-w-none">
      <%= render_legal_content(@content) %>
    </article>
  <% else %>
    <!-- Fallback: Static content from translations -->
    <header class="space-y-3">
      <p class="text-sm uppercase tracking-widest text-emerald-500 font-semibold"><%= t('legal.updated_at', date: l(Date.current, format: :long)) %></p>
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white"><%= t('legal.privacy.title') %></h1>
      <p class="text-lg text-gray-600 dark:text-gray-300">
        <%= t('legal.privacy.intro') %>
      </p>
    </header>

    <article class="space-y-6 text-gray-700 dark:text-gray-200 leading-relaxed">
      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.principles.title') %></h2>
        <div class="space-y-3 text-justify">
          <p><%= t('legal.privacy.principles.p1') %></p>
          <p><%= t('legal.privacy.principles.p2') %></p>
          <p><%= t('legal.privacy.principles.p3') %></p>
          <p><%= t('legal.privacy.principles.p4') %></p>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.data_collected.title') %></h2>
        <div class="space-y-3 text-justify">
          <p><%= t('legal.privacy.data_collected.p1') %></p>
          <p><%= t('legal.privacy.data_collected.p2') %></p>
          <p><%= t('legal.privacy.data_collected.p3') %></p>
          <p><%= t('legal.privacy.data_collected.p4') %></p>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.purposes.title') %></h2>
        <div class="space-y-3 text-justify">
          <p><%= t('legal.privacy.purposes.p1') %></p>
          <p><%= t('legal.privacy.purposes.p2') %></p>
          <p><%= t('legal.privacy.purposes.p3') %></p>
          <p><%= t('legal.privacy.purposes.p4') %></p>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.sharing.title') %></h2>
        <div class="space-y-3 text-justify">
          <p><%= t('legal.privacy.sharing.p1') %></p>
          <p><%= t('legal.privacy.sharing.p2') %></p>
          <p><%= t('legal.privacy.sharing.p3') %></p>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.retention.title') %></h2>
        <div class="space-y-3 text-justify">
          <p><%= t('legal.privacy.retention.p1') %></p>
          <p><%= t('legal.privacy.retention.p2') %></p>
          <p><%= t('legal.privacy.retention.p3') %></p>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.rights.title') %></h2>
        <div class="space-y-3 text-justify">
          <p><%= t('legal.privacy.rights.p1').gsub('privacy@recipy.app', '<a class="text-emerald-500 font-semibold" href="mailto:privacy@recipy.app">privacy@recipy.app</a>').html_safe %></p>
          <p><%= t('legal.privacy.rights.p2') %></p>
          <p><%= t('legal.privacy.rights.p3') %></p>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.security.title') %></h2>
        <p><%= t('legal.privacy.security.content') %></p>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.minors.title') %></h2>
        <p><%= t('legal.privacy.minors.content') %></p>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= t('legal.privacy.updates.title') %></h2>
        <p><%= t('legal.privacy.updates.content') %></p>
      </section>
    </article>
  <% end %>
</section>
