<%# 
  Renders legal content from database
  Locals: sections, page_color
%>
<section class="max-w-5xl mx-auto px-4 py-12 space-y-8">
  <% first_section = sections.first %>
  <% if first_section %>
    <header class="space-y-3">
      <p class="text-sm uppercase tracking-widest text-<%= page_color %>-500 font-semibold">
        Legal â€¢ <%= l(first_section.updated_at, format: :long) %>
      </p>
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white"><%= first_section.title(I18n.locale) %></h1>
      <% if first_section.key.end_with?('_intro') %>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          <%= simple_format(first_section.content(I18n.locale), {}, sanitize: false) %>
        </p>
      <% end %>
    </header>
  <% end %>

  <article class="space-y-6 text-gray-700 dark:text-gray-200 leading-relaxed">
    <% sections.each do |section| %>
      <% next if section.key.end_with?('_intro') %>
      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= section.title(I18n.locale) %></h2>
        <div class="space-y-3 text-justify">
          <%= simple_format(section.content(I18n.locale), {}, sanitize: false) %>
        </div>
      </section>
    <% end %>
  </article>
</section>

