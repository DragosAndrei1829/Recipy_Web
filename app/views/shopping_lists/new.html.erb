<% content_for :title, "Listă nouă" %>

<div class="shopping-list-form-page">
  <div class="shopping-list-form-container">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-black text-primary-content">Listă nouă</h1>
      <%= link_to shopping_lists_path, class: "btn-icon" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      <% end %>
    </div>

    <%= form_with model: @shopping_list, local: true, class: "space-y-6" do |f| %>
      <% if @shopping_list.errors.any? %>
        <div class="alert-error">
          <ul>
            <% @shopping_list.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-field">
        <%= f.label :name, "Nume listă", class: "form-label" %>
        <%= f.text_field :name, class: "form-input", placeholder: "Ex: Cumpărături săptămâna aceasta" %>
      </div>

      <div class="flex gap-3">
        <%= f.submit "Creează", class: "btn-primary" %>
        <%= link_to "Anulează", shopping_lists_path, class: "btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
