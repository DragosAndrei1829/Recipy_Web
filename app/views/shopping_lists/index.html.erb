      <details class="shopping-lists-archived">
        <summary class="text-lg font-semibold text-secondary-content cursor-pointer">
          Arhivate (<%= @archived_lists.count %>)
        </summary>
        <div class="shopping-lists-grid mt-4">
          <% @archived_lists.each do |list| %>
