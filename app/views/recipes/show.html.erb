<div class="recipe-show-page">
  <!-- Parallax Hero Section -->
  <div class="recipe-hero-modern relative overflow-hidden">
    <% if @recipe.photos.attached? && @recipe.photos.first.present? && @recipe.photos.first.blob.present? %>
      <div class="recipe-hero-image-wrapper">
        <%= image_tag url_for(@recipe.photos.first.variant(resize_to_limit: [1920, 800])), 
            class: "recipe-hero-image-parallax", 
            alt: @recipe.title,
            data: { parallax: true } %>
        <div class="recipe-hero-overlay-modern"></div>
      </div>
    <% else %>
      <div class="recipe-hero-gradient"></div>
    <% end %>
    
    <!-- Floating Header -->
    <div class="recipe-hero-content">
      <div class="container-recipe">
        <!-- Back Button -->
        <div class="mb-6 animate-fade-in-up" style="animation-delay: 0.1s">
          <%= link_to recipes_path, 
              class: "inline-flex items-center gap-2 px-4 py-2 rounded-2xl bg-white/10 backdrop-blur-md border border-white/20 text-white hover:bg-white/20 transition-all group" do %>
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <span>Înapoi</span>
          <% end %>
        </div>
        
        <!-- Title & Author -->
        <div class="animate-fade-in-up" style="animation-delay: 0.2s">
          <h1 class="recipe-title-modern"><%= @recipe.title %></h1>
          <div class="flex items-center gap-4 mt-6">
            <%= link_to user_path(@recipe.user), class: "flex items-center gap-3 group", data: { turbo_frame: "_top" } do %>
              <% if @recipe.user&.avatar&.attached? %>
                <%= image_tag url_for(@recipe.user.avatar.variant(resize_to_fill: [56, 56])), 
                    class: "w-14 h-14 rounded-2xl object-cover ring-4 ring-white/30 group-hover:ring-white/50 transition-all shadow-xl" %>
              <% else %>
                <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center text-white font-black text-xl shadow-xl group-hover:scale-110 transition-transform">
                  <%= @recipe.user&.username&.first&.upcase || 'U' %>
                </div>
              <% end %>
              <div>
                <p class="text-white font-bold text-lg"><%= @recipe.user&.username || "Anonim" %></p>
                <p class="text-white/80 text-sm"><%= time_ago_in_words(@recipe.created_at) %> <%= t('time.ago') %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
  </div>
  
  <!-- Stats Below Hero -->
  <div class="recipe-stats-below">
    <div class="container-recipe">
      <div class="recipe-stats-floating">
        <% if @recipe.difficulty && @recipe.difficulty > 0 %>
          <div class="stat-bubble" data-animate="bounce-in" style="animation-delay: 0.3s">
            <div class="stat-bubble-icon">
              <svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <div class="stat-bubble-content">
              <div class="stat-bubble-value"><%= @recipe.difficulty %></div>
              <div class="stat-bubble-label">Dificultate</div>
            </div>
          </div>
        <% end %>
        
        <% if @recipe.time_to_make && @recipe.time_to_make > 0 %>
          <div class="stat-bubble" data-animate="bounce-in" style="animation-delay: 0.4s">
            <div class="stat-bubble-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="stat-bubble-content">
              <div class="stat-bubble-value"><%= @recipe.time_to_make %></div>
              <div class="stat-bubble-label">minute</div>
            </div>
          </div>
        <% end %>
        
        <% if @recipe.healthiness && @recipe.healthiness > 0 %>
          <div class="stat-bubble" data-animate="bounce-in" style="animation-delay: 0.5s">
            <div class="stat-bubble-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <div class="stat-bubble-content">
              <div class="stat-bubble-value"><%= @recipe.healthiness %></div>
              <div class="stat-bubble-label">Sănătate</div>
            </div>
          </div>
        <% end %>
        
        <div class="stat-bubble" data-animate="bounce-in" style="animation-delay: 0.6s">
          <div class="stat-bubble-icon">
            <svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
          </div>
          <div class="stat-bubble-content">
            <div class="stat-bubble-value"><%= @recipe.likes_count %></div>
            <div class="stat-bubble-label">Likes</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="recipe-content-wrapper">
    <div class="container-recipe">
      <div class="recipe-layout-grid">
        <!-- Left Column - Main Content -->
        <div class="recipe-main-content">
          <!-- Categories Badges -->
          <div class="recipe-badges-section animate-slide-in-left" style="animation-delay: 0.3s">
            <% if @recipe.category %>
              <span class="recipe-badge-modern recipe-badge-primary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
                <%= @recipe.category.display_name %>
              </span>
            <% end %>
            <% if @recipe.cuisine %>
              <span class="recipe-badge-modern recipe-badge-secondary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= @recipe.cuisine.display_name %>
              </span>
            <% end %>
            <% if @recipe.food_type %>
              <span class="recipe-badge-modern recipe-badge-accent">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
                </svg>
                <%= @recipe.food_type.display_name %>
              </span>
            <% end %>
          </div>

          <!-- Description -->
          <% if @recipe.description.present? %>
            <section class="recipe-section-modern animate-slide-in-left" style="animation-delay: 0.4s">
              <h2 class="recipe-section-title-modern">
                <span class="recipe-section-number">01</span>
                <span>Despre rețetă</span>
              </h2>
              <div class="recipe-section-content">
                <p class="recipe-description-text"><%= @recipe.description %></p>
              </div>
            </section>
          <% end %>

          <!-- Video Section with Timestamps -->
          <% if @recipe.video.attached? && @recipe.video.blob.present? %>
            <section class="recipe-section-modern animate-slide-in-left" style="animation-delay: 0.5s">
              <h2 class="recipe-section-title-modern">
                <span class="recipe-section-number">02</span>
                <span><%= t('recipes.video_preparation') %></span>
              </h2>
              <div class="recipe-video-container grid grid-cols-1 lg:grid-cols-3 gap-6">
                <div class="lg:col-span-2">
                  <div class="recipe-video-wrapper">
                    <video 
                      id="recipe-video-player"
                      controls 
                      preload="metadata"
                      class="recipe-video-player w-full"
                      poster="<%= @recipe.photos.attached? && @recipe.photos.first.present? ? url_for(@recipe.photos.first.variant(resize_to_fill: [800, 450])) : '' %>"
                      data-timestamps="<%= @recipe.video_timestamps.to_json(only: [:id, :step_number, :timestamp_seconds, :title, :description]) %>"
                    >
                      <source src="<%= url_for(@recipe.video) %>" type="<%= @recipe.video.content_type %>">
                      <%= t('recipes.video_not_supported') %>
                    </video>
                  </div>
                </div>
                <% if @recipe.video_timestamps.any? %>
                  <div class="lg:col-span-1">
                    <div class="bg-card rounded-xl p-4 border-2 border-default">
                      <h3 class="text-lg font-bold text-primary-content mb-4"><%= t('video_timestamps.steps') %></h3>
                      <div class="space-y-2 max-h-96 overflow-y-auto" id="video-timestamps-list">
                        <% @recipe.video_timestamps.each do |timestamp| %>
                          <button 
                            type="button"
                            class="timestamp-step w-full text-left p-3 rounded-lg border-2 border-default hover:border-primary transition-all bg-page hover:bg-primary/5"
                            data-timestamp="<%= timestamp.timestamp_seconds %>"
                            data-step="<%= timestamp.step_number %>"
                          >
                            <div class="flex items-start justify-between gap-2">
                              <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                  <span class="text-xs font-bold text-primary bg-primary/10 px-2 py-0.5 rounded">Pas <%= timestamp.step_number %></span>
                                  <span class="text-xs text-secondary-content"><%= timestamp.formatted_time %></span>
                                </div>
                                <p class="text-sm font-semibold text-primary-content"><%= timestamp.title %></p>
                                <% if timestamp.description.present? %>
                                  <p class="text-xs text-secondary-content mt-1 line-clamp-2"><%= timestamp.description %></p>
                                <% end %>
                              </div>
                            </div>
                          </button>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </section>
          <% end %>

          <!-- Gallery -->
          <% if @recipe.photos.attached? && @recipe.photos.count > 1 %>
            <section class="recipe-section-modern animate-slide-in-left" style="animation-delay: 0.6s">
              <h2 class="recipe-section-title-modern">
                <span class="recipe-section-number">03</span>
                <span>Galerie</span>
              </h2>
              <div class="recipe-gallery-grid">
                <% @recipe.photos.drop(1).each_with_index do |photo, index| %>
                  <div class="recipe-gallery-item" onclick="openImageModal('<%= url_for(photo.variant(resize_to_limit: [1200, 1200])) %>')" data-gallery-index="<%= index %>">
                    <%= image_tag url_for(photo.variant(resize_to_fill: [400, 400])), 
                        class: "recipe-gallery-image", 
                        alt: "Photo #{index + 2}" %>
                    <div class="recipe-gallery-overlay">
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7"/>
                      </svg>
                    </div>
                  </div>
                <% end %>
              </div>
            </section>
          <% end %>

          <!-- Ingredients -->
          <section class="recipe-section-modern animate-slide-in-left" style="animation-delay: 0.7s">
            <h2 class="recipe-section-title-modern">
              <span class="recipe-section-number">04</span>
              <span>Ingrediente</span>
            </h2>
            <div class="recipe-ingredients-list">
              <% @recipe.ingredients.split("\n").reject(&:blank?).each_with_index do |ingredient, index| %>
                <div class="ingredient-item-modern" data-animate="fade-in-up" style="animation-delay: <%= 0.8 + (index * 0.05) %>s">
                  <div class="ingredient-checkbox">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <span class="ingredient-text"><%= ingredient.strip %></span>
                </div>
              <% end %>
            </div>
          </section>

          <!-- Preparation Steps -->
          <section class="recipe-section-modern animate-slide-in-left" style="animation-delay: 0.8s">
            <h2 class="recipe-section-title-modern">
              <span class="recipe-section-number">05</span>
              <span>Pași de preparare</span>
            </h2>
            <div class="recipe-steps-list">
              <% @recipe.preparation.split("\n").reject(&:blank?).each_with_index do |step, index| %>
                <div class="step-item-modern" data-animate="fade-in-up" style="animation-delay: <%= 0.9 + (index * 0.1) %>s">
                  <div class="step-number-modern">
                    <span><%= index + 1 %></span>
                  </div>
                  <div class="step-content-modern">
                    <p class="step-text"><%= step.strip %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </section>

          <!-- Comments Section -->
          <section class="recipe-section-modern animate-slide-in-left" style="animation-delay: 0.9s">
            <div id="<%= dom_id(@recipe, :comments) %>">
              <%= render "recipes/show_comments", recipe: @recipe %>
            </div>
          </section>
        </div>

        <!-- Right Column - Sticky Sidebar -->
        <aside class="recipe-sidebar-modern">
          <!-- Actions Card -->
          <div class="recipe-actions-card-modern sticky top-24">
            <div id="<%= dom_id(@recipe, :actions) %>" class="mb-6">
              <%= render "recipes/show_actions", recipe: @recipe %>
            </div>
            
            <% if user_signed_in? && @recipe.user != current_user %>
              <div class="space-y-3">
                <%= render 'reports/report_button', reportable: @recipe %>
                
                <button onclick="document.getElementById('share-modal').classList.remove('hidden')" 
                    class="w-full px-4 py-3 rounded-2xl bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-bold hover:shadow-xl hover:scale-105 transition-all flex items-center justify-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                  </svg>
                  <span>Distribuie</span>
                </button>
              </div>
            <% end %>
          </div>
        </aside>
      </div>
    </div>
  </div>
</div>

<!-- Share Modal -->
<% if user_signed_in? && @recipe.user != current_user %>
  <div id="share-modal" class="modal-overlay hidden">
    <div class="modal-container">
      <div class="modal-content">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-2xl font-black text-gray-800 dark:text-white">Distribuie rețeta</h3>
          <button onclick="document.getElementById('share-modal').classList.add('hidden')" 
              class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors p-2 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        
        <%= form_with url: shared_recipes_path, method: :post, local: true, class: "space-y-4" do |f| %>
          <%= hidden_field_tag :recipe_id, @recipe.id %>
          
          <div>
            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">
              Distribuie cu
            </label>
            <%= f.select :recipient_id,
                options_from_collection_for_select(User.where.not(id: current_user.id).order(:username), :id, :username),
                { prompt: "Selectează utilizator" },
                { class: "w-full px-4 py-3 rounded-2xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary/20 bg-card text-primary-content",
                  required: true } %>
          </div>
          
          <div>
            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">
              Mesaj (opțional)
            </label>
            <%= f.text_area :message, rows: 3,
                class: "w-full px-4 py-3 rounded-2xl border-2 border-default focus:border-primary focus:ring-2 focus:ring-primary/20 bg-card text-primary-content resize-none",
                placeholder: "Adaugă un mesaj..." %>
          </div>
          
          <div class="flex gap-3">
            <%= f.submit "Distribuie", 
                class: "flex-1 px-4 py-3 rounded-2xl bg-gradient-to-r from-emerald-600 to-teal-500 text-white font-bold hover:shadow-xl hover:scale-105 transition-all" %>
            <button type="button" onclick="document.getElementById('share-modal').classList.add('hidden')" 
                class="px-4 py-3 rounded-2xl bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold hover:bg-gray-200 dark:hover:bg-gray-600 transition-all">
              Anulează
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Image Modal -->
<div id="image-modal" class="modal-overlay hidden" onclick="closeImageModal()">
  <div class="modal-image-container">
    <img id="modal-image" src="" alt="" class="modal-image">
    <button onclick="closeImageModal()" class="modal-close-btn">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>
</div>

<script>
  // Parallax effect for hero image
  (function() {
    const heroImage = document.querySelector('.recipe-hero-image-parallax');
    if (!heroImage) return;
    
    window.addEventListener('scroll', function() {
      const scrolled = window.pageYOffset;
      const rate = scrolled * 0.5;
      heroImage.style.transform = `translateY(${rate}px)`;
    });
  })();
  
  // Image modal
  function openImageModal(imageUrl) {
    const modal = document.getElementById('image-modal');
    const img = document.getElementById('modal-image');
    img.src = imageUrl;
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeImageModal() {
    const modal = document.getElementById('image-modal');
    modal.classList.add('hidden');
    document.body.style.overflow = '';
  }
  
  // Animate elements on scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -100px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const animation = entry.target.dataset.animate;
        if (animation) {
          entry.target.style.animation = `${animation} 0.6s ease-out forwards`;
        }
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('[data-animate]').forEach(el => {
    observer.observe(el);
  });
  
  // Interactive ingredient checkboxes
  document.querySelectorAll('.ingredient-item-modern').forEach(item => {
    item.addEventListener('click', function() {
      this.classList.toggle('checked');
    });
  });
</script>
