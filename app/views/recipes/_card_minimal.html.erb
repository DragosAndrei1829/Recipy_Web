<% 
  # Determine valid photo for display
  valid_photo = if recipe.cover_photo&.attached?
    begin
      recipe.cover_photo.variant(resize_to_fill: [680, 400])
    rescue ActiveStorage::FileNotFoundError, NoMethodError
      nil
    end
  elsif recipe.photos.attached? && recipe.photos.any?
    begin
      photo = recipe.photos.detect { |p| p.attached? && p.blob.present? }
      photo&.variant(resize_to_fill: [680, 400])
    rescue ActiveStorage::FileNotFoundError, NoMethodError
      nil
    end
  else
    nil
  end
%>

<article class="recipe-card-minimal animate-fade-in">
  <!-- Image (if available) -->
  <% if valid_photo %>
    <%= link_to recipe_path(recipe, locale: I18n.locale), data: { turbo: false } do %>
      <%= image_tag url_for(valid_photo), 
          alt: recipe.title,
          class: "recipe-card-minimal__image",
          loading: "lazy" %>
    <% end %>
  <% end %>

  <!-- Content -->
  <div class="recipe-card-minimal__content">
    <!-- User Info -->
    <div class="flex items-center gap-2 mb-3">
      <%= link_to user_path(recipe.user, locale: I18n.locale), class: "flex items-center gap-2 hover-underline", data: { turbo: false } do %>
        <% if recipe.user&.avatar&.attached? %>
          <% begin %>
            <%= image_tag url_for(recipe.user.avatar.variant(resize_to_fill: [32,32])),
                class: "w-8 h-8 rounded-full object-cover" %>
          <% rescue ActiveStorage::FileNotFoundError %>
            <div class="w-8 h-8 rounded-full bg-accent flex items-center justify-center text-white text-xs font-semibold">
              <%= (recipe.user.username&.first || 'U').upcase %>
            </div>
          <% end %>
        <% else %>
          <div class="w-8 h-8 rounded-full bg-accent flex items-center justify-center text-white text-xs font-semibold">
            <%= (recipe.user.username&.first || 'U').upcase %>
          </div>
        <% end %>
        <span class="text-sm font-semibold"><%= recipe.user.username %></span>
      <% end %>
      <span class="text-xs opacity-50">Â· <%= time_ago_in_words(recipe.created_at) %> <%= t('time.ago') %></span>
    </div>

    <!-- Title -->
    <%= link_to recipe_path(recipe, locale: I18n.locale), class: "block", data: { turbo: false } do %>
      <h3 class="recipe-card-minimal__title"><%= recipe.title %></h3>
    <% end %>

    <!-- Description -->
    <% if recipe.description.present? %>
      <p class="recipe-card-minimal__description"><%= recipe.description %></p>
    <% end %>

    <!-- Meta Info -->
    <div class="recipe-card-minimal__meta">
      <% if recipe.preparation_time %>
        <span class="flex items-center gap-1">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= recipe.preparation_time %> min
        </span>
      <% end %>
      <% if recipe.category %>
        <span class="flex items-center gap-1">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
          <%= recipe.category.display_name %>
        </span>
      <% end %>
      <% if recipe.average_rating && recipe.average_rating > 0 %>
        <span class="flex items-center gap-1">
          <svg class="w-3.5 h-3.5 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <%= number_with_precision(recipe.average_rating, precision: 1) %>
        </span>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="recipe-card-minimal__actions">
    <!-- Like -->
    <%= button_to recipe_like_path(recipe, locale: I18n.locale), method: :post, class: "btn-icon", data: { turbo: false } do %>
      <% if user_signed_in? && recipe.likes.exists?(user: current_user) %>
        <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
        </svg>
      <% else %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
      <% end %>
      <span class="text-sm ml-1"><%= recipe.likes_count || 0 %></span>
    <% end %>

    <!-- Comment -->
    <%= link_to recipe_path(recipe, locale: I18n.locale, anchor: "comments"), class: "btn-icon", data: { turbo: false } do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      <span class="text-sm ml-1"><%= recipe.comments_count || 0 %></span>
    <% end %>

    <!-- Share -->
    <button type="button" class="btn-icon" onclick="navigator.share ? navigator.share({title: '<%= escape_javascript(recipe.title) %>', url: '<%= recipe_url(recipe, locale: I18n.locale) %>'}) : navigator.clipboard.writeText('<%= recipe_url(recipe, locale: I18n.locale) %>')">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
      </svg>
    </button>

    <!-- Favorite -->
    <%= button_to recipe_favorite_path(recipe, locale: I18n.locale), method: :post, class: "btn-icon ml-auto", data: { turbo: false } do %>
      <% if user_signed_in? && recipe.favorites.exists?(user: current_user) %>
        <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
          <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z"/>
        </svg>
      <% else %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
        </svg>
      <% end %>
    <% end %>

    <!-- View Recipe Button -->
    <%= link_to recipe_path(recipe, locale: I18n.locale), class: "btn-primary ml-2", data: { turbo: false } do %>
      <%= t('recipes.view_recipe', default: 'View Recipe') %>
    <% end %>
  </div>
</article>
