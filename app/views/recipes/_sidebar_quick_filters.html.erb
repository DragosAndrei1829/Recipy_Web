<% quick_presets = @quick_filters || available_quick_filters %>
<div class="space-y-4">
  <div>
    <h3 class="text-lg font-black text-primary-content"><%= t('filters.quick_title') %></h3>
    <p class="text-sm text-secondary-content"><%= t('filters.quick_description') %></p>
  </div>
  <div class="flex flex-wrap gap-2">
    <% quick_presets.each do |preset| %>
      <%= link_to recipes_path(preset: preset[:slug]), class: "quick-chip" do %>
        <% case preset[:icon]
           when 'clock' %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        <% when 'star' %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.039 3.19a1 1 0 00.95.69h3.356c.969 0 1.371 1.24.588 1.81l-2.715 1.972a1 1 0 00-.364 1.118l1.038 3.19c.3.921-.755 1.688-1.54 1.118l-2.715-1.972a1 1 0 00-1.176 0l-2.715 1.972c-.785.57-1.84-.197-1.54-1.118l1.038-3.19a1 1 0 00-.364-1.118L4.117 8.617c-.783-.57-.38-1.81.588-1.81h3.356a1 1 0 00.95-.69l1.038-3.19z"/></svg>
        <% when 'sparkles' %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8l3 3-3 3m9-9l3 3-3 3m-8 7h.01M5 5h.01M19 5h.01M12 19l2 2 2-2m-2-2v4"/></svg>
        <% when 'leaf' %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4c0 7.18 5.82 13 13 13h1v-1C19 11.82 13.18 6 6 6H3M19 3h2v2"/></svg>
        <% end %>
        <span><%= preset[:label] %></span>
      <% end %>
    <% end %>
  </div>
</div>

