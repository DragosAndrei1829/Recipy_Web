<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
<% end %>

<!-- Modern Feed Container -->
<div class="feed-container">
  <!-- Modern Header with Gradient -->
  <div class="mb-10 animate-fade-in">
    <div class="flex items-center gap-3 mb-3">
      <div class="w-1 h-12 bg-gradient-to-b from-primary via-secondary to-accent rounded-full"></div>
      <div>
        <h1 class="text-4xl font-black bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">
          <%= t('recipes.index.title', default: 'Exploratorul Culinar') %>
        </h1>
        <p class="text-sm opacity-60 mt-1">
          <%= number_with_delimiter(@feed_stats[:total_recipes]) %>+ <%= t('recipes.title', default: 'rețete') %> · 
          <span class="text-accent font-semibold"><%= t('recipes.index.fresh_content', default: 'Actualizat zilnic') %></span>
        </p>
      </div>
    </div>
  </div>

  <!-- Recipes Grid - Modern Layout with Spacing -->
  <div class="recipe-feed-grid">
    <% @recipes.each_with_index do |recipe, index| %>
      <div class="recipe-card-wrapper" style="animation-delay: <%= index * 0.08 %>s">
        <%= render "recipes/card_minimal", recipe: recipe %>
      </div>
    <% end %>
  </div>
</div>

<% if @recipes.empty? %>
  <div class="text-center py-16 animate-fade-in">
    <div class="inline-block p-6 rounded-full bg-primary bg-opacity-10 mb-4">
      <svg class="h-16 w-16 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
      </svg>
    </div>
    <h3 class="text-2xl font-bold text-primary-content mb-2"><%= t('recipes.index.empty') %></h3>
    <p class="text-secondary-content mb-6"><%= t('recipes.index.empty_description') %></p>
    <% if user_signed_in? %>
      <%= link_to new_recipe_path, class: "inline-flex items-center gap-2 rounded-xl bg-gradient-primary px-6 py-3 text-white font-bold shadow-lg hover:shadow-xl transition-smooth hover-lift" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span><%= t('recipes.index.create_first') %></span>
      <% end %>
    <% end %>
  </div>
<% end %>
