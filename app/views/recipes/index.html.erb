<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<!-- Feed Header -->
<div class="feed-hero animate-slide-in">
  <p class="feed-hero__eyebrow"><%= t('recipes.title') %> Â· <%= number_with_delimiter(@feed_stats[:total_recipes]) %>+</p>
  <h1>
    <%= t('recipes.index.title') %>
  </h1>
  <p class="feed-hero__description"><%= t('recipes.index.description') %></p>
  <% if user_signed_in? && @showing_recommended %>
    <p class="feed-hero__badge">
      <%= t('recipes.index.showing_recommended') %>
    </p>
  <% end %>
  <div class="feed-hero__presets">
    <div>
      <p class="feed-hero__section-label"><%= t('filters.quick_title') %></p>
      <div class="feed-hero__pills">
        <% (@quick_filters || available_quick_filters).first(4).each do |preset| %>
          <button type="button" class="quick-chip" data-quick-search="<%= preset[:slug] %>">
            #<%= preset[:slug] %>
          </button>
        <% end %>
      </div>
    </div>
    <div>
      <p class="feed-hero__section-label"><%= t('filters.all_categories') %></p>
      <div class="feed-hero__pills">
        <% @categories.first(4).each do |category| %>
          <span><%= category.display_name %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Recipes Grid with unique layout -->
<div class="space-y-4 sm:space-y-6">
  <% @recipes.each_with_index do |recipe, index| %>
    <turbo-frame id="<%= dom_id(recipe) %>" class="stagger-item" style="animation-delay: <%= index * 0.1 %>s">
      <%= render "recipes/card", recipe: recipe %>
    </turbo-frame>
  <% end %>
</div>

<% if @recipes.empty? %>
  <div class="text-center py-16 animate-fade-in">
    <div class="inline-block p-6 rounded-full bg-primary bg-opacity-10 mb-4">
      <svg class="h-16 w-16 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
      </svg>
    </div>
    <h3 class="text-2xl font-bold text-primary-content mb-2"><%= t('recipes.index.empty') %></h3>
    <p class="text-secondary-content mb-6"><%= t('recipes.index.empty_description') %></p>
    <% if user_signed_in? %>
      <%= link_to new_recipe_path, class: "inline-flex items-center gap-2 rounded-xl bg-gradient-primary px-6 py-3 text-white font-bold shadow-lg hover:shadow-xl transition-smooth hover-lift" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span><%= t('recipes.index.create_first') %></span>
      <% end %>
    <% end %>
  </div>
<% end %>
