<div class="top-recipes-sidebar-widget">
  <!-- Title -->
  <div class="top-recipes-sidebar-title">
    <h3><%= t('top_recipes.title', default: 'Top Recipes') %></h3>
  </div>
  
  <!-- Period Tabs -->
  <div class="top-recipes-tabs" id="top-recipes-tabs">
    <button class="top-recipes-tab" 
            data-period="week" 
            data-preview="true">
      <%= t('top_recipes.week') %>
      </button>
    <button class="top-recipes-tab" 
            data-period="month" 
            data-preview="true">
      <%= t('top_recipes.month') %>
      </button>
    <button class="top-recipes-tab active" 
            data-period="year" 
            data-preview="true">
      <%= t('top_recipes.year') %>
      </button>
    </div>

  <!-- Search -->
  <div class="top-recipes-search">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <input type="search"
               placeholder="<%= t('navigation.search_recipes') %>"
           class="top-recipes-search-input"
               data-top-recipes-search>
      </div>

  <!-- Preview Container -->
  <div id="top-recipes-preview-container" class="top-recipes-preview-container hidden">
    <div class="top-recipes-preview-header">
      <span>Preview</span>
      <button onclick="closeTopRecipesPreview()" class="top-recipes-preview-close">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                          </svg>
      </button>
                        </div>
    <div id="top-recipes-preview-content" class="top-recipes-preview-content">
      <!-- Preview items loaded here -->
                        </div>
                      </div>

  <!-- Default Content (shown by default with year selected) -->
  <div class="top-recipes-default-content" data-top-recipes-container>
      <!-- Week -->
    <div class="top-recipes-period-content hidden" data-period="week">
        <% if @top_week.any? %>
        <div class="top-recipes-list-modern">
          <% @top_week.each_with_index do |recipe, index| %>
            <% rank = index + 1 %>
            <%= link_to recipe_path(recipe, locale: I18n.locale), 
                class: "top-recipes-card-modern #{'rank-first' if rank == 1} #{'rank-second' if rank == 2} #{'rank-third' if rank == 3}", 
