<script>
(function() {
  'use strict';
  
  // Get current locale from URL
  function getCurrentLocale() {
    const path = window.location.pathname;
    const match = path.match(/^\/(ro|en)/);
    return match ? match[1] : 'ro';
  }
  
  // Initialize default state on page load
  function initializeTopRecipes() {
    const defaultContent = document.querySelector('[data-top-recipes-container]');
    if (!defaultContent) {
      // Retry after a short delay if container not found
      setTimeout(initializeTopRecipes, 100);
      return;
    }
    
    // Hide ALL period contents first (force hide)
    const allPeriodContents = defaultContent.querySelectorAll('.top-recipes-period-content');
    allPeriodContents.forEach(content => {
      content.classList.add('hidden');
      content.style.display = 'none';
    });
    
    // Show year content by default
    const yearContent = defaultContent.querySelector('[data-period="year"]');
    if (yearContent) {
      yearContent.classList.remove('hidden');
      yearContent.style.display = '';
    } else {
      console.warn('Year content not found');
    }
    
    // Ensure year tab is active
    const yearTab = document.querySelector('.top-recipes-tab[data-period="year"]');
    if (yearTab) {
      document.querySelectorAll('.top-recipes-tab').forEach(t => t.classList.remove('active'));
      yearTab.classList.add('active');
    }
    
    // Ensure default content is visible
    defaultContent.classList.remove('hidden');
  }
  
  // Initialize immediately and also on DOM ready and window load as fallback
  // Try multiple times to ensure it works
  function runInitialization() {
    initializeTopRecipes();
  }
  
  // Run immediately if DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', runInitialization);
  } else {
    runInitialization();
  }
  
  // Also run on window load as fallback
  window.addEventListener('load', function() {
    setTimeout(runInitialization, 50);
  });
  
  // One more fallback with a longer delay
  setTimeout(runInitialization, 200);
  
  // Handle period tab clicks
  document.addEventListener('click', function(e) {
    const tab = e.target.closest('.top-recipes-tab[data-preview="true"]');
    if (!tab) return;
    
    e.preventDefault();
    const period = tab.dataset.period;
    
    // Update active tab
    document.querySelectorAll('.top-recipes-tab').forEach(t => t.classList.remove('active'));
    tab.classList.add('active');
    
    // Hide preview container (we'll use default content instead)
    const previewContainer = document.getElementById('top-recipes-preview-container');
    const defaultContent = document.querySelector('[data-top-recipes-container]');
    
    if (previewContainer) previewContainer.classList.add('hidden');
    
    // Show default content and the selected period
    if (defaultContent) {
      defaultContent.classList.remove('hidden');
      
      // Hide ALL period contents first (force hide with both class and style)
      const allPeriodContents = defaultContent.querySelectorAll('.top-recipes-period-content');
      allPeriodContents.forEach(content => {
        content.classList.add('hidden');
        content.style.display = 'none';
      });
      
      // Show ONLY selected period content
      const selectedPeriodContent = defaultContent.querySelector(`[data-period="${period}"]`);
      if (selectedPeriodContent) {
        selectedPeriodContent.classList.remove('hidden');
        selectedPeriodContent.style.display = '';
      }
    }
  });
  
  // Search functionality
  const searchInput = document.querySelector('[data-top-recipes-search]');
  if (searchInput) {
    searchInput.addEventListener('input', function() {
      const query = this.value.toLowerCase().trim();
      const items = document.querySelectorAll('.top-recipes-list-item');
      
      items.forEach(item => {
        const text = (item.dataset.filterText || '').toLowerCase();
        if (text.includes(query)) {
          item.style.display = '';
        } else {
          item.style.display = 'none';
        }
      });
    });
  }
  
  // Close preview function
  window.closeTopRecipesPreview = function() {
    const previewContainer = document.getElementById('top-recipes-preview-container');
    const defaultContent = document.querySelector('[data-top-recipes-container]');
    
    if (previewContainer) previewContainer.classList.add('hidden');
    if (defaultContent) defaultContent.classList.remove('hidden');
  };
  
  // CSS animation
  const style = document.createElement('style');
  style.textContent = '@keyframes spin { to { transform: rotate(360deg); } }';
  document.head.appendChild(style);
})();
</script>
