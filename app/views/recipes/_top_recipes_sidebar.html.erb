<script>
(function() {
  'use strict';
  
  // Get current locale from URL
  function getCurrentLocale() {
    const path = window.location.pathname;
    const match = path.match(/^\/(ro|en)/);
    return match ? match[1] : 'ro';
  }
  
  // Handle period tab clicks
  document.addEventListener('click', function(e) {
    const tab = e.target.closest('.top-recipes-tab[data-preview="true"]');
    if (!tab) return;
    
    e.preventDefault();
    const period = tab.dataset.period;
    
    // Update active tab
    document.querySelectorAll('.top-recipes-tab').forEach(t => t.classList.remove('active'));
    tab.classList.add('active');
    
    // Show preview container
    const previewContainer = document.getElementById('top-recipes-preview-container');
    const previewContent = document.getElementById('top-recipes-preview-content');
    const defaultContent = document.querySelector('[data-top-recipes-container]');
    
    if (!previewContainer || !previewContent) return;
    
    previewContainer.classList.remove('hidden');
    if (defaultContent) defaultContent.classList.add('hidden');
    
    // Show loading
    previewContent.innerHTML = '<div style="text-align: center; padding: 2rem;"><div style="display: inline-block; width: 24px; height: 24px; border: 3px solid #10b981; border-top-color: transparent; border-radius: 50%; animation: spin 0.8s linear infinite;"></div></div>';
    
    // Fetch preview
    const locale = getCurrentLocale();
    const url = `/${locale}/top_recipes?period=${period}&preview=sidebar`;
    
    fetch(url, {
      headers: {
        'Accept': 'text/html',
        'X-Requested-With': 'XMLHttpRequest'
      },
      credentials: 'same-origin'
    })
    .then(response => {
      if (!response.ok) throw new Error('Network error');
      return response.text();
    })
    .then(html => {
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      const items = doc.querySelectorAll('.top-recipe-preview-item');
      
      if (items.length > 0) {
        previewContent.innerHTML = '';
        items.forEach(item => previewContent.appendChild(item.cloneNode(true)));
      } else {
        previewContent.innerHTML = '<div class="bg-card rounded-2xl p-6 text-center"><p class="text-secondary-content font-medium">Nu s-a postat în această perioadă</p></div>';
      }
    })
    .catch(error => {
      console.error('Preview error:', error);
      previewContent.innerHTML = '<p style="text-align: center; padding: 2rem; color: #ef4444;">Eroare la încărcare</p>';
    });
  });
  
  // Search functionality
  const searchInput = document.querySelector('[data-top-recipes-search]');
  if (searchInput) {
    searchInput.addEventListener('input', function() {
      const query = this.value.toLowerCase().trim();
      const items = document.querySelectorAll('.top-recipes-list-item');
      
      items.forEach(item => {
        const text = (item.dataset.filterText || '').toLowerCase();
        if (text.includes(query)) {
          item.style.display = '';
        } else {
          item.style.display = 'none';
        }
      });
    });
  }
  
  // Close preview function
  window.closeTopRecipesPreview = function() {
    const previewContainer = document.getElementById('top-recipes-preview-container');
    const defaultContent = document.querySelector('[data-top-recipes-container]');
    
    if (previewContainer) previewContainer.classList.add('hidden');
    if (defaultContent) defaultContent.classList.remove('hidden');
  };
  
  // CSS animation
  const style = document.createElement('style');
  style.textContent = '@keyframes spin { to { transform: rotate(360deg); } }';
  document.head.appendChild(style);
})();
</script>
