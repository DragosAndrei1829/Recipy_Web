<div class="top-recipes-full-page">
  <!-- Header -->
  <div class="top-recipes-header">
    <h1 class="top-recipes-title flex items-center gap-2">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
      </svg>
      <%= t('top_recipes.page_title') %>
    </h1>
    <p class="top-recipes-subtitle"><%= t('top_recipes.page_description') %></p>
  </div>

  <!-- Main Layout -->
  <div class="top-recipes-layout">
    <!-- Recipes Section -->
    <div class="top-recipes-content">
      <% if @recipes.any? %>
        <div class="top-recipes-grid">
          <% @recipes.each_with_index do |recipe, index| %>
            <div class="top-recipe-card-wrapper">
              <%= render 'recipes/card_inner', recipe: recipe, index: index %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="top-recipes-empty">
          <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h3><%= t('top_recipes.no_results') %></h3>
          <p><%= t('top_recipes.no_results_description') %></p>
        </div>
      <% end %>
    </div>

    <!-- Filters Sidebar -->
    <aside class="top-recipes-sidebar">
      <%= render 'recipes/top_recipes_filters' %>
    </aside>
  </div>
</div>