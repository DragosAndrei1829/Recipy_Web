<% rating_scope = recipe.comments.where.not(rating: nil) %>
<% avg_rating = rating_scope.any? ? rating_scope.average(:rating).to_f.round(1) : nil %>

<article id="<%= dom_id(recipe, :mobile) %>" class="mobile-recipe-card bg-gradient-to-br from-card via-card to-card/90 backdrop-blur-sm border-2 border-default rounded-3xl overflow-hidden shadow-2xl hover:shadow-3xl mb-4 transform transition-all duration-300 hover:scale-[1.02]">
  <!-- Mobile Header - Enhanced -->
  <div class="flex items-center justify-between p-4 border-b-2 border-primary/10 bg-gradient-to-r from-transparent via-primary/5 to-transparent">
    <div class="flex items-center gap-2 flex-1 min-w-0">
      <% if recipe.user.avatar.attached? %>
        <%= image_tag url_for(recipe.user.avatar.variant(resize_to_fill: [40,40])), class: "w-10 h-10 rounded-full object-cover ring-4 ring-primary/20 shadow-lg" %>
      <% else %>
        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-emerald-400 via-teal-500 to-cyan-600 flex items-center justify-center text-white font-bold shadow-lg ring-4 ring-primary/20">
          <%= recipe.user.username&.first&.upcase || 'U' %>
        </div>
      <% end %>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-bold text-primary-content truncate"><%= recipe.user.username %></p>
        <p class="text-xs text-secondary-content"><%= time_ago_in_words(recipe.created_at) %> ago</p>
      </div>
    </div>
    <!-- Category Badge - Enhanced -->
    <% if recipe.category %>
      <span class="text-xs px-3 py-1.5 rounded-full font-bold shadow-md <%= recipe.category.id == 1 ? 'bg-gradient-to-r from-orange-400 to-red-500 text-white' : recipe.category.id == 2 ? 'bg-gradient-to-r from-blue-400 to-indigo-500 text-white' : 'bg-gradient-to-r from-emerald-400 to-teal-500 text-white' %>">
        <%= recipe.category.display_name %>
      </span>
    <% end %>
  </div>

  <!-- Mobile Image - Full Width with Overlay -->
  <% if recipe.photos.attached? && recipe.photos.first.present? %>
    <%= link_to recipe_path(recipe, locale: I18n.locale), class: "block relative group", data: { turbo: false } do %>
      <%= image_tag url_for(recipe.photos.first.variant(resize_to_limit: [800, 600])), 
          class: "w-full h-56 object-cover transition-transform duration-500 group-active:scale-110",
          loading: "lazy" %>
      <!-- Gradient Overlay on tap -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-active:opacity-100 transition-opacity duration-300"></div>
    <% end %>
  <% else %>
    <!-- Enhanced Placeholder -->
    <div class="w-full h-56 bg-gradient-to-br from-gray-100 via-gray-50 to-gray-100 flex items-center justify-center">
      <svg class="w-20 h-20 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
    </div>
  <% end %>

  <!-- Mobile Content - Enhanced Spacing -->
  <div class="p-4 space-y-4">
    <!-- Title - Enhanced -->
    <%= link_to recipe_path(recipe, locale: I18n.locale), class: "block group", data: { turbo: false } do %>
      <h3 class="text-xl font-black text-primary-content mb-2 line-clamp-2 group-active:text-primary transition-colors"><%= recipe.title %></h3>
    <% end %>
    
    <!-- Stats - Enhanced with Badges -->
    <div class="flex flex-wrap items-center gap-2">
      <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-blue-50 dark:bg-blue-900/20">
        <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        <span class="text-sm font-semibold text-blue-700 dark:text-blue-300"><%= recipe.time_to_make %> min</span>
      </div>
      <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-yellow-50 dark:bg-yellow-900/20">
        <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
        <span class="text-sm font-semibold text-yellow-700 dark:text-yellow-300"><%= recipe.difficulty %>/5</span>
      </div>
      <% if avg_rating %>
        <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-emerald-50 dark:bg-emerald-900/20">
          <svg class="w-4 h-4 text-emerald-500" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          <span class="text-sm font-semibold text-emerald-700 dark:text-emerald-300"><%= avg_rating %></span>
        </div>
      <% end %>
    </div>

    <!-- Actions - Mobile Optimized with Enhanced Buttons -->
    <div class="flex items-center justify-between pt-3 border-t-2 border-default/50">
      <!-- Left: Social Actions - Larger Touch Targets -->
      <div class="flex items-center gap-5">
        <!-- Like - Enhanced Button -->
        <%= button_to toggle_like_recipe_path(recipe, locale: I18n.locale), 
            method: :post,
            class: "flex items-center gap-2 px-3 py-2 rounded-xl transition-all active:scale-95 border-0 #{user_signed_in? && recipe.likes.exists?(user: current_user) ? 'bg-rose-50 dark:bg-rose-900/20' : 'bg-gray-50 dark:bg-gray-800/50'}",
            data: { turbo: false },
            form: { style: "display: inline;" } do %>
          <svg class="w-6 h-6 <%= user_signed_in? && recipe.likes.exists?(user: current_user) ? 'text-rose-500 fill-rose-500' : 'text-secondary-content' %>" 
               fill="<%= user_signed_in? && recipe.likes.exists?(user: current_user) ? 'currentColor' : 'none' %>" 
               stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
          <span class="text-sm font-bold <%= user_signed_in? && recipe.likes.exists?(user: current_user) ? 'text-rose-600 dark:text-rose-400' : 'text-secondary-content' %>"><%= recipe.likes_count %></span>
        <% end %>

        <!-- Comment - Enhanced Button -->
        <%= link_to recipe_path(recipe, anchor: "comments", locale: I18n.locale), 
            class: "flex items-center gap-2 px-3 py-2 rounded-xl bg-blue-50 dark:bg-blue-900/20 transition-all active:scale-95",
            data: { turbo: false } do %>
          <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <span class="text-sm font-bold text-blue-600 dark:text-blue-400"><%= recipe.comments_count %></span>
        <% end %>

        <!-- Favorite - Enhanced Button -->
        <% if user_signed_in? %>
          <%= button_to toggle_favorite_recipe_path(recipe, locale: I18n.locale),
              method: :post,
              class: "flex items-center justify-center w-10 h-10 rounded-xl transition-all active:scale-95 border-0 #{recipe.favorites.exists?(user: current_user) ? 'bg-amber-50 dark:bg-amber-900/20' : 'bg-gray-50 dark:bg-gray-800/50'}",
              data: { turbo: false },
              form: { style: "display: inline;" } do %>
            <svg class="w-6 h-6 <%= recipe.favorites.exists?(user: current_user) ? 'text-amber-500 fill-amber-500' : 'text-secondary-content' %>" 
                 fill="<%= recipe.favorites.exists?(user: current_user) ? 'currentColor' : 'none' %>" 
                 stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
            </svg>
          <% end %>
        <% end %>
      </div>

      <!-- Right: View Recipe Button - Enhanced -->
      <%= link_to recipe_path(recipe, locale: I18n.locale), 
          class: "inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-emerald-500 via-teal-500 to-cyan-500 text-white text-base font-bold rounded-2xl shadow-lg hover:shadow-xl transition-all active:scale-95 active:shadow-md",
          data: { turbo: false } do %>
        <span>Vezi Re»õeta</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>
  </div>
</article>

