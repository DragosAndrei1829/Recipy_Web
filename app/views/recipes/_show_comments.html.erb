<div class="recipe-comments-section-full">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-2xl font-black text-primary-content"><%= t('recipes.show.comments') %> (<%= recipe.comments_count %>)</h3>
    <% if recipe.comments.where("rating > 0").any? %>
      <% avg_rating = recipe.comments.where("rating > 0").average(:rating).to_f.round(1) %>
      <div class="flex items-center gap-3">
        <span class="text-sm font-semibold text-secondary-content"><%= t('recipes.show.average_rating') %>:</span>
        <div class="flex items-center gap-1">
          <span class="text-2xl font-black text-primary"><%= avg_rating %></span>
          <span class="text-sm text-secondary-content">/10</span>
        </div>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="recipe-review-form-extended mb-8">
      <h4 class="text-xl font-bold text-primary-content mb-4">AdaugƒÉ o recenzie</h4>
      
      <%= form_with model: [:recipe, Comment.new],
                    url: recipe_comments_path(recipe, locale: I18n.locale, format: :turbo_stream),
                    method: :post, data: { turbo: true }, class: "space-y-6" do |f| %>
        
        <!-- Overall Rating -->
        <div class="review-field-extended">
          <label class="review-label-extended">
            <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            Rating general
          </label>
          <div class="review-input-group">
            <%= f.number_field :rating, 
                in: 0..10, 
                step: 1,
                placeholder: "0",
                class: "review-input-extended" %>
            <span class="review-input-suffix">/ 10</span>
          </div>
          <p class="review-help-text">EvalueazƒÉ re»õeta √Æn general (0 = foarte slab, 10 = excelent)</p>
        </div>

        <!-- Advanced Ratings - Always Visible, Extended -->
        <div class="review-advanced-section">
          <h5 class="review-section-title">Rating-uri detaliate</h5>
          <div class="review-advanced-grid">
            <div class="review-advanced-field">
              <label class="review-advanced-label">
                <span class="review-icon">üëÖ</span>
                <span>Gust</span>
              </label>
              <%= f.number_field :taste_rating, 
                  in: 1..5, 
                  step: 1,
                  placeholder: "1-5",
                  class: "review-advanced-input" %>
              <p class="review-advanced-help">1 = foarte slab, 5 = excelent</p>
            </div>
            
            <div class="review-advanced-field">
              <label class="review-advanced-label">
                <span class="review-icon">‚öôÔ∏è</span>
                <span>Dificultate</span>
              </label>
              <%= f.number_field :difficulty_rating, 
                  in: 1..5, 
                  step: 1,
                  placeholder: "1-5",
                  class: "review-advanced-input" %>
              <p class="review-advanced-help">1 = foarte u»ôor, 5 = foarte dificil</p>
            </div>
            
            <div class="review-advanced-field">
              <label class="review-advanced-label">
                <span class="review-icon">‚è±Ô∏è</span>
                <span>Timp</span>
              </label>
              <%= f.number_field :time_rating, 
                  in: 1..5, 
                  step: 1,
                  placeholder: "1-5",
                  class: "review-advanced-input" %>
              <p class="review-advanced-help">1 = foarte rapid, 5 = foarte lent</p>
            </div>
            
            <div class="review-advanced-field">
              <label class="review-advanced-label">
                <span class="review-icon">üí∞</span>
                <span>Cost</span>
              </label>
              <%= f.number_field :cost_rating, 
                  in: 1..5, 
                  step: 1,
                  placeholder: "1-5",
                  class: "review-advanced-input" %>
              <p class="review-advanced-help">1 = foarte ieftin, 5 = foarte scump</p>
            </div>
          </div>
        </div>

        <!-- Comment Body -->
        <div class="review-field-extended">
          <label class="review-label-extended">Comentariu (op»õional)</label>
          <%= f.text_area :body, 
              rows: 4,
              placeholder: t('recipes.show.write_comment'), 
              class: "review-textarea-extended" %>
        </div>

        <div class="flex justify-end">
          <%= f.submit t('recipes.show.send'), 
              data: { disable_with: false }, 
              class: "review-submit-btn" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Comments List -->
  <div id="comments-list" class="recipe-comments-list">
    <% recipe.comments.includes(:user, :review_helpfuls).order(created_at: :desc).each do |comment| %>
      <div class="recipe-comment-card" data-comment-id="<%= comment.id %>" data-rating="<%= comment.rating || 0 %>" data-helpful="<%= comment.helpful_count %>">
        <div class="flex items-start gap-4">
          <!-- Avatar -->
          <% if comment.user&.avatar&.attached? %>
            <%= image_tag url_for(comment.user.avatar.variant(resize_to_fill: [56,56])), class: "recipe-comment-avatar" %>
          <% else %>
            <div class="recipe-comment-avatar-placeholder">
              <%= comment.user&.username&.first&.upcase || 'U' %>
            </div>
          <% end %>
          
          <!-- Content -->
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-3 mb-3">
              <strong class="text-base font-bold text-primary-content"><%= comment.user&.username || "Anonim" %></strong>
              <span class="text-sm text-secondary-content"><%= time_ago_in_words(comment.created_at) %> <%= t('time.ago') %></span>
              
              <!-- Overall Rating Badge -->
              <% if comment.rating && comment.rating > 0 %>
                <span class="recipe-rating-badge">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                  <%= comment.rating %>/10
                </span>
              <% end %>
            </div>

            <!-- Advanced Ratings Display -->
            <% if comment.has_advanced_ratings? %>
              <div class="recipe-advanced-ratings-display mb-3">
                <% if comment.taste_rating.present? %>
                  <div class="recipe-rating-item">
                    <span class="recipe-rating-icon">üëÖ</span>
                    <span class="recipe-rating-value"><%= comment.taste_rating %></span>
                    <span class="recipe-rating-max">/5</span>
                    <span class="recipe-rating-label">Gust</span>
                  </div>
                <% end %>
                <% if comment.difficulty_rating.present? %>
                  <div class="recipe-rating-item">
                    <span class="recipe-rating-icon">‚öôÔ∏è</span>
                    <span class="recipe-rating-value"><%= comment.difficulty_rating %></span>
                    <span class="recipe-rating-max">/5</span>
                    <span class="recipe-rating-label">Dificultate</span>
                  </div>
                <% end %>
                <% if comment.time_rating.present? %>
                  <div class="recipe-rating-item">
                    <span class="recipe-rating-icon">‚è±Ô∏è</span>
                    <span class="recipe-rating-value"><%= comment.time_rating %></span>
                    <span class="recipe-rating-max">/5</span>
                    <span class="recipe-rating-label">Timp</span>
                  </div>
                <% end %>
                <% if comment.cost_rating.present? %>
                  <div class="recipe-rating-item">
                    <span class="recipe-rating-icon">üí∞</span>
                    <span class="recipe-rating-value"><%= comment.cost_rating %></span>
                    <span class="recipe-rating-max">/5</span>
                    <span class="recipe-rating-label">Cost</span>
                  </div>
                <% end %>
              </div>
            <% end %>

            <!-- Comment Body -->
            <p class="recipe-comment-text">
              <%= comment.body.present? ? comment.body : t('comments.rating_only') %>
            </p>

            <!-- Actions -->
            <div class="flex items-center gap-4 mt-4">
              <!-- Helpful Button -->
              <div id="<%= dom_id(comment, :helpful) %>">
                <% if user_signed_in? %>
                  <%= form_with url: toggle_helpful_recipe_comment_path(recipe, comment, locale: I18n.locale, format: :turbo_stream),
                                method: :post, data: { turbo: true }, class: "inline" do %>
                    <button type="submit" 
                            class="recipe-helpful-btn <%= 'recipe-helpful-btn-active' if comment.helpful_by?(current_user) %>">
                      <svg class="w-4 h-4" fill="<%= comment.helpful_by?(current_user) ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
                      </svg>
                      Util (<%= comment.helpful_count %>)
                    </button>
                  <% end %>
                <% else %>
                  <span class="recipe-helpful-btn">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
                    </svg>
                    Util (<%= comment.helpful_count %>)
                  </span>
                <% end %>
              </div>

              <!-- Delete Button -->
              <% if user_signed_in? && comment.user == current_user %>
                <%= form_with url: recipe_comment_path(recipe, comment, locale: I18n.locale, format: :turbo_stream),
                              method: :delete, data: { turbo: true, confirm: "E»ôti sigur cƒÉ vrei sƒÉ »ôtergi acest comentariu?" }, class: "inline" do %>
                  <button type="submit" class="recipe-delete-btn">»òterge</button>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <% if recipe.comments.empty? %>
      <div class="text-center py-12">
        <p class="text-secondary-content"><%= t('recipes.show.no_comments') %></p>
      </div>
    <% end %>
  </div>
</div>
