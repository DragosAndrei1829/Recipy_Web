<div class="max-w-4xl mx-auto mb-20 animate-fade-in">
  <!-- Header -->
  <div class="bg-card rounded-3xl shadow-2xl border-2 border-default mb-6 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-black bg-clip-text-primary text-transparent mb-2">
          <%= t('notifications.title') %>
        </h1>
        <p class="text-secondary-content">
          <%= t('notifications.subtitle', count: @unread_count) %>
        </p>
      </div>
      <% if @unread_count > 0 %>
        <%= button_to mark_all_read_notifications_path, method: :post,
            class: "px-4 py-2 rounded-xl bg-gradient-primary text-white font-semibold hover:opacity-90 transition-all" do %>
          <%= t('notifications.mark_all_read') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Notifications List -->
  <div class="space-y-4">
    <% if @notifications.any? %>
      <% @notifications.each do |notification| %>
        <%= render 'notifications/notification', notification: notification %>
      <% end %>
    <% else %>
      <div class="bg-card rounded-2xl shadow-lg border-2 border-default p-12 text-center">
        <div class="inline-block p-4 rounded-full bg-primary bg-opacity-10 mb-4">
          <svg class="h-16 w-16 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-primary-content mb-2"><%= t('notifications.empty') %></h3>
        <p class="text-secondary-content"><%= t('notifications.empty_description') %></p>
      </div>
    <% end %>
  </div>
</div>

