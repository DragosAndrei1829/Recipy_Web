<div class="min-h-screen py-8">
  <!-- Ambient Background -->
  <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-1/4 w-96 h-96 bg-violet-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/3 left-1/4 w-80 h-80 bg-emerald-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-5xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-100 dark:bg-emerald-900/30 rounded-full text-emerald-700 dark:text-emerald-300 text-sm font-medium mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <%= t('profile.settings_badge') %>
      </div>
      <h1 class="text-4xl font-black text-gray-900 dark:text-white mb-3">
        <%= t('profile.settings_title') %>
      </h1>
      <p class="text-gray-500 dark:text-gray-400 text-lg max-w-md mx-auto">
        <%= t('profile.settings_description') %>
      </p>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Left Column - Avatar & Quick Info -->
      <div class="lg:w-80 flex-shrink-0">
        <div class="lg:sticky lg:top-24 space-y-6">
          <!-- Avatar Card -->
          <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-violet-500 via-purple-500 to-fuchsia-500 rounded-3xl blur-lg opacity-25 group-hover:opacity-40 transition-opacity duration-500"></div>
            
            <div class="relative bg-white dark:bg-gray-900 rounded-3xl p-6 border border-gray-200/50 dark:border-gray-700/50 shadow-xl">
              <!-- Avatar Upload Area -->
              <div class="relative mb-6">
                <div class="relative w-40 h-40 mx-auto">
                  <!-- Decorative ring -->
                  <div class="absolute inset-0 rounded-full bg-gradient-to-r from-violet-500 via-purple-500 to-fuchsia-500 animate-spin-slow opacity-20" style="animation: spin 8s linear infinite;"></div>
                  
                  <% if resource.avatar.attached? %>
                    <%= image_tag url_for(resource.avatar.variant(resize_to_fill: [160,160])), 
                        class: 'absolute inset-1 w-[152px] h-[152px] rounded-full object-cover border-4 border-white dark:border-gray-900 shadow-2xl' %>
                  <% else %>
                    <div class="absolute inset-1 w-[152px] h-[152px] rounded-full bg-gradient-to-br from-violet-100 to-purple-100 dark:from-violet-900/30 dark:to-purple-900/30 flex items-center justify-center border-4 border-white dark:border-gray-900 shadow-2xl">
                      <svg class="w-20 h-20 text-violet-300 dark:text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </div>
                  <% end %>
                  
                  <!-- Camera icon overlay -->
                  <label for="avatar-input" class="absolute bottom-2 right-2 w-12 h-12 bg-gradient-to-r from-violet-500 to-purple-500 rounded-full flex items-center justify-center cursor-pointer shadow-lg shadow-violet-500/25 hover:shadow-xl hover:scale-110 transition-all duration-300 border-4 border-white dark:border-gray-900">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </label>
                </div>
                
                <!-- Hidden avatar form -->
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                      html: { method: :put, multipart: true, data: { turbo: false }, class: "hidden" }, 
                      id: "avatar-form") do |f| %>
                  <%= f.file_field :avatar, accept: 'image/*', 
                      class: 'hidden', 
                      id: 'avatar-input',
                      onchange: 'this.form.submit()' %>
                <% end %>
              </div>
              
              <!-- User Info -->
              <div class="text-center">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-1">
                  <%= resource.username || 'Username' %>
                </h2>
                <p class="text-gray-500 dark:text-gray-400 text-sm mb-4">
                  <%= resource.email %>
                </p>
                
                <!-- Quick stats -->
                <div class="grid grid-cols-3 gap-2 pt-4 border-t border-gray-100 dark:border-gray-800">
                  <div class="text-center">
                    <span class="block text-lg font-bold text-gray-900 dark:text-white"><%= resource.recipes.count %></span>
                    <span class="text-xs text-gray-500 dark:text-gray-400"><%= t('users.recipes_short') %></span>
                  </div>
                  <div class="text-center">
                    <span class="block text-lg font-bold text-gray-900 dark:text-white"><%= resource.followers.count %></span>
                    <span class="text-xs text-gray-500 dark:text-gray-400"><%= t('follows.followers_short') %></span>
                  </div>
                  <div class="text-center">
                    <span class="block text-lg font-bold text-gray-900 dark:text-white"><%= resource.following.count %></span>
                    <span class="text-xs text-gray-500 dark:text-gray-400"><%= t('follows.following_short') %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Quick Links -->
          <div class="bg-white dark:bg-gray-900 rounded-2xl p-4 border border-gray-200/50 dark:border-gray-700/50 shadow-lg">
            <%= link_to user_path(resource), class: "flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors group" do %>
              <div class="w-10 h-10 rounded-xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <span class="font-medium text-gray-700 dark:text-gray-200"><%= t('profile.view_profile') %></span>
              <svg class="w-4 h-4 text-gray-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
            <%= link_to favorites_path, class: "flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors group" do %>
              <div class="w-10 h-10 rounded-xl bg-rose-100 dark:bg-rose-900/30 flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-rose-600 dark:text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
              <span class="font-medium text-gray-700 dark:text-gray-200"><%= t('navigation.favorites') %></span>
              <svg class="w-4 h-4 text-gray-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right Column - Forms -->
      <div class="flex-1 min-w-0">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
              html: { method: :put, multipart: true, data: { turbo: false } }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="space-y-6">
            <!-- Personal Information Card -->
            <div class="bg-white dark:bg-gray-900 rounded-3xl border border-gray-200/50 dark:border-gray-700/50 shadow-xl overflow-hidden">
              <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-800 bg-gradient-to-r from-emerald-50 to-teal-50 dark:from-emerald-900/20 dark:to-teal-900/20">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center shadow-lg shadow-emerald-500/25">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                  </div>
                  <div>
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white"><%= t('profile.personal_info') %></h2>
                    <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('profile.personal_info_desc') %></p>
                  </div>
                </div>
              </div>
              
              <div class="p-6 space-y-5">
                <!-- Username -->
                <div>
                  <label class="flex items-center gap-2 text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                    </svg>
                    <%= t('profile.username') %>
                  </label>
                  <%= f.text_field :username, 
                      class: 'w-full px-4 py-3.5 rounded-xl border-2 border-gray-200 dark:border-gray-700 focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/10 transition-all bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-400',
                      placeholder: t('profile.username_placeholder') %>
                </div>
                
                <!-- Email (disabled) -->
                <div>
                  <label class="flex items-center gap-2 text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <%= t('profile.email') %>
                  </label>
                  <%= f.email_field :email, disabled: true,
                      class: 'w-full px-4 py-3.5 rounded-xl border-2 border-gray-200 dark:border-gray-700 bg-gray-100 dark:bg-gray-800/50 text-gray-500 dark:text-gray-400 cursor-not-allowed' %>
                  <p class="mt-2 text-xs text-gray-500 dark:text-gray-400 flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                    <%= t('profile.email_cannot_change') %>
                  </p>
                </div>
                
                <!-- Phone -->
                <div>
                  <label class="flex items-center gap-2 text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    <%= t('profile.phone') %>
                    <span class="text-xs font-normal text-gray-400">(<%= t('common.optional') %>)</span>
                  </label>
                  <%= f.text_field :phone, 
                      class: 'w-full px-4 py-3.5 rounded-xl border-2 border-gray-200 dark:border-gray-700 focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/10 transition-all bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-400',
                      placeholder: '+40 712 345 678' %>
                </div>
              </div>
            </div>
            
            <!-- Security Card -->
            <div class="bg-white dark:bg-gray-900 rounded-3xl border border-gray-200/50 dark:border-gray-700/50 shadow-xl overflow-hidden">
              <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-800 bg-gradient-to-r from-violet-50 to-purple-50 dark:from-violet-900/20 dark:to-purple-900/20">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-violet-500 to-purple-500 flex items-center justify-center shadow-lg shadow-violet-500/25">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                  </div>
                  <div>
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white"><%= t('profile.security') %></h2>
                    <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('profile.security_desc') %></p>
                  </div>
                </div>
              </div>
              
              <div class="p-6 space-y-5">
                <!-- New Password -->
                <div>
                  <label class="flex items-center gap-2 text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                    </svg>
                    <%= t('profile.new_password') %>
                  </label>
                  <%= f.password_field :password, autocomplete: "new-password",
                      class: 'w-full px-4 py-3.5 rounded-xl border-2 border-gray-200 dark:border-gray-700 focus:border-violet-500 focus:ring-4 focus:ring-violet-500/10 transition-all bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-400',
                      placeholder: t('profile.password_placeholder') %>
                  <% if @minimum_password_length %>
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                      <%= t('profile.password_min') %>
                    </p>
                  <% end %>
                </div>
                
                <!-- Confirm Password -->
                <div>
                  <label class="flex items-center gap-2 text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    <%= t('profile.confirm_password') %>
                  </label>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",
                      class: 'w-full px-4 py-3.5 rounded-xl border-2 border-gray-200 dark:border-gray-700 focus:border-violet-500 focus:ring-4 focus:ring-violet-500/10 transition-all bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-400' %>
                </div>
                
                <!-- Current Password -->
                <div class="pt-4 border-t border-gray-100 dark:border-gray-800">
                  <label class="flex items-center gap-2 text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">
                    <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                    <%= t('profile.current_password') %>
                    <span class="text-xs font-normal text-amber-500">(<%= t('common.required') %>)</span>
                  </label>
                  <%= f.password_field :current_password, autocomplete: "current-password", required: true,
                      class: 'w-full px-4 py-3.5 rounded-xl border-2 border-amber-200 dark:border-amber-700/50 focus:border-amber-500 focus:ring-4 focus:ring-amber-500/10 transition-all bg-amber-50 dark:bg-amber-900/20 text-gray-900 dark:text-white placeholder-gray-400' %>
                  <p class="mt-2 text-xs text-amber-600 dark:text-amber-400 flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    <%= t('profile.current_password_required') %>
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-4">
              <div class="flex items-center gap-3 w-full sm:w-auto">
                <%= f.submit t('common.save'),
                    class: 'flex-1 sm:flex-none px-8 py-3.5 rounded-xl bg-gradient-to-r from-emerald-500 to-teal-500 text-white font-bold shadow-lg shadow-emerald-500/25 hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300 cursor-pointer' %>
                <%= link_to t('common.cancel'), root_path,
                    class: 'flex-1 sm:flex-none px-8 py-3.5 rounded-xl bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 font-bold hover:bg-gray-200 dark:hover:bg-gray-700 transition-all text-center' %>
              </div>
              <%= link_to new_user_password_path, class: "text-sm text-violet-600 dark:text-violet-400 font-semibold hover:underline" do %>
                <%= t('profile.forgot_password') %> â†’
              <% end %>
            </div>
          </div>
        <% end %>
        
        <!-- Danger Zone -->
        <div class="mt-10 bg-white dark:bg-gray-900 rounded-3xl border-2 border-red-200 dark:border-red-900/50 shadow-xl overflow-hidden">
          <div class="px-6 py-5 border-b border-red-100 dark:border-red-900/30 bg-gradient-to-r from-red-50 to-rose-50 dark:from-red-900/20 dark:to-rose-900/20">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-red-500 to-rose-500 flex items-center justify-center shadow-lg shadow-red-500/25">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
              </div>
              <div>
                <h2 class="text-lg font-bold text-red-700 dark:text-red-400"><%= t('profile.danger_zone') %></h2>
                <p class="text-sm text-red-600/70 dark:text-red-400/70"><%= t('profile.danger_zone_description') %></p>
              </div>
            </div>
          </div>
          
          <div class="p-6">
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              <%= t('profile.delete_warning') %>
            </p>
            <%= button_to t('profile.delete_account'), registration_path(resource_name),
                data: { confirm: t('profile.delete_confirm'), turbo_confirm: t('profile.delete_confirm') },
                method: :delete,
                class: 'px-6 py-3 rounded-xl bg-red-600 text-white font-bold hover:bg-red-700 transition-all shadow-lg hover:shadow-xl' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>
