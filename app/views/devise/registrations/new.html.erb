<% content_for :layout, 'auth' %>

<!-- Minimal Split Screen Signup -->
<div class="flex h-screen w-full items-center justify-center">
  <!-- Left: Image Sidebar -->
  <div class="hidden lg:flex lg:max-w-[576px] lg:grow lg:shrink-0 lg:basis-0 flex-col items-center justify-center self-stretch">
    <div class="flex w-full grow shrink-0 basis-0 items-center justify-center overflow-hidden relative">
      <img
        class="grow shrink-0 basis-0 self-stretch object-cover absolute"
        src="https://images.unsplash.com/photo-1556911220-bff31c812dba?w=1200&q=80"
        alt="Cooking background"
      />
      <div class="flex grow shrink-0 basis-0 items-start self-stretch bg-black absolute opacity-40" />
      <div class="flex flex-col items-center gap-3 px-12 relative z-10">
        <svg class="w-12 h-12 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
        </svg>
        <h1 class="text-4xl font-bold text-white text-center">Recipy</h1>
        <p class="text-base text-white/80 text-center">Join the community</p>
      </div>
    </div>
  </div>

  <!-- Right: Form Panel -->
  <div class="flex max-w-[448px] grow shrink-0 basis-0 flex-col items-center justify-center gap-8 self-stretch px-12 py-12">
    <div class="flex w-full flex-col items-center justify-center gap-2">
      <h2 class="text-2xl font-bold text-default-font">Create account</h2>
      <p class="text-sm text-subtext-color text-center">Sign up to start your cooking journey</p>
    </div>

    <% if resource.errors.any? %>
      <div class="w-full p-3 bg-red-50 border border-red-200 text-red-800 text-sm rounded-md">
        <%= resource.errors.full_messages.first %>
      </div>
    <% end %>
    <% if alert %>
      <div class="w-full p-3 bg-red-50 border border-red-200 text-red-800 text-sm rounded-md"><%= alert %></div>
    <% end %>

    <div class="flex w-full flex-col items-start justify-center gap-6">
      <!-- Google OAuth -->
      <%= form_tag user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full" do %>
        <button type="submit" class="h-10 w-full flex items-center justify-center gap-3 px-4 py-2 bg-white border border-neutral-300 rounded-md hover:bg-neutral-50 transition-colors text-sm font-medium text-default-font">
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Continue with Google
        </button>
      <% end %>

      <!-- Divider -->
      <div class="flex w-full items-center gap-4">
        <div class="flex h-px grow shrink-0 basis-0 bg-neutral-300"></div>
        <span class="text-xs text-subtext-color">OR</span>
        <div class="flex h-px grow shrink-0 basis-0 bg-neutral-300"></div>
      </div>

      <!-- Form -->
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, data: { turbo: false }, class: "w-full space-y-4" do |form| %>
        <div>
          <label class="block text-sm font-medium text-default-font mb-1">Email</label>
          <%= form.email_field :email, autofocus: true, required: true, placeholder: "Enter your email", class: "w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary text-sm" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-default-font mb-1">Username</label>
          <%= form.text_field :username, required: true, placeholder: "Choose a username", class: "w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary text-sm" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-default-font mb-1">Password</label>
          <%= form.password_field :password, autocomplete: "new-password", required: true, placeholder: "At least 8 characters", class: "w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary text-sm" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-default-font mb-1">Confirm Password</label>
          <%= form.password_field :password_confirmation, required: true, placeholder: "Re-enter password", class: "w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary text-sm" %>
        </div>

        <%= form.submit "Sign up", class: "h-10 w-full bg-primary hover:bg-primary/90 text-white font-medium rounded-md transition-colors cursor-pointer" %>

        <div class="flex w-full items-center justify-center gap-1">
          <span class="text-sm text-subtext-color">Already have an account?</span>
          <%= link_to "Sign in", new_user_session_path, class: "text-sm font-medium text-primary hover:text-primary/80" %>
        </div>

        <p class="text-xs text-subtext-color text-center pt-2">
          By signing up you agree to our <%= link_to "Terms", terms_conditions_path, class: "text-primary hover:underline" %>
          and <%= link_to "Privacy Policy", privacy_policy_path, class: "text-primary hover:underline" %>.
        </p>
      <% end %>
    </div>
  </div>
</div>
