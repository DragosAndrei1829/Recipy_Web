<div class="auth-shell">
  <div class="auth-grid">
    <section class="auth-sidebar">
      <p class="text-xs uppercase tracking-[0.3em] text-white/60 font-semibold mb-4">RECIPY</p>
      <h2>Join the<br>Community</h2>
      <p class="text-white/80 leading-relaxed text-sm mt-4">
        CreeazÄƒ-È›i contul Ã®n Recipy È™i pÄƒstreazÄƒ toate reÈ›etele, conversaÈ›iile È™i temele preferate sincronizate Ã®ntre
        dispozitive. ExperienÈ›a vizualÄƒ È™i feed-ul se adapteazÄƒ gusturilor tale.
      </p>
      <div class="pill-list">
        <span>Zero spam</span>
        <span>Teme premium</span>
        <span>Profil culinar</span>
        <span>NotificÄƒri smart</span>
      </div>
      <div class="auth-links">
        <strong class="text-white text-sm"><%= t('devise.registrations.have_account') %></strong>
        <%= link_to t('devise.registrations.sign_in'),
                    new_user_session_path,
                    class: "sidebar-cta sidebar-cta--light" %>
      </div>
    </section>

    <section class="auth-panel">
      <h1><%= t('devise.registrations.title') %></h1>
      <p class="lead"><%= t('devise.registrations.subtitle') %></p>

      <% if resource.errors.any? %>
        <%= render 'shared/error_message', errors: resource.errors.full_messages, emoji: "ðŸ³" %>
      <% end %>

      <%- if devise_mapping.omniauthable? && resource_class.omniauth_providers.any? %>
        <div class="space-y-3 mb-6">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <% if provider == :google_oauth2 %>
              <%= button_to omniauth_authorize_path(resource_name, provider), 
                  method: :post,
                  data: { turbo: false },
                  class: "flex items-center justify-center gap-3 w-full px-4 py-3.5 bg-white border-2 border-slate-200 rounded-xl font-semibold text-slate-700 hover:bg-slate-50 hover:border-slate-300 transition-all" do %>
                <svg class="w-5 h-5" viewBox="0 0 24 24">
                  <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span>Sign Up With Google</span>
              <% end %>
            <% elsif provider == :apple %>
              <%= button_to omniauth_authorize_path(resource_name, provider), 
                  method: :post,
                  data: { turbo: false },
                  class: "flex items-center justify-center gap-3 w-full px-4 py-3.5 bg-slate-900 text-white rounded-xl font-semibold hover:bg-slate-800 transition-all" do %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
                <span>Sign Up With Apple</span>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "auth-form space-y-5" do |form| %>
        <div class="grid gap-4 md:grid-cols-2">
          <div>
            <%= form.label :email, t('devise.registrations.email'), class: "text-sm font-medium text-slate-600 mb-2 block" %>
            <%= form.email_field :email, autofocus: true, required: true %>
          </div>
          <div>
            <%= form.label :username, t('devise.registrations.username'), class: "text-sm font-medium text-slate-600 mb-2 block" %>
            <%= form.text_field :username, required: true %>
          </div>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          <div>
            <%= form.label :password, t('devise.registrations.password'), class: "text-sm font-medium text-slate-600 mb-2 block" %>
            <%= form.password_field :password, autocomplete: "new-password", required: true %>
          </div>
          <div>
            <%= form.label :password_confirmation, t('devise.registrations.password_confirmation'), class: "text-sm font-medium text-slate-600 mb-2 block" %>
            <%= form.password_field :password_confirmation, required: true %>
          </div>
        </div>

        <div class="bg-slate-50 border border-slate-200 rounded-xl p-4 text-xs text-slate-500 space-y-1">
          <p class="font-semibold text-slate-700 text-sm mb-2"><%= t('devise.registrations.password_criteria.title', default: 'Parola minim 8 caractere, include:') %></p>
          <ul class="list-disc pl-4 space-y-1">
            <li><%= t('devise.registrations.password_criteria.length') %></li>
            <li><%= t('devise.registrations.password_criteria.uppercase') %></li>
            <li><%= t('devise.registrations.password_criteria.lowercase') %></li>
            <li><%= t('devise.registrations.password_criteria.number') %></li>
            <li><%= t('devise.registrations.password_criteria.special') %></li>
          </ul>
        </div>

        <%= form.submit t('devise.registrations.sign_up'), class: "auth-btn-primary w-full justify-center" %>
      <% end %>

      <p class="text-xs text-slate-500 mt-4">
        ApÄƒsÃ¢nd pe Ã®nscriere confirmi cÄƒ ai citit <%= link_to t('footer.legal.terms'), terms_conditions_path, class: "text-emerald-600 hover:underline" %>
        È™i <%= link_to t('footer.legal.privacy'), privacy_policy_path, class: "text-emerald-600 hover:underline" %>.
      </p>
    </section>
  </div>
</div>
