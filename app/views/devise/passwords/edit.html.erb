<div class="w-full min-h-screen flex items-center justify-center bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 animate-fade-in relative overflow-hidden">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-pink-200 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute top-40 right-10 w-72 h-72 bg-emerald-200 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
    <div class="absolute -bottom-8 left-1/2 w-72 h-72 bg-teal-200 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
  </div>
  
  <div class="w-full sm:w-2/3 md:w-2/5 lg:w-1/3 xl:w-1/4 bg-card backdrop-blur-md rounded-3xl shadow-2xl px-8 py-12 flex flex-col items-center border-2 border-default animate-scale-in relative z-10">
    <div class="mb-6 flex flex-col items-center w-full">
      <div class="inline-block p-4 rounded-full bg-primary bg-opacity-10 mb-4">
        <svg class="h-12 w-12 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
      </div>
      <h2 class="text-2xl md:text-3xl font-bold mb-2 text-center text-primary-content"><%= t('devise.passwords.change_password') %></h2>
      <p class="text-secondary-content text-sm text-center mb-6"><%= t('devise.passwords.enter_new_password') %></p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "w-full" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-5">
        <%= f.label :password, t('devise.passwords.new_password'), class: "block text-sm text-primary-content font-semibold mb-2" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true,
              class: "w-full px-4 py-3 rounded-xl text-base border-2 border-default focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 transition-smooth bg-card text-primary-content" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-secondary-content mt-1">
            <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <%= t('devise.passwords.minimum_chars', count: @minimum_password_length) %>
          </p>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, t('devise.passwords.confirm_password'), class: "block text-sm text-primary-content font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
              class: "w-full px-4 py-3 rounded-xl text-base border-2 border-default focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary focus:ring-opacity-20 transition-smooth bg-card text-primary-content" %>
      </div>

      <div class="mb-6">
        <%= f.submit t('devise.passwords.change_password'), 
            class: "w-full py-3.5 rounded-xl bg-gradient-primary hover:opacity-90 text-white font-bold text-lg shadow-lg hover:shadow-xl transition-smooth hover-lift" %>
      </div>
    <% end %>

    <div class="w-full text-center">
      <%= link_to "â† #{t('devise.passwords.back_to_login')}", new_user_session_path, 
          class: "text-link hover:text-primary hover:underline transition-smooth text-sm font-semibold" %>
    </div>
  </div>
</div>
