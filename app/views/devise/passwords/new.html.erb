<!-- Minimal Split Screen Password Reset -->
<div class="flex h-screen w-full items-center justify-center bg-default-background">
  <!-- Left: Image Sidebar -->
  <div class="hidden lg:flex lg:max-w-[576px] lg:grow lg:shrink-0 lg:basis-0 flex-col items-center justify-center self-stretch">
    <div class="flex w-full grow shrink-0 basis-0 items-center justify-center overflow-hidden relative">
      <img
        class="grow shrink-0 basis-0 self-stretch object-cover absolute"
        src="https://images.unsplash.com/photo-1556910103-1c02745aae4d?w=1200&q=80"
        alt="Cooking background"
      />
      <div class="flex grow shrink-0 basis-0 items-start self-stretch bg-black absolute opacity-40" />
      <div class="flex flex-col items-center gap-3 px-12 relative z-10">
        <svg class="w-12 h-12 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"/>
        </svg>
        <h1 class="text-4xl font-bold text-white text-center">Recipy</h1>
        <p class="text-base text-white/80 text-center">Reset your password securely</p>
      </div>
    </div>
  </div>

  <!-- Right: Form Panel -->
  <div class="flex max-w-[448px] grow shrink-0 basis-0 flex-col items-center justify-center gap-8 self-stretch px-12 py-12">
    <div class="flex w-full flex-col items-center justify-center gap-2">
      <h2 class="text-2xl font-bold text-default-font">Forgot password?</h2>
      <p class="text-sm text-subtext-color text-center">We'll send you a reset link</p>
    </div>

    <% if resource.errors.any? %>
      <div class="w-full p-3 bg-red-50 border border-red-200 text-red-800 text-sm rounded-md">
        <%= resource.errors.full_messages.first %>
      </div>
    <% end %>
    <% if notice %>
      <div class="w-full p-3 bg-green-50 border border-green-200 text-green-800 text-sm rounded-md"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="w-full p-3 bg-red-50 border border-red-200 text-red-800 text-sm rounded-md"><%= alert %></div>
    <% end %>

    <div class="flex w-full flex-col items-start justify-center gap-6">
      <!-- Form -->
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full space-y-4", data: { turbo: false } }) do |f| %>
        <div>
          <label class="block text-sm font-medium text-default-font mb-1">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "Enter your email", class: "w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary text-sm" %>
        </div>

        <%= f.submit "Send reset link", class: "h-10 w-full bg-primary hover:bg-primary/90 text-white font-medium rounded-md transition-colors cursor-pointer" %>

        <div class="flex w-full items-center justify-center gap-1">
          <span class="text-sm text-subtext-color">Remember your password?</span>
          <%= link_to "Sign in", new_user_session_path, class: "text-sm font-medium text-primary hover:text-primary/80" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
