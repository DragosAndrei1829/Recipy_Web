<% if users.any? || recipes.any? %>
  <div class="py-2 max-h-96 overflow-y-auto">
    <!-- Users Section -->
    <% if users.any? %>
      <div class="px-3 py-2">
        <div class="text-xs font-semibold text-secondary-content uppercase mb-2"><%= t('search.users') %></div>
        <% users.each do |user| %>
          <%= link_to user_path(user), class: "flex items-center gap-3 px-3 py-2 hover:bg-card transition-colors rounded-lg", data: { turbo_frame: "_top" } do %>
            <% if user.avatar.attached? %>
              <%= image_tag url_for(user.avatar.variant(resize_to_fill: [40,40])), class: "h-10 w-10 rounded-full object-cover flex-shrink-0" %>
            <% else %>
              <div class="h-10 w-10 rounded-full bg-gradient-primary flex items-center justify-center text-white font-bold text-sm flex-shrink-0">
                <%= user.username&.first&.upcase || 'U' %>
              </div>
            <% end %>
            <div class="flex-1 min-w-0">
              <div class="font-semibold text-sm text-primary-content truncate"><%= user.username %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
    
    <!-- Recipes Section -->
    <% if recipes.any? %>
      <div class="px-3 py-2 <%= 'border-t border-default mt-2 pt-2' if users.any? %>">
        <div class="text-xs font-semibold text-secondary-content uppercase mb-2"><%= t('search.recipes') %></div>
        <% recipes.each do |recipe| %>
          <%= link_to recipe_path(recipe), class: "flex items-center gap-3 px-3 py-2 hover:bg-card transition-colors rounded-lg", data: { turbo_frame: "_top" } do %>
            <% if recipe.photos.attached? && recipe.photos.first.present? %>
              <%= image_tag url_for(recipe.photos.first.variant(resize_to_fill: [50,50])), class: "h-12 w-12 rounded-lg object-cover flex-shrink-0" %>
            <% else %>
              <div class="h-12 w-12 rounded-lg bg-primary bg-opacity-10 flex items-center justify-center flex-shrink-0">
                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
            <% end %>
            <div class="flex-1 min-w-0">
              <div class="font-semibold text-sm text-primary-content truncate"><%= recipe.title %></div>
              <div class="text-xs text-secondary-content truncate"><%= recipe.user.username %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% elsif query.present? %>
  <div class="px-4 py-8 text-center text-sm text-secondary-content">
    <%= t('search.no_results', query: query) %>
  </div>
<% end %>

