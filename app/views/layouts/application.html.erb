<!DOCTYPE html>
<html>
  <head>
    <title>Recipy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <% 
      # Get user's theme preference or default theme
      current_theme = if user_signed_in? && current_user.theme
        current_user.theme
      else
        SiteSetting.instance.current_theme
      end
    %>
    <% 
      site_setting = SiteSetting.instance
    %>
    <style>
      :root {
        --primary-color: <%= current_theme.primary_color %>;
        --secondary-color: <%= current_theme.secondary_color %>;
        --accent-color: <%= current_theme.accent_color %>;
        --navbar-color: <%= current_theme.navbar_color %>;
        --button-color: <%= current_theme.button_color %>;
        --link-color: <%= current_theme.link_color %>;
        --background-color: <%= current_theme.background_color %>;
        --card-background: <%= current_theme.card_background %>;
        --text-primary: <%= current_theme.text_primary %>;
        --text-secondary: <%= current_theme.text_secondary %>;
        --border-color: <%= current_theme.border_color %>;
        --success-color: <%= current_theme.success_color %>;
        --warning-color: <%= current_theme.warning_color %>;
        --error-color: <%= current_theme.error_color %>;
        --footer-background: <%= site_setting.footer_background || '#0f172a' %>;
        --footer-text: <%= site_setting.footer_text || '#ffffff' %>;
        --footer-link: <%= site_setting.footer_link || '#ffffff' %>;
        --footer-link-hover: <%= site_setting.footer_link_hover || '#a5b4fc' %>;
      }
      .bg-primary { background-color: var(--primary-color) !important; }
      .bg-secondary { background-color: var(--secondary-color) !important; }
      .bg-accent { background-color: var(--accent-color) !important; }
      .bg-navbar { background-color: var(--navbar-color) !important; }
      .bg-button { background-color: var(--button-color) !important; }
      .bg-card { background-color: var(--card-background) !important; }
      .bg-page { background-color: var(--background-color) !important; }
      .text-primary { color: var(--primary-color) !important; }
      .text-secondary { color: var(--secondary-color) !important; }
      .text-accent { color: var(--accent-color) !important; }
      .text-primary-content { color: var(--text-primary) !important; }
      .text-secondary-content { color: var(--text-secondary) !important; }
      .text-link { color: var(--link-color) !important; }
      .text-success { color: var(--success-color) !important; }
      .text-warning { color: var(--warning-color) !important; }
      .text-error { color: var(--error-color) !important; }
      .border-primary { border-color: var(--primary-color) !important; }
      .border-secondary { border-color: var(--secondary-color) !important; }
      .border-accent { border-color: var(--accent-color) !important; }
      .border-default { border-color: var(--border-color) !important; }
      .bg-gradient-primary { background: linear-gradient(to right, var(--primary-color), var(--secondary-color)) !important; }
      .bg-gradient-full { background: linear-gradient(to right, var(--primary-color), var(--secondary-color), var(--accent-color)) !important; }
      .bg-clip-text-primary { 
        background: linear-gradient(to right, var(--primary-color), var(--secondary-color), var(--accent-color)) !important; 
        -webkit-background-clip: text !important; 
        background-clip: text !important; 
      }
      .hover\:text-primary:hover { color: var(--primary-color) !important; }
      a { color: var(--link-color) !important; }
      a:hover { color: var(--primary-color) !important; }
      /* Force white text on buttons with primary/secondary/accent backgrounds */
      .bg-primary.text-white,
      .bg-secondary.text-white,
      .bg-accent.text-white,
      .bg-button.text-white,
      .bg-gradient-primary.text-white,
      .bg-gradient-full.text-white,
      button.bg-primary,
      button.bg-secondary,
      button.bg-accent,
      button.bg-button,
      button.bg-gradient-primary,
      button.bg-gradient-full,
      a.bg-primary,
      a.bg-secondary,
      a.bg-accent,
      a.bg-button,
      a.bg-gradient-primary,
      a.bg-gradient-full {
        color: #ffffff !important;
      }
    </style>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "animations", "data-turbo-track": "reload" %>
    <%= render 'layouts/theme_styles' %>
    <%= javascript_importmap_tags %>
    <%= yield :head %>
  </head>

  <body class="theme-body text-primary-content <%= 'chat-fullpage' if defined?(@full_screen_chat) && @full_screen_chat %>" style="color: var(--text-primary);" data-theme="<%= current_theme.name.downcase %>">
    <!-- Office.com Style Sidebar -->
    <%= render 'shared/office_sidebar' unless defined?(@full_screen_chat) && @full_screen_chat %>
    
    <!-- Main Content Area with Sidebar Offset -->
    <div class="main-content-wrapper" style="margin-left: 240px;">
      <!-- Top Nav - Minimal Design (Optional, can be removed) -->
      <nav class="sticky top-0 z-40 bg-card border-b border-neutral-300 dark:border-gray-700 shadow-sm" style="display: none;">
        <% if mobile_device? %>
          <!-- MOBILE NAVBAR - Single Row, Ultra Clean -->
          <div class="flex h-14 items-center justify-between px-3 gap-1">
            <!-- Left: Logo -->
            <%= link_to root_path, class: "select-none font-black text-base flex items-center gap-1.5 flex-shrink-0" do %>
              <div class="w-7 h-7 rounded-lg bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center shadow-md">
                <span class="text-white text-xs font-black">R</span>
              </div>
              <span class="bg-gradient-to-r from-emerald-500 to-teal-500 bg-clip-text text-transparent">Recipy</span>
            <% end %>
            
            <!-- Right: Compact Icons (1 row) -->
            <div class="flex items-center gap-1 flex-shrink-0">
              <% if user_signed_in? %>
                <!-- Search -->
                <button type="button" class="w-8 h-8 flex items-center justify-center rounded-lg text-primary-content/70 hover:bg-primary/10 active:scale-95 transition-all" onclick="document.getElementById('mobile-search-modal').classList.remove('hidden')">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                </button>
                
                <!-- Add Recipe -->
                <%= link_to new_recipe_path(locale: I18n.locale), class: "w-8 h-8 flex items-center justify-center rounded-lg text-primary-content/70 hover:bg-primary/10 active:scale-95 transition-all" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
                  </svg>
                <% end %>
                
                <!-- Notifications -->
                <%= link_to notifications_path(locale: I18n.locale), class: "relative w-8 h-8 flex items-center justify-center rounded-lg text-primary-content/70 hover:bg-primary/10 active:scale-95 transition-all" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                  </svg>
                  <% if current_user.unread_notifications.count > 0 %>
                    <span class="absolute -top-px -right-px w-3 h-3 bg-red-500 rounded-full"></span>
                  <% end %>
                <% end %>
                
                <!-- Menu -->
                <button id="menu-btn" class="w-8 h-8 flex items-center justify-center rounded-lg text-primary-content/70 hover:bg-primary/10 active:scale-95 transition-all" aria-label="Menu">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" d="M4 6h16M4 12h16M4 18h16"/></svg>
                </button>
              <% else %>
                <%= link_to new_user_session_path(locale: I18n.locale), class: "text-xs font-semibold text-primary-content px-3 py-1.5 rounded-lg bg-card border border-default" do %>
                  Login
                <% end %>
              <% end %>
            </div>
          </div>
          
          <!-- Mobile Search Modal - Enhanced -->
          <div id="mobile-search-modal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 animate-fade-in" onclick="this.classList.add('hidden')">
            <div class="bg-card m-4 mt-24 rounded-3xl p-5 shadow-2xl border-2 border-primary/20 animate-slide-in" onclick="event.stopPropagation()">
              <!-- Close button -->
              <button type="button" class="absolute top-3 right-3 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center" onclick="document.getElementById('mobile-search-modal').classList.add('hidden')">
                <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
              
              <div class="relative">
                <input type="text" placeholder="<%= t('navigation.search_all') %>" class="w-full pl-12 pr-4 py-4 text-base font-medium border-2 border-primary/30 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/20 focus:border-primary bg-gradient-to-r from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 shadow-inner transition-all" id="mobile-search-input" data-locale="<%= I18n.locale %>">
                <svg class="absolute left-4 top-1/2 -translate-y-1/2 h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
              <div id="mobile-search-results" class="mt-4 max-h-96 overflow-y-auto rounded-xl"></div>
            </div>
          </div>
        <% else %>
          <!-- DESKTOP NAVBAR - Minimal -->
          <div class="flex h-16 items-center gap-4 px-6 max-w-7xl mx-auto">
            <!-- Left: Logo -->
            <%= link_to root_path, class: "select-none font-black text-xl text-primary-content hover:text-primary transition-colors" do %>
              Recipy
            <% end %>

            <!-- Center: Simple Search -->
            <div class="flex-1 flex justify-center max-w-xl mx-auto">
              <div class="relative w-full">
                <input type="text" placeholder="<%= t('navigation.search_all', default: 'Search recipes...') %>" 
                  class="w-full pl-10 pr-4 py-2 text-sm border border-neutral-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary bg-card placeholder-secondary-content transition-all" 
                  id="unified-search-input" 
                  data-locale="<%= I18n.locale %>">
                <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-secondary-content" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                <div id="unified-search-results" class="absolute top-full left-0 right-0 mt-2 bg-card rounded-md shadow-lg border border-neutral-300 dark:border-gray-700 z-50 hidden max-h-96 overflow-hidden"></div>
              </div>
            </div>

            <!-- Right: Actions -->
            <div class="flex items-center gap-1 flex-shrink-0">
        <% end %>
              <% if user_signed_in? %>
                <!-- Add Recipe -->
                <%= link_to new_recipe_path(locale: I18n.locale), class: "inline-flex items-center gap-2 px-4 py-2 bg-primary text-white text-sm font-medium rounded-md hover:bg-primary/90 transition-colors" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
                  </svg>
                  <span class="hidden sm:inline"><%= t('navigation.add_recipe', default: 'New Recipe') %></span>
                <% end %>

                <!-- Notifications -->
                <%= link_to notifications_path(locale: I18n.locale), class: "relative w-10 h-10 flex items-center justify-center rounded-md text-secondary-content hover:bg-neutral-100 dark:hover:bg-gray-800 transition-colors" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                  </svg>
                  <% if current_user.unread_notifications.count > 0 %>
                    <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                  <% end %>
                <% end %>
                
                <!-- Profile Button -->
                <button type="button" class="inline-flex items-center gap-2 hover:bg-neutral-100 dark:hover:bg-gray-800 px-2 py-2 rounded-md transition-colors" id="profile-menu-button">
                  <% if current_user&.avatar&.attached? %>
                    <% begin %>
                      <%= image_tag url_for(current_user.avatar.variant(resize_to_fill: [32,32])),
                          class: "w-8 h-8 rounded-full object-cover" %>
                    <% rescue ActiveStorage::FileNotFoundError %>
                      <div class="w-8 h-8 rounded-full bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center text-white font-bold text-xs">
                        <%= (current_user.username&.first || 'U').upcase %>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="w-8 h-8 rounded-full bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center text-white font-bold text-xs">
                      <%= (current_user.username&.first || 'U').upcase %>
                    </div>
                  <% end %>
                  <svg class="h-4 w-4 text-secondary-content" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
                  </svg>
                </button>
                  
                  <!-- Simplified Profile Dropdown -->
                  <div id="profile-dropdown" class="hidden absolute right-0 mt-2 w-56 bg-card rounded-xl shadow-2xl border-2 border-default z-50 overflow-hidden">
                  <div class="py-1">
                    <%= link_to user_path(current_user, locale: I18n.locale), class: "block px-4 py-2.5 text-sm text-primary-content hover:bg-primary/10 transition-all" do %>
                      <div class="flex items-center gap-2">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                        <span><%= t('users.view_profile') %></span>
                      </div>
                    <% end %>
                    <%= link_to edit_user_registration_path(locale: I18n.locale), class: "block px-4 py-2.5 text-sm text-primary-content hover:bg-primary/10 transition-all" do %>
                      <div class="flex items-center gap-2">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        <span><%= t('navigation.edit_profile') %></span>
                      </div>
                    <% end %>
                    <%= link_to purchases_user_path(current_user, locale: I18n.locale), class: "block px-4 py-2.5 text-sm text-primary-content hover:bg-primary/10 transition-all" do %>
                      <div class="flex items-center gap-2">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                        </svg>
                        <span><%= t('navigation.my_purchases', default: 'My Purchases') %></span>
                      </div>
                    <% end %>
                    <div class="px-4 py-2.5">
                      <label class="block text-sm text-primary-content mb-2 font-semibold"><%= t('navigation.select_theme') %></label>
                      <%= form_with url: change_theme_path(locale: I18n.locale), method: :post, local: true, data: { turbo: false }, id: "theme-select-form", class: "inline-block w-full" do |f| %>
                        <%= f.select :theme_id, 
                            options_from_collection_for_select(Theme.all, :id, :name, user_signed_in? ? current_user.theme_id : Theme.default&.id),
                            {},
                            { 
                              class: "w-full px-3 py-2 text-sm border-2 border-default rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary bg-card text-primary-content",
                              onchange: "this.form.submit();",
                              id: "theme-select"
                            } %>
                      <% end %>
                    </div>
                    <div class="border-t border-default my-1"></div>
                    <%= button_to destroy_user_session_path(locale: I18n.locale), method: :delete, form: { "data-turbo": false }, class: "w-full text-left block px-4 py-2.5 text-sm text-error hover:bg-error/10 transition-all" do %>
                      <div class="flex items-center gap-2">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                        </svg>
                        <span><%= t('navigation.logout') %></span>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- Language Switch Buttons (Always Visible) -->
              <div class="flex items-center gap-1 border-l border-gray-200 pl-2 ml-1">
                <% current_locale = I18n.locale.to_s %>
                <%= link_to switch_locale_path('ro'), 
                    class: "inline-flex items-center justify-center w-9 h-9 rounded-lg text-xs font-bold transition-all duration-300 #{current_locale == 'ro' ? 'bg-gradient-primary text-white shadow-md' : 'text-gray-600 hover:bg-gray-100 hover:text-primary'}",
                    title: t('language.ro') do %>
                  RO
                <% end %>
                <%= link_to switch_locale_path('en'), 
                    class: "inline-flex items-center justify-center w-9 h-9 rounded-lg text-xs font-bold transition-all duration-300 #{current_locale == 'en' ? 'bg-gradient-primary text-white shadow-md' : 'text-gray-600 hover:bg-gray-100 hover:text-primary'}",
                    title: t('language.en') do %>
                  EN
                <% end %>
              </div>

            <% else %>
              <!-- Not Signed In: Login Button + Language -->
              <%= link_to t('navigation.login'), new_user_session_path, class: "inline-flex items-center gap-2 btn-primary px-4 py-2 text-sm" %>
              
              <!-- Language Switch Buttons (Always Visible) -->
              <div class="flex items-center gap-1 border-l border-gray-200 pl-2 ml-1">
                <% current_locale = I18n.locale.to_s %>
                <%= link_to switch_locale_path('ro'), 
                    class: "inline-flex items-center justify-center w-9 h-9 rounded-lg text-xs font-bold transition-all duration-300 #{current_locale == 'ro' ? 'bg-gradient-primary text-white shadow-md' : 'text-gray-600 hover:bg-gray-100 hover:text-primary'}",
                    title: t('language.ro') do %>
                  RO
                <% end %>
                <%= link_to switch_locale_path('en'), 
                    class: "inline-flex items-center justify-center w-9 h-9 rounded-lg text-xs font-bold transition-all duration-300 #{current_locale == 'en' ? 'bg-gradient-primary text-white shadow-md' : 'text-gray-600 hover:bg-gray-100 hover:text-primary'}",
                    title: t('language.en') do %>
                  EN
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
        <div class="nav-quick-links hidden lg:flex items-center gap-3">
          <% if user_signed_in? && current_user.user_shortcuts.any? %>
            <% current_user.user_shortcuts.ordered.each do |shortcut| %>
              <%= link_to shortcut.url, class: "nav-pill", style: "--shortcut-color: #{shortcut.color};" do %>
                <span class="indicator" style="background-color: <%= shortcut.color %>;"></span>
                <span><%= shortcut.icon %> <%= shortcut.name %></span>
              <% end %>
            <% end %>
            <%= link_to user_shortcuts_path(locale: I18n.locale), class: "nav-pill-edit", title: t('user_shortcuts.manage') do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              <span class="hidden xl:inline"><%= t('user_shortcuts.manage') %></span>
            <% end %>
          <% else %>
            <%= link_to recipes_path(locale: I18n.locale), class: "nav-pill" do %>
              <span class="indicator bg-primary/80"></span>
              <span><%= t('navigation.trending', default: 'Trending now') %></span>
            <% end %>
            <% if user_signed_in? %>
              <%= link_to favorites_path(locale: I18n.locale), class: "nav-pill" do %>
                <span class="indicator bg-rose-500"></span>
                <span><%= t('favorites.title') %></span>
              <% end %>
              <%= link_to new_recipe_path(locale: I18n.locale), class: "nav-pill nav-pill-accent" do %>
                <span class="indicator bg-emerald-500"></span>
                <span><%= t('navigation.add_recipe') %></span>
              <% end %>
              <%= link_to user_shortcuts_path(locale: I18n.locale), class: "nav-pill-edit", title: t('user_shortcuts.manage') do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                <span class="hidden xl:inline"><%= t('user_shortcuts.manage') %></span>
              <% end %>
