    <!-- Offcanvas logic and other initializations -->
    <script>
      // Initialize all page functionality
      function initializePage() {
        const currentLocale = document.documentElement.lang || '<%= I18n.locale %>';
        // Modern Sidebar Menu
        const menuBtn = document.getElementById('menu-btn');
        const closeBtn = document.getElementById('close-sidebar');
        const modernSidebar = document.getElementById('modern-sidebar');
        const sidebarOverlay = document.getElementById('sidebar-overlay');
        
        function openModernSidebar() {
          if (modernSidebar) {
            modernSidebar.classList.remove('-translate-x-full');
            if (sidebarOverlay) sidebarOverlay.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
          }
        }
        
        function closeModernSidebar() {
          if (modernSidebar) {
            modernSidebar.classList.add('-translate-x-full');
            if (sidebarOverlay) sidebarOverlay.classList.add('hidden');
            document.body.style.overflow = '';
          }
        }
        
        if (menuBtn) {
          menuBtn.replaceWith(menuBtn.cloneNode(true));
          document.getElementById('menu-btn')?.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            openModernSidebar();
          });
        }
        
        if (closeBtn) {
          closeBtn.replaceWith(closeBtn.cloneNode(true));
          document.getElementById('close-sidebar')?.addEventListener('click', closeModernSidebar);
        }
        
        if (sidebarOverlay) {
          sidebarOverlay.addEventListener('click', closeModernSidebar);
        }
        
        // Close on escape key
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape' && modernSidebar && !modernSidebar.classList.contains('-translate-x-full')) {
            closeModernSidebar();
          }
        });

        // Profile dropdown - reinitialize
        const profileButton = document.getElementById('profile-menu-button');
        const profileDropdown = document.getElementById('profile-dropdown');
        
        if (profileButton && profileDropdown) {
          // Remove old listeners by cloning
          const newButton = profileButton.cloneNode(true);
          profileButton.parentNode.replaceChild(newButton, profileButton);
          const newDropdown = document.getElementById('profile-dropdown');
          
          // Add fresh listeners
          const freshButton = document.getElementById('profile-menu-button');
          if (freshButton && newDropdown) {
            freshButton.addEventListener('click', (e) => {
              e.stopPropagation();
              e.preventDefault();
              newDropdown.classList.toggle('hidden');
            });
          }
        }
        
        // Close dropdown when clicking outside (single global listener)
        if (!window.profileDropdownHandler) {
          window.profileDropdownHandler = function(e) {
            const profileButton = document.getElementById('profile-menu-button');
            const profileDropdown = document.getElementById('profile-dropdown');
            if (profileButton && profileDropdown && 
                !profileButton.contains(e.target) && 
                !profileDropdown.contains(e.target)) {
              profileDropdown.classList.add('hidden');
            }
          };
          document.addEventListener('click', window.profileDropdownHandler);
        }


      // Unified search - reinitialize (Desktop + Mobile)
      const unifiedSearchInput = document.getElementById('unified-search-input');
      const unifiedSearchResults = document.getElementById('unified-search-results');
      const mobileSearchInput = document.getElementById('mobile-search-input');
      const mobileSearchResults = document.getElementById('mobile-search-results');
      let unifiedSearchTimeout;
      
      if (unifiedSearchInput && unifiedSearchResults) {
        // Remove old listener
        const newInput = unifiedSearchInput.cloneNode(true);
        unifiedSearchInput.parentNode.replaceChild(newInput, unifiedSearchInput);
        const freshInput = document.getElementById('unified-search-input');
        
        if (freshInput) {
          const quickMap = JSON.parse(freshInput.dataset.quickMap || '{}');
          const localeFromInput = freshInput.dataset.locale || currentLocale;

          const quickSlugFromValue = (value) => {
            if (!value) return null;
            const match = value.toLowerCase().match(/#([\w\-]+)/);
            if (match && quickMap[match[1]]) {
              return match[1];
            }
            return null;
          };

          freshInput.addEventListener('input', (e) => {
            clearTimeout(unifiedSearchTimeout);
            const query = e.target.value.trim();
            
            if (query.length < 2) {
              unifiedSearchResults.classList.add('hidden');
              return;
            }
            
            unifiedSearchTimeout = setTimeout(() => {
              const locale = localeFromInput || window.location.pathname.split('/')[1] || 'en';
              fetch(`/${locale}/search?q=${encodeURIComponent(query)}`, {
                headers: {
                  'Accept': 'text/html',
                  'X-Requested-With': 'XMLHttpRequest'
                }
              })
              .then(response => response.text())
              .then(html => {
                unifiedSearchResults.innerHTML = html;
                unifiedSearchResults.classList.remove('hidden');
              })
              .catch(() => {
                unifiedSearchResults.classList.add('hidden');
              });
            }, 300);
          });

          // Handle Enter key to navigate to search results page
          freshInput.addEventListener('keydown', (e) => {
            const value = freshInput.value.trim();
            const quickSlug = quickSlugFromValue(value);
            if (e.key === 'Enter') {
              if (quickSlug) {
                window.location.href = `/${localeFromInput}/recipes?preset=${quickSlug}`;
                return;
              }
              if (value.length >= 2) {
                window.location.href = `/${localeFromInput}/recipes?search=${encodeURIComponent(value)}`;
              }
            }
          });

          // Hide results when clicking outside (single global listener)
          if (!window.unifiedSearchResultsHandler) {
            window.unifiedSearchResultsHandler = function(e) {
              const searchInput = document.getElementById('unified-search-input');
              const searchResults = document.getElementById('unified-search-results');
              if (searchInput && searchResults &&
                  !searchInput.contains(e.target) && 
                  !searchResults.contains(e.target)) {
                searchResults.classList.add('hidden');
              }
            };
            document.addEventListener('click', window.unifiedSearchResultsHandler);
          }
        }
      }
      
      // Mobile search functionality
      if (mobileSearchInput && mobileSearchResults) {
        const newMobileInput = mobileSearchInput.cloneNode(true);
        mobileSearchInput.parentNode.replaceChild(newMobileInput, mobileSearchInput);
        const freshMobileInput = document.getElementById('mobile-search-input');
        
        if (freshMobileInput) {
          const localeFromInput = freshMobileInput.dataset.locale || currentLocale;
          
          freshMobileInput.addEventListener('input', (e) => {
            clearTimeout(unifiedSearchTimeout);
            const query = e.target.value.trim();
            
            if (query.length < 2) {
              mobileSearchResults.innerHTML = '';
              return;
            }
            
            unifiedSearchTimeout = setTimeout(() => {
              const locale = localeFromInput || window.location.pathname.split('/')[1] || 'en';
              fetch(`/${locale}/search?q=${encodeURIComponent(query)}`, {
                headers: {
                  'Accept': 'text/html',
                  'X-Requested-With': 'XMLHttpRequest'
                }
              })
              .then(response => response.text())
              .then(html => {
                mobileSearchResults.innerHTML = html;
              })
              .catch(() => {
                mobileSearchResults.innerHTML = '<p class="text-sm text-secondary-content p-4">Error loading results</p>';
              });
            }, 300);
          });
          
          freshMobileInput.addEventListener('keydown', (e) => {
            const value = freshMobileInput.value.trim();
            if (e.key === 'Enter' && value.length >= 2) {
              window.location.href = `/${localeFromInput}/recipes?search=${encodeURIComponent(value)}`;
            }
          });
        }
      }

      document.querySelectorAll('[data-quick-search]').forEach(button => {
        button.addEventListener('click', () => {
          const slug = button.dataset.quickSearch;
          if (slug) {
            window.location.href = `/${currentLocale}/recipes?preset=${slug}`;
          }
        });
      });

      document.querySelectorAll('[data-filter-toggle]').forEach(toggle => {
        const card = toggle.closest('.filters-card');
        const advancedSection = card?.querySelector('[data-filter-advanced]');
        if (!advancedSection) return;
        toggle.addEventListener('click', () => {
          advancedSection.classList.toggle('hidden');
          const expanded = toggle.getAttribute('aria-expanded') === 'true';
          toggle.setAttribute('aria-expanded', (!expanded).toString());
        });
      });

        // Stagger animation for recipe cards
        const staggerItems = document.querySelectorAll('.stagger-item');
        staggerItems.forEach((item, index) => {
          item.style.animationDelay = `${index * 0.1}s`;
        });
      }

      // Like button animation (global, doesn't need reinitialization)
      document.addEventListener('submit', (e) => {
        const form = e.target.closest('.like-button');
        if (form) {
          const button = form.querySelector('button');
          if (button) {
            button.classList.add('animate-like-pop');
            setTimeout(() => {
              button.classList.remove('animate-like-pop');
            }, 400);
          }
        }
      });

      // Page transition animation
      document.addEventListener('turbo:before-visit', () => {
        document.body.style.opacity = '0.7';
      });

      // Video timestamps functionality
      function initializeVideoTimestamps() {
        const videoPlayer = document.getElementById('recipe-video-player');
        if (!videoPlayer) return;

        const timestampsData = videoPlayer.dataset.timestamps;
        if (!timestampsData) return;

        const timestamps = JSON.parse(timestampsData);
        const timestampButtons = document.querySelectorAll('.timestamp-step');

        timestampButtons.forEach(button => {
          button.addEventListener('click', function() {
            const timestampSeconds = parseInt(this.dataset.timestamp);
            if (videoPlayer && !isNaN(timestampSeconds)) {
              videoPlayer.currentTime = timestampSeconds;
              videoPlayer.play();
              // Highlight active step
              timestampButtons.forEach(btn => btn.classList.remove('border-primary', 'bg-primary/10'));
              this.classList.add('border-primary', 'bg-primary/10');
            }
          });
        });

        // Update active step as video plays
        videoPlayer.addEventListener('timeupdate', function() {
          const currentTime = Math.floor(this.currentTime);
          timestampButtons.forEach(button => {
            const timestampSeconds = parseInt(button.dataset.timestamp);
            const nextTimestamp = Array.from(timestampButtons)
              .map(btn => parseInt(btn.dataset.timestamp))
              .filter(ts => ts > timestampSeconds)
              .sort((a, b) => a - b)[0] || videoPlayer.duration;

            if (currentTime >= timestampSeconds && currentTime < nextTimestamp) {
              timestampButtons.forEach(btn => btn.classList.remove('border-primary', 'bg-primary/10'));
              button.classList.add('border-primary', 'bg-primary/10');
            }
          });
        });
      }

      // Initialize on both DOMContentLoaded and turbo:load
      document.addEventListener('DOMContentLoaded', function() {
        initializePage();
        initializeVideoTimestamps();
      });
      document.addEventListener('turbo:load', () => {
        document.body.style.opacity = '1';
        // Animate in main content
        const main = document.querySelector('main');
        if (main) {
          main.classList.add('animate-fade-in');
        }
        // Reinitialize all functionality
        initializePage();
        initializeVideoTimestamps();
      });
    </script>
  </body>
