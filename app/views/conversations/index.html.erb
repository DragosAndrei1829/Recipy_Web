<% content_for :title, t('conversations.title', default: 'Mesaje') %>

<!-- Modern Conversations Page -->
<div class="modern-page-container">
  <!-- Modern Header -->
  <div class="modern-page-header">
    <div class="flex items-center gap-3 mb-3">
      <div class="w-1 h-12 bg-gradient-to-b from-blue-500 via-cyan-500 to-teal-500 rounded-full"></div>
      <div class="flex-1">
        <h1 class="text-4xl font-black bg-gradient-to-r from-blue-500 via-cyan-500 to-teal-500 bg-clip-text text-transparent">
          <%= t('conversations.title', default: 'Mesajele Tale') %>
        </h1>
        <p class="text-sm opacity-60 mt-1">
          <%= @conversations.count %> <%= t('conversations.total', default: 'conversații') %> · 
          <% unread = @conversations.sum { |c| c.unread_messages_count_for(current_user) rescue 0 } %>
          <span class="text-blue-500 font-semibold"><%= unread %> <%= t('conversations.unread', default: 'necitite') %></span>
        </p>
      </div>
    </div>
  </div>

  <% if @conversations.any? || (defined?(@ai_conversations) && @ai_conversations&.any?) %>
    <div class="conversations-grid">
      <!-- AI Conversations -->
      <% if defined?(@ai_conversations) && @ai_conversations&.any? %>
        <% @ai_conversations.each_with_index do |ai_conv, index| %>
          <div class="conversation-card-modern conversation-card-modern--ai" style="animation-delay: <%= index * 0.08 %>s">
            <%= link_to ai_assistant_path(locale: I18n.locale), class: "conversation-card-modern__link" do %>
              <div class="conversation-card-modern__avatar">
                <div class="avatar-modern avatar-modern--ai">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                </div>
                <span class="conversation-badge conversation-badge--ai">AI</span>
              </div>
              <div class="conversation-card-modern__content">
                <div class="conversation-card-modern__header">
                  <h3 class="conversation-card-modern__title">AI Chef</h3>
                  <% if ai_conv.last_message_at %>
                    <span class="conversation-card-modern__time"><%= time_ago_in_words(ai_conv.last_message_at) %></span>
                  <% end %>
                </div>
                <p class="conversation-card-modern__preview">
                  <%= truncate(ai_conv.title.presence || "Conversație AI", length: 60) %>
                </p>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <!-- User Conversations -->
      <% @conversations.each_with_index do |conversation, index| %>
        <% other_user = conversation.other_user(current_user) %>
        <% unread_count = conversation.unread_messages_count_for(current_user) rescue 0 %>
        <div class="conversation-card-modern <%= 'conversation-card-modern--unread' if unread_count > 0 %>" style="animation-delay: <%= (index + (@ai_conversations&.count || 0)) * 0.08 %>s">
          <%= link_to conversation_path(conversation, locale: I18n.locale), class: "conversation-card-modern__link" do %>
            <div class="conversation-card-modern__avatar">
              <% if other_user&.avatar&.attached? %>
                <%= image_tag url_for(other_user.avatar.variant(resize_to_fill: [48, 48])), 
                    class: "avatar-modern" %>
              <% else %>
                <div class="avatar-modern avatar-modern--user">
                  <%= other_user&.username&.first&.upcase || 'U' %>
                </div>
              <% end %>
              <% if unread_count > 0 %>
                <span class="conversation-badge conversation-badge--unread"><%= unread_count %></span>
              <% end %>
            </div>
            <div class="conversation-card-modern__content">
              <div class="conversation-card-modern__header">
                <h3 class="conversation-card-modern__title"><%= other_user&.username || 'Utilizator' %></h3>
                <% if conversation.messages.any? %>
                  <span class="conversation-card-modern__time"><%= time_ago_in_words(conversation.messages.last.created_at) %></span>
                <% end %>
              </div>
              <% if conversation.messages.any? %>
                <p class="conversation-card-modern__preview">
                  <%= truncate(conversation.messages.last.body, length: 80) %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="modern-empty-state">
      <div class="modern-empty-icon">
        <svg class="w-20 h-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
        </svg>
      </div>
      <h3 class="modern-empty-title"><%= t('conversations.empty', default: 'Nu ai mesaje încă') %></h3>
      <p class="modern-empty-description"><%= t('conversations.empty_description', default: 'Începe o conversație cu alți utilizatori!') %></p>
      <%= link_to recipes_path(locale: I18n.locale), class: "modern-btn-primary mt-6" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span><%= t('conversations.explore', default: 'Explorează Rețete') %></span>
      <% end %>
    </div>
  <% end %>
</div>
