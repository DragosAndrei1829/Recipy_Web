<% content_for :title, "Membri - #{@group.name}" %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to group_path(@group), class: "inline-flex items-center gap-2 text-secondary-content hover:text-emerald-600 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      ÃŽnapoi la <%= @group.name %>
    <% end %>
  </div>

  <div class="bg-card rounded-2xl border border-default overflow-hidden">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-default flex justify-between items-center">
      <div>
        <h1 class="text-xl font-bold text-primary-content">Membri</h1>
        <p class="text-secondary-content text-sm"><%= @group.members_count %> membri Ã®n grup</p>
      </div>
      
      <!-- Invite Code -->
      <div class="flex items-center gap-2 px-4 py-2 bg-emerald-50 dark:bg-emerald-900/30 rounded-xl">
        <span class="text-sm text-emerald-700 dark:text-emerald-300">Cod invitaÈ›ie:</span>
        <span class="font-mono font-bold text-emerald-600 dark:text-emerald-400"><%= @group.invite_code %></span>
        <button type="button" onclick="navigator.clipboard.writeText('<%= @group.invite_code %>')" class="p-1 hover:bg-emerald-100 dark:hover:bg-emerald-800 rounded transition-colors" title="CopiazÄƒ">
          <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Members List -->
    <div class="divide-y divide-gray-100 dark:divide-gray-700">
      <% @members.each do |membership| %>
        <div class="p-4 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
          <div class="flex items-center gap-4">
            <!-- Avatar -->
            <% if membership.user.avatar.attached? %>
              <%= image_tag membership.user.avatar.variant(resize_to_fill: [48, 48]), class: "w-12 h-12 rounded-full object-cover" %>
            <% else %>
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-pink-500 to-rose-400 flex items-center justify-center text-white font-bold text-lg">
                <%= membership.user.username&.first&.upcase || "?" %>
              </div>
            <% end %>
            
            <!-- Info -->
            <div>
              <div class="flex items-center gap-2">
                <%= link_to membership.user.username, user_path(membership.user), class: "font-medium text-primary-content hover:text-emerald-600 transition-colors" %>
                
                <% if membership.user == @group.owner %>
                  <span class="px-2 py-0.5 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-300 rounded-full text-xs">
                    ðŸ‘‘ Owner
                  </span>
                <% elsif membership.role == 'admin' %>
                  <span class="px-2 py-0.5 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full text-xs">
                    Admin
                  </span>
                <% elsif membership.role == 'moderator' %>
                  <span class="px-2 py-0.5 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-xs">
                    Moderator
                  </span>
                <% end %>
              </div>
              <p class="text-sm text-gray-500 text-secondary-content">
                S-a alÄƒturat <%= time_ago_in_words(membership.joined_at || membership.created_at) %> Ã®n urmÄƒ
              </p>
            </div>
          </div>
          
          <!-- Actions -->
          <% if @group.admin?(current_user) && membership.user != @group.owner %>
            <div class="flex items-center gap-2">
              <!-- Role Selector -->
              <%= form_with url: update_member_role_group_path(@group, user_id: membership.user.id), method: :patch, local: true, class: "inline" do |f| %>
                <%= f.select :role, [['Membru', 'member'], ['Moderator', 'moderator'], ['Admin', 'admin']], { selected: membership.role }, class: "px-3 py-1 border border-default rounded-lg bg-card text-sm text-gray-700 dark:text-gray-300", onchange: "this.form.submit()" %>
              <% end %>
              
              <!-- Remove -->
              <%= button_to remove_member_group_path(@group, user_id: membership.user.id), method: :delete, data: { turbo_confirm: "Elimini #{membership.user.username} din grup?" }, class: "p-2 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

