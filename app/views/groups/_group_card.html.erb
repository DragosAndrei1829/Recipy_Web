<%= link_to group_path(group), class: "block bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-xl transition-all duration-300 group" do %>
  <!-- Cover Image -->
  <div class="h-32 bg-gradient-to-br from-emerald-500 to-teal-600 relative">
    <% if group.cover_image.attached? %>
      <%= image_tag group.cover_image, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="absolute inset-0 flex items-center justify-center">
        <span class="text-6xl opacity-30">ðŸ‘¥</span>
      </div>
    <% end %>
    
    <!-- Privacy Badge -->
    <div class="absolute top-3 right-3">
      <% if group.is_private? %>
        <span class="px-2 py-1 bg-black/30 backdrop-blur-sm rounded-lg text-white text-xs flex items-center gap-1">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
          </svg>
          Privat
        </span>
      <% else %>
        <span class="px-2 py-1 bg-white/30 backdrop-blur-sm rounded-lg text-white text-xs">Public</span>
      <% end %>
    </div>
    
    <!-- Owner Badge -->
    <% if group.owner == current_user %>
      <div class="absolute top-3 left-3">
        <span class="px-2 py-1 bg-yellow-500/90 backdrop-blur-sm rounded-lg text-white text-xs flex items-center gap-1">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          Owner
        </span>
      </div>
    <% end %>
  </div>
  
  <!-- Content -->
  <div class="p-4">
    <h3 class="font-bold text-gray-800 dark:text-white text-lg group-hover:text-emerald-600 transition-colors truncate">
      <%= group.name %>
    </h3>
    
    <% if group.description.present? %>
      <p class="text-gray-600 dark:text-gray-400 text-sm mt-1 line-clamp-2">
        <%= truncate(group.description, length: 100) %>
      </p>
    <% end %>
    
    <!-- Stats -->
    <div class="flex items-center gap-4 mt-4 text-sm text-gray-500 dark:text-gray-400">
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <%= group.members_count %> membri
      </span>
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        <%= group.recipes_count %> reÈ›ete
      </span>
    </div>
    
    <!-- Owner info -->
    <div class="flex items-center gap-2 mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
      <% if group.owner.avatar.attached? %>
        <%= image_tag group.owner.avatar.variant(resize_to_fill: [24, 24]), class: "w-6 h-6 rounded-full object-cover" %>
      <% else %>
        <div class="w-6 h-6 rounded-full bg-gradient-to-br from-pink-500 to-rose-400 flex items-center justify-center text-white text-xs font-bold">
          <%= group.owner.username&.first&.upcase || "?" %>
        </div>
      <% end %>
      <span class="text-sm text-gray-600 dark:text-gray-400">
        Creat de <strong><%= group.owner.username %></strong>
      </span>
    </div>
  </div>
<% end %>

