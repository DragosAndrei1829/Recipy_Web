<div class="max-w-2xl mx-auto px-4 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to groups_path, class: "inline-flex items-center gap-2 text-secondary-content hover:text-emerald-600 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      ÃŽnapoi la grupuri
    <% end %>
  </div>

  <div class="bg-card rounded-2xl border border-default overflow-hidden shadow-xl">
    <!-- Header -->
    <div class="px-6 py-8 bg-gradient-to-r from-emerald-600 to-teal-500 text-white text-center">
      <div class="w-20 h-20 mx-auto mb-4 bg-card/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
        <span class="text-4xl">ðŸ‘¥</span>
      </div>
      <h1 class="text-2xl font-bold">CreeazÄƒ un grup nou</h1>
      <p class="text-white/80 mt-2">PartajeazÄƒ reÈ›ete cu prietenii È™i familia Ã®ntr-un spaÈ›iu privat</p>
    </div>
    
    <!-- Form -->
    <div class="p-6">
      <%= form_with model: @group, local: true, id: "group-form", class: "space-y-6", data: { turbo: false } do |f| %>
        <% if @group.errors.any? %>
          <div class="p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl">
            <ul class="list-disc list-inside text-red-600 dark:text-red-400 text-sm">
              <% @group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <!-- Name -->
        <div>
          <%= f.label :name, "Nume grup", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= f.text_field :name, placeholder: "Ex: ReÈ›ete pentru slÄƒbit", required: true, class: "w-full px-4 py-3 border border-default rounded-xl bg-card text-primary-content focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
        </div>
        
        <!-- Description -->
        <div>
          <%= f.label :description, "Descriere (opÈ›ional)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= f.text_area :description, rows: 3, placeholder: "Descrie scopul acestui grup...", class: "w-full px-4 py-3 border border-default rounded-xl bg-card text-primary-content focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 resize-none" %>
        </div>
        
        <!-- Cover Image -->
        <div>
          <%= f.label :cover_image, "Imagine de copertÄƒ (opÈ›ional)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <div class="space-y-3">
            <!-- Preview Container -->
            <div id="cover-image-preview" class="hidden">
              <div class="relative rounded-xl overflow-hidden border-2 border-emerald-500">
                <img id="cover-preview-img" src="" alt="Preview" class="w-full h-48 object-cover">
                <button type="button" id="remove-cover-image" class="absolute top-2 right-2 p-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
              </div>
            </div>
            
            <!-- Upload Area -->
            <div id="cover-image-upload" class="border-2 border-dashed border-default rounded-xl p-6 text-center hover:border-emerald-500 transition-colors">
              <%= f.file_field :cover_image, accept: "image/*", class: "hidden", id: "cover-image-input" %>
              <label for="cover-image-input" class="cursor-pointer">
                <svg class="w-12 h-12 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <p class="mt-2 text-sm text-secondary-content">Click pentru a Ã®ncÄƒrca o imagine</p>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-500">PNG, JPG sau GIF (max 5MB)</p>
              </label>
            </div>
          </div>
        </div>
        
        <!-- Privacy -->
        <div class="flex items-center gap-3 p-4 bg-gray-50 bg-card/50 rounded-xl">
          <%= f.check_box :is_private, checked: true, class: "w-5 h-5 text-emerald-600 border-gray-300 rounded focus:ring-emerald-500" %>
          <div>
            <%= f.label :is_private, "Grup privat", class: "font-medium text-primary-content" %>
            <p class="text-sm text-secondary-content">Doar membrii invitaÈ›i pot vedea conÈ›inutul</p>
          </div>
        </div>
        
        <!-- Info -->
        <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl">
          <p class="text-sm text-blue-700 dark:text-blue-300">
            <strong>ðŸ’¡ NotÄƒ:</strong> DupÄƒ creare, vei primi un cod de invitaÈ›ie pe care Ã®l poÈ›i distribui persoanelor pe care vrei sÄƒ le adaugi Ã®n grup.
          </p>
        </div>
        
        <!-- Submit -->
        <div class="flex gap-3">
          <%= link_to "AnuleazÄƒ", groups_path, class: "flex-1 px-4 py-3 bg-gray-100 bg-card text-gray-700 dark:text-gray-300 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors text-center" %>
          <%= f.submit "CreeazÄƒ grupul", id: "submit-btn", class: "flex-1 px-4 py-3 bg-gradient-to-r from-emerald-600 to-teal-500 text-white rounded-xl hover:from-emerald-700 hover:to-teal-600 transition-all cursor-pointer font-medium disabled:opacity-50 disabled:cursor-not-allowed" %>
        </div>
        
        <!-- Loading State -->
        <div id="loading-state" class="hidden text-center py-4">
          <div class="inline-flex items-center gap-2 text-emerald-600">
            <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Se creeazÄƒ grupul...</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Image Preview
  (function() {
    const input = document.getElementById('cover-image-input');
    const preview = document.getElementById('cover-image-preview');
    const previewImg = document.getElementById('cover-preview-img');
    const uploadArea = document.getElementById('cover-image-upload');
    const removeBtn = document.getElementById('remove-cover-image');
    
    if (input) {
      input.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function(e) {
            previewImg.src = e.target.result;
            preview.classList.remove('hidden');
            uploadArea.classList.add('hidden');
          };
          reader.readAsDataURL(file);
        }
      });
    }
    
    if (removeBtn) {
      removeBtn.addEventListener('click', function() {
        input.value = '';
        preview.classList.add('hidden');
        uploadArea.classList.remove('hidden');
        previewImg.src = '';
      });
    }
  })();
  
  // Prevent double submit and show loading state
  (function() {
    const form = document.getElementById('group-form');
    const submitBtn = document.getElementById('submit-btn');
    const loadingState = document.getElementById('loading-state');
    let isSubmitting = false;
    
    if (form) {
      form.addEventListener('submit', function(e) {
        if (isSubmitting) {
          e.preventDefault();
          return false;
        }
        
        isSubmitting = true;
        submitBtn.disabled = true;
        submitBtn.textContent = 'Se creeazÄƒ...';
        loadingState.classList.remove('hidden');
        
        // Re-enable after 10 seconds as fallback (in case of error)
        setTimeout(function() {
          if (isSubmitting) {
            isSubmitting = false;
            submitBtn.disabled = false;
            submitBtn.textContent = 'CreeazÄƒ grupul';
            loadingState.classList.add('hidden');
          }
        }, 10000);
      });
    }
  })();
</script>
