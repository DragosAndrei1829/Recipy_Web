<% content_for :title, "Chat - #{@group.name}" %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Back Link -->
  <div class="mb-4">
    <%= link_to group_path(@group), class: "inline-flex items-center gap-2 text-secondary-content hover:text-emerald-600 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      ÃŽnapoi la <%= @group.name %>
    <% end %>
  </div>

  <!-- Chat Container -->
  <div class="bg-card rounded-2xl border border-default overflow-hidden shadow-xl">
    <!-- Header -->
    <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-indigo-500 text-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-card/20 rounded-xl flex items-center justify-center backdrop-blur-sm">
            ðŸ’¬
          </div>
          <div>
            <h1 class="font-bold"><%= @group.name %></h1>
            <p class="text-white/70 text-sm"><%= @group.members_count %> membri</p>
          </div>
        </div>
        
        <%= link_to members_group_path(@group), class: "p-2 bg-card/20 rounded-lg hover:bg-card/30 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        <% end %>
      </div>
    </div>
    
    <!-- Messages -->
    <%= turbo_stream_from "group_#{@group.id}_messages" %>
    
    <div id="group-messages" class="h-[60vh] overflow-y-auto p-4 space-y-4 bg-gray-50 bg-card/50">
      <% if @messages.empty? %>
        <div class="text-center py-12">
          <span class="text-4xl">ðŸ’¬</span>
          <p class="text-gray-500 text-secondary-content mt-2">Niciun mesaj Ã®ncÄƒ. Fii primul care scrie!</p>
        </div>
      <% else %>
        <% @messages.each do |message| %>
          <%= render "groups/message", message: message %>
        <% end %>
      <% end %>
    </div>
    
    <!-- Input -->
    <div class="p-4 border-t border-default bg-card">
      <%= form_with url: send_message_group_path(@group), method: :post, local: false, id: "message-form", class: "flex gap-3" do |f| %>
        <%= f.text_field :content, placeholder: "Scrie un mesaj...", class: "flex-1 px-4 py-3 border border-default rounded-xl bg-card text-primary-content focus:ring-2 focus:ring-blue-500 focus:border-blue-500", autocomplete: "off", id: "message-input" %>
        
        <button type="submit" class="px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-500 text-white rounded-xl hover:from-blue-700 hover:to-indigo-600 transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
        </button>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const messagesContainer = document.getElementById('group-messages');
  const messageInput = document.getElementById('message-input');
  const messageForm = document.getElementById('message-form');
  
  // Scroll to bottom
  function scrollToBottom() {
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
  }
  
  scrollToBottom();
  
  // Observe for new messages
  const observer = new MutationObserver(scrollToBottom);
  observer.observe(messagesContainer, { childList: true, subtree: true });
  
  // Clear input after submit
  messageForm.addEventListener('turbo:submit-end', function() {
    messageInput.value = '';
    messageInput.focus();
  });
});
</script>

