    <div id="my-recipes-list" class="space-y-2 max-h-96 overflow-y-auto">
      <% current_user.recipes.order(created_at: :desc).limit(20).each do |recipe| %>
        <% unless @group.group_recipes.exists?(recipe: recipe) %>
          <%= form_with url: add_recipe_group_path(@group), method: :post, local: true, class: "flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors" do |f| %>
            <%= f.hidden_field :recipe_id, value: recipe.id %>
            <div class="flex items-center gap-3">
              <% if recipe.cover_photo&.attached? %>
                <%= image_tag recipe.cover_photo.variant(resize_to_fill: [48, 48]), class: "w-12 h-12 rounded-lg object-cover" %>
