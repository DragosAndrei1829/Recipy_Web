                <p class="text-xs text-gray-500 dark:text-gray-400"><%= recipe.category&.name %></p>
              </div>
            </div>
            <%= f.submit "AdaugÄƒ", class: "px-3 py-1 bg-emerald-600 text-white rounded-lg text-sm hover:bg-emerald-700 transition-colors cursor-pointer" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    
    <div class="mt-4 flex justify-end">
      <button type="button" onclick="document.getElementById('add-recipe-modal').classList.add('hidden')" class="px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
        Ãnchide
      </button>
    </div>
  </div>
</div>

<script>
  document.getElementById('add-recipe-modal').addEventListener('click', function(e) {
    if (e.target === this) {
      this.classList.add('hidden');
    }
  });
</script>

