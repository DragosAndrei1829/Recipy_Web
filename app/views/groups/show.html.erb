<% content_for :title, @group.name %>

<div class="group-view-container">
  <!-- Header -->
  <div class="group-header">
    <div class="group-header-cover">
      <% if @group.cover_image.attached? && @group.cover_image.blob.present? %>
        <%= image_tag url_for(@group.cover_image), class: "group-cover-image" %>
      <% end %>
      
      <div class="group-header-overlay">
        <div class="group-header-content">
          <div class="flex items-center gap-3">
            <h1 class="group-title"><%= @group.name %></h1>
            <% if @group.is_private? %>
              <span class="group-badge-private">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                </svg>
                Privat
              </span>
            <% end %>
          </div>
          
          <% if @group.description.present? %>
            <p class="group-description"><%= @group.description %></p>
          <% end %>
          
          <div class="group-stats">
            <span class="group-stat-item">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <%= @group.members_count %> membri
            </span>
            <span class="group-stat-item">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
              <%= @group.recipes_count %> re»õete
            </span>
            <span class="group-stat-item">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Creat <%= time_ago_in_words(@group.created_at) %> √Æn urmƒÉ
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Layout: 3 Columns -->
  <div class="group-layout">
    <!-- Left Panel: Members + Stats + Calendar -->
    <aside class="group-sidebar group-sidebar-left">
      <%= render 'groups/members_sidebar', group: @group %>
      <%= render 'groups/stats_sidebar', group: @group %>
      <%= render 'groups/calendar_sidebar', group: @group, dates_with_recipes: @dates_with_recipes %>
    </aside>

    <!-- Center: Content -->
    <main class="group-main-content">
      <!-- Action Buttons -->
      <div class="group-actions">
        <button type="button" onclick="toggleFilters()" class="group-action-btn group-action-btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
          </svg>
          Filtre
        </button>
        
        <% if @group.admin?(current_user) %>
          <%= link_to settings_group_path(@group), class: "group-action-btn group-action-btn-secondary" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            SetƒÉri
          <% end %>
        <% end %>
      </div>

      <!-- Filters Panel (Hidden by default) -->
      <div id="group-filters-panel" class="group-filters-panel hidden">
        <%= render 'groups/filters_panel', group: @group %>
      </div>

      <!-- Recipes Grid -->
      <div class="group-recipes-section">
        <div class="flex justify-between items-center mb-4">
          <h3 class="group-section-title">Re»õete √Æn grup</h3>
          <button type="button" onclick="document.getElementById('add-recipe-modal').classList.remove('hidden')" class="group-btn-add">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            AdaugƒÉ re»õetƒÉ
          </button>
        </div>
        
        <% if @group_recipes.any? %>
          <div class="group-recipes-grid">
            <% @group_recipes.each do |group_recipe| %>
              <%= render "groups/recipe_card", group_recipe: group_recipe, group: @group %>
            <% end %>
          </div>
        <% else %>
          <div class="group-empty-state">
            <span class="text-5xl">üì≠</span>
            <p class="text-secondary-content mt-2">Nu sunt re»õete √Æn acest grup √ÆncƒÉ.</p>
            <button type="button" onclick="document.getElementById('add-recipe-modal').classList.remove('hidden')" class="group-btn-primary mt-4">
              AdaugƒÉ prima re»õetƒÉ
            </button>
          </div>
        <% end %>
      </div>
    </main>

    <!-- Right Panel: Chat -->
    <aside class="group-sidebar group-sidebar-right">
      <%= render 'groups/chat_sidebar', group: @group, recent_messages: @recent_messages %>
    </aside>
  </div>
</div>

<!-- Add Recipe Modal -->
<div id="add-recipe-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
  <div class="bg-card rounded-2xl p-6 max-w-2xl w-full max-h-[80vh] overflow-y-auto shadow-2xl">
    <h3 class="text-xl font-bold text-primary-content mb-4">AdaugƒÉ o re»õetƒÉ √Æn grup</h3>
    
    <div class="mb-4">
      <input type="text" id="recipe-search" placeholder="CautƒÉ √Æn re»õetele tale..." class="w-full px-4 py-3 border border-default rounded-xl bg-card text-primary-content">
    </div>
    
    <div id="my-recipes-list" class="space-y-2 max-h-96 overflow-y-auto">
      <% current_user.recipes.order(created_at: :desc).limit(20).each do |recipe| %>
        <% unless @group.group_recipes.exists?(recipe: recipe) %>
          <%= form_with url: add_recipe_group_path(@group), method: :post, local: true, class: "flex items-center justify-between p-3 bg-gray-50 bg-card rounded-xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors" do |f| %>
            <%= f.hidden_field :recipe_id, value: recipe.id %>
            <div class="flex items-center gap-3">
              <% if recipe.cover_photo.present? && recipe.cover_photo.blob.present? %>
                <%= image_tag url_for(recipe.cover_photo.variant(resize_to_fill: [48, 48])), class: "w-12 h-12 rounded-lg object-cover" %>
              <% else %>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center text-white">
                  üçΩÔ∏è
                </div>
              <% end %>
              <div>
                <h4 class="font-medium text-primary-content"><%= recipe.title %></h4>
                <p class="text-xs text-gray-500 text-secondary-content"><%= recipe.category&.name %></p>
              </div>
            </div>
            <%= f.submit "AdaugƒÉ", class: "px-3 py-1 bg-emerald-600 text-white rounded-lg text-sm hover:bg-emerald-700 transition-colors cursor-pointer" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    
    <div class="mt-4 flex justify-end">
      <button type="button" onclick="document.getElementById('add-recipe-modal').classList.add('hidden')" class="px-4 py-2 bg-gray-100 bg-card text-gray-700 dark:text-gray-300 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
        √énchide
      </button>
    </div>
  </div>
</div>

<script>
  // Toggle filters panel
  function toggleFilters() {
    const panel = document.getElementById('group-filters-panel');
    panel.classList.toggle('hidden');
  }

  // Calendar initialization
  document.addEventListener('DOMContentLoaded', function() {
    const calendarEl = document.getElementById('group-calendar');
    const selectedDateInput = document.getElementById('selected-date');
    
    if (calendarEl) {
      // Simple calendar implementation
      const today = new Date();
      const currentMonth = today.getMonth();
      const currentYear = today.getFullYear();
      
      function renderCalendar(month, year) {
        const firstDay = new Date(year, month, 1).getDay();
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        const selectedDate = selectedDateInput.value ? new Date(selectedDateInput.value) : null;
        
        let calendarHTML = '<div class="calendar-header">';
        calendarHTML += '<button type="button" onclick="changeMonth(-1)" class="calendar-nav-btn">‚Äπ</button>';
        calendarHTML += `<span class="calendar-month-year">${new Date(year, month).toLocaleDateString('ro-RO', { month: 'long', year: 'numeric' })}</span>`;
        calendarHTML += '<button type="button" onclick="changeMonth(1)" class="calendar-nav-btn">‚Ä∫</button>';
        calendarHTML += '</div>';
        
        calendarHTML += '<div class="calendar-weekdays">';
        const weekdays = ['Lu', 'Ma', 'Mi', 'Jo', 'Vi', 'S√¢', 'Du'];
        weekdays.forEach(day => {
          calendarHTML += `<div class="calendar-weekday">${day}</div>`;
        });
        calendarHTML += '</div>';
        
        calendarHTML += '<div class="calendar-days">';
        
        // Empty cells for days before month starts
        for (let i = 0; i < firstDay; i++) {
          calendarHTML += '<div class="calendar-day empty"></div>';
        }
        
        // Days of the month
        const datesWithRecipes = JSON.parse(calendarEl.dataset.datesWithRecipes || '[]');
        for (let day = 1; day <= daysInMonth; day++) {
          const date = new Date(year, month, day);
          const dateStr = date.toISOString().split('T')[0];
          const isToday = date.toDateString() === today.toDateString();
          const isSelected = selectedDate && date.toDateString() === selectedDate.toDateString();
          const hasRecipes = datesWithRecipes.includes(dateStr);
          
          calendarHTML += `<button type="button" class="calendar-day ${isToday ? 'today' : ''} ${isSelected ? 'selected' : ''} ${hasRecipes ? 'has-recipes' : ''}" data-date="${dateStr}" onclick="selectDate('${dateStr}')">${day}</button>`;
        }
        
        calendarHTML += '</div>';
        
        calendarEl.innerHTML = calendarHTML;
      }
      
      window.changeMonth = function(delta) {
        const currentMonth = parseInt(calendarEl.dataset.month || today.getMonth());
        const currentYear = parseInt(calendarEl.dataset.year || today.getFullYear());
        const newDate = new Date(currentYear, currentMonth + delta, 1);
        calendarEl.dataset.month = newDate.getMonth();
        calendarEl.dataset.year = newDate.getFullYear();
        const datesWithRecipes = JSON.parse(calendarEl.dataset.datesWithRecipes || '[]');
        renderCalendar(newDate.getMonth(), newDate.getFullYear());
      };
      
      window.selectDate = function(date) {
        selectedDateInput.value = date;
        // Reload page with date filter
        const url = new URL(window.location);
        url.searchParams.set('date', date);
        window.location.href = url.toString();
      };
      
      // Initialize
      const initialMonth = selectedDateInput.value ? new Date(selectedDateInput.value).getMonth() : currentMonth;
      const initialYear = selectedDateInput.value ? new Date(selectedDateInput.value).getFullYear() : currentYear;
      calendarEl.dataset.month = initialMonth;
      calendarEl.dataset.year = initialYear;
      renderCalendar(initialMonth, initialYear);
    }
    
    // Modal close on outside click
    document.getElementById('add-recipe-modal')?.addEventListener('click', function(e) {
      if (e.target === this) {
        this.classList.add('hidden');
      }
    });
  });
</script>
