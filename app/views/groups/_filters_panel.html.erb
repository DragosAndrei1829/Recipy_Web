<div class="group-filters-card">
  <div class="group-filters-header">
    <h3 class="group-filters-title">Filtrează rețetele</h3>
    <button type="button" onclick="toggleFilters()" class="group-filters-close">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>
  
  <%= form_with url: group_path(group), method: :get, local: true, class: "group-filters-form" do |f| %>
    <div class="group-filters-grid">
      <div>
        <label class="group-filter-label">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          Categorie
        </label>
        <%= select_tag :category_id,
            options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
            { include_blank: "Toate categoriile",
              class: "group-filter-input" } %>
      </div>
      
      <div>
        <label class="group-filter-label">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Bucătărie
        </label>
        <%= select_tag :cuisine_id,
            options_from_collection_for_select(Cuisine.all, :id, :display_name, params[:cuisine_id]),
            { include_blank: "Toate bucătăriile",
              class: "group-filter-input" } %>
      </div>
      
      <div>
        <label class="group-filter-label">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Timp maxim (min)
        </label>
        <%= number_field_tag :max_time, params[:max_time],
            placeholder: "60",
            min: 0,
            class: "group-filter-input" %>
      </div>
      
      <div>
        <label class="group-filter-label">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
          Rating minim
        </label>
        <%= number_field_tag :min_rating, params[:min_rating],
            placeholder: "4.0",
            min: 0, max: 10, step: 0.5,
            class: "group-filter-input" %>
      </div>
    </div>
    
    <div class="group-filters-actions">
      <%= submit_tag "Aplică filtrele", class: "group-filter-submit" %>
      <%= link_to "Resetează", group_path(group), class: "group-filter-reset" %>
    </div>
  <% end %>
</div>




