<div class="collection-card">
  <%= link_to collection_path(collection, locale: I18n.locale), class: "collection-card-link" do %>
    <!-- Cover Image -->
    <div class="collection-card-cover">
      <% if collection.cover_image.attached? && collection.cover_image.blob.present? %>
        <%= image_tag url_for(collection.cover_image.variant(resize_to_fill: [400, 200])), class: "collection-card-image" %>
      <% else %>
        <div class="collection-card-placeholder">
          <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
        </div>
      <% end %>
      
      <!-- Privacy Badge -->
      <% unless collection.is_public? %>
        <div class="collection-card-privacy">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
          </svg>
          Privat
        </div>
      <% end %>
    </div>

    <!-- Content -->
    <div class="collection-card-content">
      <h3 class="collection-card-title"><%= collection.name %></h3>
      <% if collection.description.present? %>
        <p class="collection-card-description"><%= truncate(collection.description, length: 100) %></p>
      <% end %>
      
      <div class="collection-card-footer">
        <div class="collection-card-meta">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          <span><%= collection.recipes_count %> <%= collection.recipes_count == 1 ? 'rețetă' : 'rețete' %></span>
        </div>
        <% unless collection.user == current_user %>
          <div class="collection-card-author">
            <span>de <%= collection.user.username %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

