<div class="collection-recipe-card">
  <% recipe = collection_recipe.recipe %>
  <%= link_to recipe_path(recipe, locale: I18n.locale), class: "collection-recipe-link" do %>
    <!-- Image -->
    <div class="collection-recipe-image">
      <% if recipe.cover_photo.present? && recipe.cover_photo.blob.present? %>
        <%= image_tag url_for(recipe.cover_photo.variant(resize_to_fill: [300, 200])), class: "collection-recipe-img" %>
      <% else %>
        <div class="collection-recipe-placeholder">
          <span class="text-4xl">üçΩÔ∏è</span>
        </div>
      <% end %>
    </div>
    
    <!-- Content -->
    <div class="collection-recipe-content">
      <h3 class="collection-recipe-title"><%= recipe.title %></h3>
      
      <% if collection_recipe.note.present? %>
        <p class="collection-recipe-note">"<%= truncate(collection_recipe.note, length: 80) %>"</p>
      <% end %>
      
      <div class="collection-recipe-meta">
        <span class="collection-recipe-meta-item">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= recipe.time_to_make %> min
        </span>
        <span class="collection-recipe-meta-item">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
          <%= recipe.likes_count %>
        </span>
      </div>
    </div>
  <% end %>
  
  <!-- Remove Button -->
  <% if can_edit %>
    <div class="collection-recipe-actions">
      <%= button_to remove_recipe_collection_path(collection, recipe_id: recipe.id), 
          method: :delete, 
          data: { turbo_confirm: "Elimini aceastƒÉ re»õetƒÉ din colec»õie?" }, 
          class: "collection-recipe-remove" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>
    </div>
  <% end %>
</div>

