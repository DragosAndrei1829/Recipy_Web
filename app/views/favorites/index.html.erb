<% content_for :title, t('favorites.title', default: 'Rețete Favorite') %>

<!-- Modern Favorites Page -->
<div class="modern-page-container">
  <!-- Modern Header -->
  <div class="modern-page-header">
    <div class="flex items-center gap-3 mb-3">
      <div class="w-1 h-12 bg-gradient-to-b from-pink-500 via-rose-500 to-red-500 rounded-full"></div>
      <div class="flex-1">
        <h1 class="text-4xl font-black bg-gradient-to-r from-pink-500 via-rose-500 to-red-500 bg-clip-text text-transparent">
          <%= t('favorites.title', default: 'Rețetele Tale Favorite') %>
        </h1>
        <p class="text-sm opacity-60 mt-1">
          <%= @favorites.count %> <%= t('recipes.title', default: 'rețete') %> · 
          <span class="text-pink-500 font-semibold"><%= t('favorites.saved', default: 'Salvate pentru mai târziu') %></span>
        </p>
      </div>
      <%= link_to recipes_path(locale: I18n.locale), class: "modern-btn-secondary" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span><%= t('favorites.explore', default: 'Explorează') %></span>
      <% end %>
    </div>
  </div>

  <% if @favorites.any? %>
    <div class="recipe-feed-grid">
      <% @favorites.each_with_index do |recipe, index| %>
        <div class="recipe-card-wrapper" style="animation-delay: <%= index * 0.08 %>s">
          <%= render "recipes/card_minimal", recipe: recipe %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="modern-empty-state">
      <div class="modern-empty-icon">
        <svg class="w-20 h-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
        </svg>
      </div>
      <h3 class="modern-empty-title"><%= t('favorites.empty', default: 'Nu ai rețete favorite încă') %></h3>
      <p class="modern-empty-description"><%= t('favorites.empty_description', default: 'Salvează rețetele tale preferate pentru a le găsi mai ușor!') %></p>
      <%= link_to recipes_path(locale: I18n.locale), class: "modern-btn-primary mt-6" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span><%= t('favorites.discover', default: 'Descoperă Rețete') %></span>
      <% end %>
    </div>
  <% end %>
</div>
